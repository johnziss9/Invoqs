@rendermode InteractiveServer
@page "/customers"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Πελάτες - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item active" aria-current="page">Πελάτες</li>
        </ol>
    </nav>

    <!-- Error Message Alert -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Πελάτες</h2>
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <a href="/customer/new" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>
                        Προσθήκη Πελάτη
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6 col-lg-4">
                            <label class="form-label small text-muted">Αναζήτηση Πελατών</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput"
                                    placeholder="Αναζήτηση με όνομα, email ή τηλέφωνο...">
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Ταξινόμηση</label>
                            <select class="form-select" @bind="sortBy">
                                <option value="name">Όνομα</option>
                                <option value="created">Ημερομηνία Προσθήκης</option>
                                <option value="revenue">Έσοδα</option>
                                <option value="jobs">Σύνολο Εργασιών</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Φίλτρο</label>
                            <select class="form-select" @bind="filterBy">
                                <option value="all">Όλοι οι Πελάτες</option>
                                <option value="active">Με Ενεργές Εργασίες</option>
                                <option value="inactive">Χωρίς Ενεργές Εργασίες</option>
                            </select>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <small class="text-muted">
                                    Εμφάνιση @filteredCustomers.Count() από @customers.Count πελάτες
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-primary text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@customers.Count</h3>
                            <p class="mb-0 small">Σύνολο Πελατών</p>
                        </div>
                        <i class="bi bi-people fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-success text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@customers.Sum(c => c.ActiveJobs)</h3>
                            <p class="mb-0 small">Ενεργές Εργασίες</p>
                        </div>
                        <i class="bi bi-calendar-check fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-info text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@customers.Sum(c => c.CompletedJobs)</h3>
                            <p class="mb-0 small">Ολοκληρωμένες Εργασίες</p>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-warning text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">€@customers.Sum(c => c.TotalRevenue).ToString("N0")</h3>
                            <p class="mb-0 small">Συνολικά Έσοδα Ολοκληρωμένων Εργασιών</p>
                        </div>
                        <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Cards -->
    <div class="row">
        @foreach (var customer in filteredCustomers)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <CustomerCard Customer="customer" 
                            OnViewJobs="HandleViewJobs" 
                            OnDelete="HandleDeleteCustomer" />
            </div>
        }
    </div>

    @if (!filteredCustomers.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">Δεν βρέθηκαν πελάτες</h4>
            <p class="text-muted">Δοκιμάστε να προσαρμόσετε τα κριτήρια αναζήτησης ή φίλτρου</p>
            <button class="btn btn-primary" @onclick="ShowAddCustomerModal">
                <i class="bi bi-plus-lg me-1"></i>
                Προσθήκη Πρώτου Πελάτη
            </button>
        </div>
    }
</div>