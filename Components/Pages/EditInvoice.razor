@rendermode InteractiveServer
@page "/invoice/{invoiceId:int}/edit"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Edit Invoice - @(invoice?.InvoiceNumber ?? "Loading...") - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/invoices" class="text-decoration-none">Invoices</a></li>
            <li class="breadcrumb-item"><a href="/invoice/@InvoiceId"
                    class="text-decoration-none">@(invoice?.InvoiceNumber ?? "Invoice")</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Invoice</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Edit Invoice</h2>
                    @if (selectedCustomer != null)
                    {
                        <p class="text-muted mb-0">Customer: @selectedCustomer.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (invoice == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Invoice not found or an error occurred while loading.
        </div>
    }
    else if (invoice.Status != InvoiceStatus.Draft)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Only draft invoices can be edited. This invoice has status: @invoice.Status
            <div class="mt-3">
                <a href="/invoice/@InvoiceId" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Invoice
                </a>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="invoice" OnValidSubmit="HandleUpdateInvoice" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />

            <div class="row">
                <!-- Job Selection Panel -->
                <div class="col-lg-8">
                    <!-- Invoice Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Invoice Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Invoice Number (Read-only) -->
                                <div class="col-md-6">
                                    <label class="form-label">Invoice Number</label>
                                    <input type="text" class="form-control" value="@invoice.InvoiceNumber" readonly />
                                    <div class="form-text">Invoice number cannot be changed</div>
                                </div>

                                <!-- Customer (Read-only) -->
                                <div class="col-md-6">
                                    <label class="form-label">Customer</label>
                                    <input type="text" class="form-control" value="@selectedCustomer?.Name" readonly />
                                    <div class="form-text">Customer cannot be changed for existing invoice</div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Due Date</label>
                                    <InputDate @bind-Value="invoice.DueDate" class="@GetFieldErrorClass("DueDate")" />
                                    <ValidationMessage For="@(() => invoice.DueDate)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("DueDate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("DueDate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">VAT Rate (%)</label>
                                    <InputNumber @bind-Value="invoice.VatRate" @bind-Value:after="RecalculateTotals"
                                        class="@GetFieldErrorClass("VatRate")" step="0.01" />
                                    @if (validationErrors?.GetFieldErrors("VatRate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("VatRate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                    <div class="form-text">Rate automatically set based on job types</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Notes</label>
                                    <InputTextArea @bind-Value="invoice.Notes" class="@GetFieldErrorClass("Notes")" rows="3"
                                        placeholder="Any additional notes for this invoice..." />
                                    @if (validationErrors?.GetFieldErrors("Notes").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Notes"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Jobs Section -->
                    @if (!availableJobs.Any() && !selectedJobIds.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            No completed jobs available for this customer. The current invoice jobs will be preserved, but you
                            cannot add new jobs.
                        </div>
                    }
                    else if (availableJobs.Any())
                    {
                        <!-- Job Filters -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="row g-3 align-items-end">
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Start Date</label>
                                                <InputDate @bind-Value="filterStartDate" @bind-Value:after="FilterJobs"
                                                    class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">End Date</label>
                                                <InputDate @bind-Value="filterEndDate" @bind-Value:after="FilterJobs"
                                                    class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Address</label>
                                                <select @bind="filterAddress" @bind:after="FilterJobs" class="form-select">
                                                    <option value="">All Addresses</option>
                                                    @foreach (var address in GetUniqueAddresses())
                                                    {
                                                        <option value="@address">@address</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Job Type</label>
                                                <select @bind="filterJobType" @bind:after="FilterJobs" class="form-select">
                                                    <option value="">All Types</option>
                                                    <option value="SkipRental">Skip Rental</option>
                                                    <option value="SandDelivery">Sand Delivery</option>
                                                    <option value="ForkLiftService">Fork Lift Service</option>
                                                </select>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Actions</label>
                                                <div class="btn-group w-100" role="group">
                                                    <button type="button" class="btn btn-outline-primary btn-sm"
                                                        @onclick="SelectAllVisible">
                                                        Select All
                                                    </button>
                                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                                        @onclick="ClearAllSelected">
                                                        Clear All
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <small class="text-muted">
                                                    @filteredJobs.Count() of @availableJobs.Count jobs shown
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Available Jobs -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0">Available Jobs (@selectedJobIds.Count selected)</h5>
                            </div>
                            <div class="card-body">
                                @if (!filteredJobs.Any())
                                {
                                    <div class="text-center py-4 text-muted">
                                        <i class="bi bi-funnel" style="font-size: 3rem;"></i>
                                        <p class="mt-2">No jobs match the current filters</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        @foreach (var job in filteredJobs)
                                        {
                                            <div class="col-12 mb-3">
                                                <div class="job-selection-card @(selectedJobIds.Contains(job.Id) ? "selected" : "")"
                                                    @onclick="() => ToggleJobSelection(job.Id)">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                            checked="@selectedJobIds.Contains(job.Id)"
                                                            @onchange="() => ToggleJobSelection(job.Id)">
                                                        <div class="job-info">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mb-1">@job.Title</h6>
                                                                    <p class="text-muted small mb-1">@job.TypeDisplayName</p>
                                                                    <p class="text-muted small mb-1">
                                                                        <i class="bi bi-geo-alt me-1"></i>@job.Address
                                                                    </p>
                                                                    <p class="text-muted small mb-0">
                                                                        <i class="bi bi-calendar me-1"></i>
                                                                        @job.StartDate.ToString("dd/MM/yyyy")
                                                                        @if (job.EndDate.HasValue && job.EndDate != job.StartDate)
                                                                        {
                                                                            <span> - @job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                                                        }
                                                                    </p>
                                                                </div>
                                                                <div class="text-end">
                                                                    <div class="h5 mb-1 text-success">@job.FormattedPrice</div>
                                                                    <small class="text-muted">excl. VAT</small>
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(job.Description))
                                                            {
                                                                <p class="text-muted small mt-2 mb-0">@job.Description</p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Currently Selected Jobs (from original invoice) -->
                    @if (originalSelectedJobs.Any())
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-warning text-dark py-3">
                                <h5 class="mb-0">
                                    <i class="bi bi-info-circle me-2"></i>Jobs from Original Invoice
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">These jobs were included in the original invoice. You can remove them
                                    if needed.</p>
                                <div class="row">
                                    @foreach (var job in originalSelectedJobs)
                                    {
                                        <div class="col-12 mb-3">
                                            <div class="job-selection-card @(selectedJobIds.Contains(job.Id) ? "selected" : "")"
                                                @onclick="() => ToggleJobSelection(job.Id)">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        checked="@selectedJobIds.Contains(job.Id)"
                                                        @onchange="() => ToggleJobSelection(job.Id)">
                                                    <div class="job-info">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div class="flex-grow-1">
                                                                <h6 class="mb-1">@job.Title</h6>
                                                                <p class="text-muted small mb-1">@job.TypeDisplayName</p>
                                                                <p class="text-muted small mb-1">
                                                                    <i class="bi bi-geo-alt me-1"></i>@job.Address
                                                                </p>
                                                                <p class="text-muted small mb-0">
                                                                    <i class="bi bi-calendar me-1"></i>
                                                                    @job.StartDate.ToString("dd/MM/yyyy")
                                                                    @if (job.EndDate.HasValue && job.EndDate != job.StartDate)
                                                                    {
                                                                        <span> - @job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                                                    }
                                                                </p>
                                                            </div>
                                                            <div class="text-end">
                                                                <div class="h5 mb-1 text-success">@job.FormattedPrice</div>
                                                                <small class="text-muted">excl. VAT</small>
                                                            </div>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(job.Description))
                                                        {
                                                            <p class="text-muted small mt-2 mb-0">@job.Description</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary"
                                        disabled="@(!selectedJobIds.Any() || isSaving)">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"
                                                aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-save me-1"></i>
                                        }
                                        @(isSaving ? "Updating..." : "Update Invoice")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Preview Sidebar -->
                <div class="col-lg-4">
                    <!-- Customer Info -->
                    @if (selectedCustomer != null)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h6 class="mb-0">Customer Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="small">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Name:</span>
                                        <span class="fw-medium">@selectedCustomer.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Email:</span>
                                            <a href="mailto:@selectedCustomer.Email"
                                                class="fw-medium text-decoration-none">@selectedCustomer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Phone))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Phone:</span>
                                            <a href="tel:@selectedCustomer.Phone"
                                                class="fw-medium text-decoration-none">@selectedCustomer.Phone</a>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Created:</span>
                                        <span class="fw-medium">@selectedCustomer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-3">
                                        <span class="text-muted">Last Updated:</span>
                                        <span class="fw-medium">@((selectedCustomer.UpdatedDate ??
                                                                                selectedCustomer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                    </div>

                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (selectedCustomer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((selectedCustomer.ActiveJobs + selectedCustomer.NewJobs)) ongoing jobs
                                                </span>
                                            </div>
                                        }
                                        else if (selectedCustomer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Last job completed
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    No jobs yet
                                                </span>
                                            </div>
                                        }
                                    </div>

                                <!-- Financial Status -->
                                @if (selectedCustomer.UninvoicedJobs > 0)
                                {
                                    <div class="mb-1">
                                        <span class="text-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            @selectedCustomer.UninvoicedJobs uninvoiced jobs
                                        </span>
                                    </div>
                                }

                                @if (selectedCustomer.UnpaidInvoices > 0)
                                {
                                    <div>
                                        <span class="text-danger">
                                            <i class="bi bi-currency-pound me-1"></i>
                                            @selectedCustomer.UnpaidInvoices unpaid (@selectedCustomer.OutstandingAmount.ToString("C"))
                                        </span>
                                    </div>
                                }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Invoice Summary -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Invoice Summary</h6>
                        </div>
                        <div class="card-body">
                            @if (!selectedJobIds.Any())
                            {
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Select jobs to update invoice</p>
                                </div>
                            }
                            else
                            {
                                <div class="invoice-summary">
                                    <div class="summary-row">
                                        <span>Jobs Selected:</span>
                                        <span class="fw-bold">@selectedJobIds.Count</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">£@invoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>VAT (@invoice.VatRate.ToString("N1")%):</span>
                                        <span class="fw-bold">£@invoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="summary-row fs-5">
                                        <span class="fw-bold">Total:</span>
                                        <span class="fw-bold text-primary">£@invoice.Total.ToString("N2")</span>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">Due: @invoice.DueDate.ToString("dd MMMM yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/invoice/@InvoiceId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>
                                    View Invoice
                                </a>
                                @if (selectedCustomer != null)
                                {
                                    <a href="/customer/@selectedCustomer.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-person me-1"></i>
                                        View Customer
                                    </a>
                                    <a href="/customer/@selectedCustomer.Id/jobs" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-briefcase me-1"></i>
                                        Customer Jobs
                                    </a>
                                    <a href="/customer/@selectedCustomer.Id/invoices" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-file-earmark-text me-1"></i>
                                        Customer Invoices
                                    </a>
                                }
                                <hr class="my-2">
                                <a href="/invoices" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-list me-1"></i>
                                    All Invoices
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>