@rendermode InteractiveServer
@page "/receipt/{receiptId:int}"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>@(receipt?.ReceiptNumber ?? "Loading...") - Receipt Details - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/receipts" class="text-decoration-none">Receipts</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(receipt?.ReceiptNumber ?? "Receipt Details")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Receipt @(receipt?.ReceiptNumber ?? "Loading...")</h2>
                    @if (receipt != null)
                    {
                        <p class="text-muted mb-0">
                            Created on @receipt.CreatedDate.ToString("dd MMMM yyyy")
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (receipt == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Receipt not found or an error occurred while loading.
            <div class="mt-3">
                <a href="/receipts" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Receipts
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Payment Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-credit-card me-2"></i>Payment Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-medium">Total Amount Paid</label>
                                <div class="form-control-plaintext">
                                    <h3 class="text-success mb-0">
                                        <i class="bi bi-currency-pound me-1"></i>@receipt.TotalAmount.ToString("N2")
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-person-vcard me-2"></i>Customer Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-medium">Customer Name</label>
                                <div class="form-control-plaintext">
                                    @if (receipt.CustomerIsDeleted)
                                    {
                                        <span class="text-decoration-line-through text-muted">
                                            <i class="bi bi-person me-2"></i>@receipt.CustomerName
                                        </span>
                                        <span class="badge bg-secondary ms-2">Deleted</span>
                                    }
                                    else
                                    {
                                        <a href="/customer/@receipt.CustomerId" class="text-decoration-none">
                                            <i class="bi bi-person me-2"></i>@receipt.CustomerName
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Email Address</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(receipt.CustomerEmail))
                                    {
                                        <a href="mailto:@receipt.CustomerEmail" class="text-decoration-none">
                                            <i class="bi bi-envelope me-2"></i>@receipt.CustomerEmail
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Phone Number</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(receipt.CustomerPhone))
                                    {
                                        <a href="tel:@receipt.CustomerPhone" class="text-decoration-none">
                                            <i class="bi bi-telephone me-2"></i>@receipt.CustomerPhone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoices Covered -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-text me-2"></i>Invoices Covered
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Invoice #</th>
                                        <th>Invoice Date</th>
                                        <th class="text-end">Invoice Amount</th>
                                        <th>Payment Date</th>
                                        <th>Payment Method</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in receipt.Invoices)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-medium text-primary">@invoice.InvoiceNumber</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@invoice.InvoiceDate.ToString("dd MMM yyyy")</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium">£@invoice.AllocatedAmount.ToString("N2")</span>
                                            </td>
                                            <td>
                                                @if (invoice.PaymentDate.HasValue)
                                                {
                                                    <span class="text-muted">@invoice.PaymentDate.Value.ToString("dd MMM yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(invoice.PaymentMethod))
                                                {
                                                    <span class="badge bg-info">@invoice.PaymentMethod</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a href="/invoice/@invoice.InvoiceId" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="2" class="text-end fw-bold">Total:</td>
                                        <td class="text-end fw-bold text-success">
                                            £@receipt.TotalAmount.ToString("N2")
                                        </td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Receipt Actions -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Receipt Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (!receipt.CustomerIsDeleted)
                            {
                                @if (!receipt.IsSent)
                                {
                                    <button class="btn btn-success btn-sm" @onclick="() => showSendConfirmation = true"
                                        disabled="@isSending">
                                        @if (isSending)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-send me-1"></i>
                                        }
                                        Send Receipt
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm" @onclick="ResendReceipt" disabled="@isSending">
                                        @if (isSending)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-envelope me-1"></i>
                                        }
                                        Resend Receipt
                                    </button>
                                }
                            }
                            <button class="btn btn-primary btn-sm"
                                @onclick="() => DownloadReceipt(receipt.Id, receipt.ReceiptNumber)"
                                disabled="@isDownloading">
                                @if (isDownloading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                else
                                {
                                    <i class="bi bi-download me-1"></i>
                                }
                                Download PDF
                            </button>
                            <hr class="my-2">
                            <button class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteConfirmation">
                                <i class="bi bi-trash me-1"></i>
                                Delete Receipt
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Receipt Summary -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Receipt Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-12">
                                <div class="border rounded p-3 bg-light">
                                    <div class="h4 text-primary mb-1">@receipt.Invoices.Count</div>
                                    <small class="text-muted">Invoice(s) Covered</small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="border rounded p-3 bg-light">
                                    <div class="h4 text-success mb-1">£@receipt.TotalAmount.ToString("N2")</div>
                                    <small class="text-muted">Total Amount Paid</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Receipt Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Receipt Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Receipt #:</span>
                                <span class="fw-medium">@receipt.ReceiptNumber</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Status:</span>
                                @if (receipt.IsSent)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Sent
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-clock me-1"></i>Not Sent
                                    </span>
                                }
                            </div>
                            @if (receipt.IsSent && receipt.SentDate.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Sent On:</span>
                                    <span class="fw-medium">@receipt.SentDate.Value.ToString("dd/MM/yyyy")</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Created:</span>
                                <span class="fw-medium">@receipt.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/receipts/new" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-plus-lg me-1"></i>
                                Create New Receipt
                            </a>
                            @if (!receipt.CustomerIsDeleted)
                            {
                                <a href="/customer/@receipt.CustomerId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-person me-1"></i>
                                    View Customer
                                </a>
                                <a href="/customer/@receipt.CustomerId/jobs" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-receipt me-1"></i>
                                    Customer Jobs
                                </a>
                                <a href="/customer/@receipt.CustomerId/invoices" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-receipt me-1"></i>
                                    Customer Invoices
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* Send/Resend Confirmation Modal *@
@if (showSendConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(receipt!.IsSent ? "Resend" : "Send") Receipt</h5>
                    <button type="button" class="btn-close" @onclick="HideSendConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-envelope text-primary" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">@(receipt!.IsSent ? "Resend" : "Send") Receipt to Customer?</h5>
                        <p class="text-muted">
                            This will @(receipt!.IsSent ? "resend" : "send") receipt
                            <strong>@receipt?.ReceiptNumber</strong> to
                            <strong>@receipt?.CustomerName</strong>.
                        </p>
                        @if (!string.IsNullOrEmpty(receipt?.CustomerEmail))
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Receipt will be sent to: <strong>@receipt.CustomerEmail</strong>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Warning:</strong> Customer email address is not available.
                            </div>
                        }
                        @if (receipt!.IsSent && receipt.SentDate.HasValue)
                        {
                            <div class="alert alert-secondary">
                                <i class="bi bi-clock-history me-2"></i>
                                Previously sent on: <strong>@receipt.SentDate.Value.ToString("dd MMM yyyy 'at' HH:mm")</strong>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideSendConfirmation">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmSend"
                        disabled="@(isSending || string.IsNullOrEmpty(receipt?.CustomerEmail))">
                        @if (isSending)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-send me-1"></i>
                        }
                        @(isSending ? "Sending..." : receipt!.IsSent ? "Resend Receipt" : "Send Receipt")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Receipt</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure?</h5>
                        <p class="text-muted">
                            This will delete receipt <strong>@receipt?.ReceiptNumber</strong>.
                            This action cannot be undone.
                        </p>
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle me-2"></i>
                            This receipt covers @receipt?.Invoices.Count invoice(s) totaling
                            <strong>£@receipt?.TotalAmount.ToString("N2")</strong>.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Deleting..." : "Delete Receipt")
                    </button>
                </div>
            </div>
        </div>
    </div>
}