@rendermode InteractiveServer
@page "/customer/{customerId:int}/edit"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Επεξεργασία Πελάτη - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
            <li class="breadcrumb-item active" aria-current="page">Επεξεργασία Πελάτη</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Επεξεργασία Πελάτη</h2>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (customer == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Ο πελάτης δεν βρέθηκε ή προέκυψε σφάλμα κατά τη φόρτωση.
        </div>
    }
    else
    {
        <EditForm Model="customer" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />

            <div class="row">
                <!-- Main Form -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Πληροφορίες Πελάτη</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Customer Name -->
                                <div class="col-12">
                                    <label class="form-label required">Όνομα Πελάτη</label>
                                    <InputText @bind-Value="customer.Name" class="@GetFieldErrorClass("Name")"
                                        placeholder="Εισάγετε όνομα πελάτη" />
                                    <ValidationMessage For="@(() => customer.Name)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Name").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Name"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Email and Phone -->
                                <div class="col-md-6">
                                    <label class="form-label required">Email</label>
                                    <InputText @bind-Value="customer.Email" class="@GetFieldErrorClass("Email")" type="email"
                                        placeholder="customer@example.com" />
                                    <ValidationMessage For="@(() => customer.Email)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Email").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Email"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Αριθμός Τηλεφώνου</label>
                                    <InputText @bind-Value="customer.Phone" class="@GetFieldErrorClass("Phone")"
                                        placeholder="01234 567890" />
                                    <ValidationMessage For="@(() => customer.Phone)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Phone").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Phone"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Additional Fields -->
                                <div class="col-md-6">
                                    <label class="form-label">Αριθμός Μητρώου Εταιρείας</label>
                                    <InputText @bind-Value="customer.CompanyRegistrationNumber" class="@GetFieldErrorClass("CompanyRegistrationNumber")"
                                        placeholder="Προαιρετικό" />
                                    @if (validationErrors?.GetFieldErrors("CompanyRegistrationNumber").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("CompanyRegistrationNumber"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Αριθμός ΦΠΑ</label>
                                    <InputText @bind-Value="customer.VatNumber" class="@GetFieldErrorClass("VatNumber")"
                                        placeholder="Προαιρετικό" />
                                    @if (validationErrors?.GetFieldErrors("VatNumber").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("VatNumber"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Notes -->
                                <div class="col-12">
                                    <label class="form-label">Σημειώσεις</label>
                                    <InputTextArea @bind-Value="customer.Notes" class="@GetFieldErrorClass("Notes")" rows="4"
                                        placeholder="Οποιεσδήποτε πρόσθετες σημειώσεις για αυτόν τον πελάτη..." />
                                    @if (validationErrors?.GetFieldErrors("Notes").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Notes"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Ακύρωση
                                    </a>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @(isSaving ? "Αποθήκευση..." : "Αποθήκευση Αλλαγών")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Customer Stats -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Στατιστικά Πελάτη</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center g-3">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 text-primary mb-1">@customer.ActiveJobs</div>
                                        <small class="text-muted">Ενεργές</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 text-secondary mb-1">@customer.NewJobs</div>
                                        <small class="text-muted">Προγραμματισμένες</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 text-success mb-1">@customer.CompletedJobs</div>
                                        <small class="text-muted">Ολοκληρωμένες</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 text-danger mb-1">@customer.CancelledJobs</div>
                                        <small class="text-muted">Ακυρωμένες</small>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="border rounded p-2">
                                        <div class="h4 text-warning mb-1">€@customer.TotalRevenue.ToString("N0")</div>
                                        <small class="text-muted">Συνολικά Έσοδα</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Details -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Λεπτομέρειες Πελάτη</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Δημιουργήθηκε:</span>
                                    <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                    <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>
                                
                                <!-- Work Status -->
                                <div class="pb-2 border-bottom mb-2">
                                    @if (customer.HasActiveWork)
                                    {
                                        <div class="mb-1">
                                            <span class="text-success">
                                                <i class="bi bi-briefcase me-1"></i>
                                                @((customer.ActiveJobs + customer.NewJobs)) εργασίες σε εξέλιξη
                                            </span>
                                        </div>
                                    }
                                    else if (customer.CompletedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Τελευταία εργασία ολοκληρώθηκε
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-clock-history me-1"></i>
                                                Δεν υπάρχουν εργασίες ακόμα
                                            </span>
                                        </div>
                                    }
                                </div>
                                
                                <!-- Financial Status -->
                                @if (customer.UninvoicedJobs > 0)
                                {
                                    <div class="mb-1">
                                        <span class="text-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            @customer.UninvoicedJobs εργασίες χωρίς τιμολόγηση
                                        </span>
                                    </div>
                                }
                                
                                @if (customer.UnpaidInvoices > 0)
                                {
                                    <div>
                                        <span class="text-danger">
                                            @customer.UnpaidInvoices απλήρωτα (€@customer.OutstandingAmount.ToString("N2"))
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Γρήγορες Ενέργειες</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/customer/@customer.Id/jobs" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    Προβολή Εργασιών
                                </a>
                                <button type="button" class="btn btn-outline-success btn-sm" @onclick="CreateNewJob">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    Δημιουργία Νέας Εργασίας
                                </button>
                                <a href="/customer/@customer.Id/invoice/new" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-receipt-cutoff me-1"></i>
                                    Δημιουργία Τιμολογίου
                                </a>
                                <hr class="my-2">
                                <button type="button" class="btn btn-outline-danger btn-sm"
                                    @onclick="ShowDeleteConfirmation">
                                    <i class="bi bi-trash me-1"></i>
                                    Διαγραφή Πελάτη
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Πελάτη</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτή η ενέργεια θα διαγράψει οριστικά τον/την <strong>@customer?.Name</strong> και όλα τα σχετικά δεδομένα.
                            Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                        </p>
                        @if (customer?.ActiveJobs > 0 || customer?.CompletedJobs > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Αυτός ο πελάτης έχει @((customer.ActiveJobs + customer.CompletedJobs)) σχετικές εργασίες που θα παραμείνουν στο σύστημα.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Πελάτη")
                    </button>
                </div>
            </div>
        </div>
    </div>
}