@rendermode InteractiveServer
@page "/customer/{customerId:int}/address/{address}"
@using Invoqs.Components.UI
@using Invoqs.Models
@inherits CustomerAddressJobsBase

<PageTitle>Εργασίες στη @Address - @customerName - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
            <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">Εργασίες @customerName</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Address</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="bi bi-geo-alt me-2"></i>Εργασίες στη @Address
                    </h2>
                    <p class="text-muted mb-0">Πελάτης: @customerName • @filteredJobs.Count() από @jobs.Count εργασίες</p>
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <a href="/customer/@CustomerId" class="btn btn-outline-secondary">
                        <i class="bi bi-person-fill me-1"></i>
                        Προβολή Πελάτη
                    </a>
                    <a href="/customer/@CustomerId/job/new?returnUrl=@Uri.EscapeDataString(Navigation.Uri)" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>
                        Προσθήκη Εργασίας
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
        </div>
    }
    else
    {
        <!-- Customer Info Card -->
        @if (customer != null)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle bg-primary text-white me-3">
                                    @GetInitials(customer.Name)
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">@customer.Name</h5>
                                    <div class="text-muted small">
                                        <i class="bi bi-envelope me-1"></i>@customer.Email
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-telephone me-1"></i>@customer.Phone
                                    </div>
                                    @if (!string.IsNullOrEmpty(customer.Notes))
                                    {
                                        <div class="text-muted small mt-1">
                                            <i class="bi bi-info-circle me-1"></i>@customer.Notes
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(customer.VatNumber) || !string.IsNullOrEmpty(customer.CompanyRegistrationNumber))
                                {
                                    <div class="text-end text-muted small">
                                        @if (!string.IsNullOrEmpty(customer.CompanyRegistrationNumber))
                                        {
                                            <div>Αριθμός Μητρώου: @customer.CompanyRegistrationNumber</div>
                                        }
                                        @if (!string.IsNullOrEmpty(customer.VatNumber))
                                        {
                                            <div>ΑΦΜ: @customer.VatNumber</div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Address Stats Cards -->
        <div class="row mb-4">
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-secondary text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.New)</h3>
                                <p class="mb-0 small">Νέες Εργασίες</p>
                            </div>
                            <i class="bi bi-clock fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-primary text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Active)</h3>
                                <p class="mb-0 small">Ενεργές Εργασίες</p>
                            </div>
                            <i class="bi bi-play-circle fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-success text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Completed)</h3>
                                <p class="mb-0 small">Ολοκληρωμένες</p>
                            </div>
                            <i class="bi bi-check-circle fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-danger text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Cancelled)</h3>
                                <p class="mb-0 small">Ακυρωμένες</p>
                            </div>
                            <i class="bi bi-x-circle fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-info text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@jobs.Count</h3>
                                <p class="mb-0 small">Σύνολο Εργασιών</p>
                            </div>
                            <i class="bi bi-briefcase fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="card bg-warning text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">€@jobs.Where(j => j.Status == JobStatus.Completed).Sum(j => j.Price).ToString("N0")</h3>
                                <p class="mb-0 small">Έσοδα</p>
                            </div>
                            <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-6 col-lg-4">
                                <label class="form-label small text-muted">Αναζήτηση Εργασιών</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput"
                                        placeholder="Αναζήτηση με τίτλο ή περιγραφή...">
                                </div>
                            </div>
                            <label class="form-label small text-muted">Κατάσταση</label>
                            <select class="form-select" @bind="statusFilter">
                                <option value="all">Όλες οι Καταστάσεις</option>
                                <option value="new">Νέες</option>
                                <option value="active">Ενεργές</option>
                                <option value="completed">Ολοκληρωμένες</option>
                                <option value="cancelled">Ακυρωμένες</option>
                            </select>
                            <div class="col-md-3 col-lg-2">
                                <label class="form-label small text-muted">Τύπος</label>
                                <select class="form-select" @bind="typeFilter">
                                    <option value="all">Όλοι οι Τύποι</option>
                                    <option value="skip">Ενοικίαση Skip</option>
                                    <option value="sand">Παράδοση Άμμου</option>
                                    <option value="cliff">Υπηρεσία Forklift</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-lg-2">
                                <label class="form-label small text-muted">Ταξινόμηση Κατά</label>
                                <select class="form-select" @bind="sortBy">
                                    <option value="startDate">Ημερομηνία Έναρξης</option>
                                    <option value="endDate">Ημερομηνία Λήξης</option>
                                    <option value="status">Κατάσταση</option>
                                    <option value="type">Τύπος</option>
                                    <option value="price">Τιμή</option>
                                </select>
                            </div>
                            <div class="row mt-3">
                            <div class="col-12">
                                <small class="text-muted">
                                    Εμφάνιση @filteredJobs.Count() από @jobs.Count εργασίες σε αυτήν τη διεύθυνση
                                    @if (!string.IsNullOrWhiteSpace(searchTerm) || statusFilter != "all" || typeFilter != "all")
                                    {
                                        <span> • <button class="btn btn-link btn-sm p-0 text-decoration-none" @onclick="ClearFilters">Καθαρισμός φίλτρων</button></span>
                                    }
                                </small>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Jobs Cards -->
        @if (jobs.Any())
        {
            <div class="row">
                @foreach (var job in filteredJobs)
                {
                    <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                        <JobCard Job="job" Customer="customer" 
                            OnStatusChange="@(async (tuple) => await HandleStatusChange(tuple.job, tuple.status))"
                            OnEdit="@(async (job) => await HandleEditJob(job))"
                            OnDelete="@(async (job) => await HandleDeleteJob(job))"
                            OnGenerateInvoice="@(async (job) => await HandleGenerateInvoice(job))" />
                    </div>
                }
            </div>

            <!-- Invoice Actions -->
            @if (jobs.Any(j => j.CanBeInvoiced))
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                                <h5 class="text-muted mt-3">Έτοιμες για Τιμολόγηση</h5>
                                <p class="text-muted mb-3">@jobs.Count(j => j.CanBeInvoiced) ολοκληρωμένη(ες) εργασία(ες) σε αυτήν τη διεύθυνση μπορούν να τιμολογηθούν.</p>
                                <a href="/customer/@CustomerId/invoice/new?returnUrl=@Uri.EscapeDataString(Navigation.Uri)" 
                                class="btn btn-success">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    Δημιουργία Τιμολογίου για Διεύθυνση
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <i class="bi bi-briefcase text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">Δεν βρέθηκαν εργασίες σε αυτήν τη διεύθυνση</h4>
                <p class="text-muted">Δημιουργήστε την πρώτη εργασία για αυτήν την τοποθεσία</p>
                <a href="/customer/@CustomerId/job/new?returnUrl=@Uri.EscapeDataString(Navigation.Uri)" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>
                    Προσθήκη Πρώτης Εργασίας
                </a>
            </div>
        }
    }
</div>