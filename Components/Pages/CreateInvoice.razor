@rendermode InteractiveServer
@page "/customer/{customerId:int}/invoice/new"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Create Invoice - @(customer?.Name ?? "Loading...") - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Customers</a></li>
            <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">@(customer?.Name ?? "Customer")</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create Invoice</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Create Invoice</h2>
                    <p class="text-muted mb-0">Select completed jobs to include in the invoice</p>
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <a href="/customer/@CustomerId/jobs" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back to Jobs
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (customer == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Customer not found.
        </div>
    }
    else if (!availableJobs.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No completed jobs available for invoicing. Jobs must be completed before they can be invoiced.
        </div>
    }
    else
    {
        <EditForm Model="newInvoice" OnValidSubmit="HandleCreateInvoice" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            
            <div class="row">
                <!-- Job Selection Panel -->
                <div class="col-lg-8">
                    <!-- Invoice Details -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Invoice Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Due Date</label>
                                    <InputDate @bind-Value="newInvoice.DueDate" class="form-control" />
                                    <ValidationMessage For="@(() => newInvoice.DueDate)" class="text-danger small" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">VAT Rate (%)</label>
                                    <InputNumber @bind-Value="newInvoice.VatRate" @bind-Value:after="RecalculateTotals" 
                                               class="form-control" step="0.01" />
                                    <div class="form-text">Rate automatically set based on job types</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Notes</label>
                                    <InputTextArea @bind-Value="newInvoice.Notes" class="form-control" rows="3" 
                                                  placeholder="Any additional notes for this invoice..." />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Job Filters -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Filter Jobs</h5>
                                <small class="text-muted">@filteredJobs.Count() of @availableJobs.Count jobs shown</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label small text-muted">Date Range</label>
                                    <div class="input-group">
                                        <InputDate @bind-Value="filterStartDate" @bind-Value:after="FilterJobs" 
                                                  class="form-control form-control-sm" />
                                        <span class="input-group-text">to</span>
                                        <InputDate @bind-Value="filterEndDate" @bind-Value:after="FilterJobs" 
                                                  class="form-control form-control-sm" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small text-muted">Job Type</label>
                                    <select @bind="filterJobType" @bind:after="FilterJobs" class="form-select form-select-sm">
                                        <option value="">All Types</option>
                                        <option value="SkipRental">Skip Rental</option>
                                        <option value="SandDelivery">Sand Delivery</option>
                                        <option value="FortCliffService">Fort Cliff Service</option>
                                    </select>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <div class="btn-group w-100" role="group">
                                        <button type="button" class="btn btn-outline-primary btn-sm" @onclick="SelectAllVisible">
                                            Select All
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="ClearAllSelected">
                                            Clear All
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Available Jobs -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Available Jobs (@selectedJobIds.Count selected)</h5>
                        </div>
                        <div class="card-body">
                            @if (!filteredJobs.Any())
                            {
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-funnel" style="font-size: 3rem;"></i>
                                    <p class="mt-2">No jobs match the current filters</p>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    @foreach (var job in filteredJobs)
                                    {
                                        <div class="col-12 mb-3">
                                            <div class="job-selection-card @(selectedJobIds.Contains(job.Id) ? "selected" : "")" 
                                                 @onclick="() => ToggleJobSelection(job.Id)">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" 
                                                           checked="@selectedJobIds.Contains(job.Id)" 
                                                           @onchange="() => ToggleJobSelection(job.Id)">
                                                    <div class="job-info">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div class="flex-grow-1">
                                                                <h6 class="mb-1">@job.Title</h6>
                                                                <p class="text-muted small mb-1">@job.TypeDisplayName</p>
                                                                <p class="text-muted small mb-1">
                                                                    <i class="bi bi-geo-alt me-1"></i>@job.Address
                                                                </p>
                                                                <p class="text-muted small mb-0">
                                                                    <i class="bi bi-calendar me-1"></i>
                                                                    @job.StartDate.ToString("dd/MM/yyyy")
                                                                    @if (job.EndDate.HasValue && job.EndDate != job.StartDate)
                                                                    {
                                                                        <span> - @job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                                                    }
                                                                </p>
                                                            </div>
                                                            <div class="text-end">
                                                                <div class="h5 mb-1 text-success">@job.FormattedPrice</div>
                                                                <small class="text-muted">@job.GetVatRate()% VAT</small>
                                                            </div>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(job.Description))
                                                        {
                                                            <p class="text-muted small mt-2 mb-0">@job.Description</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Invoice Preview Sidebar -->
                <div class="col-lg-4">
                    <!-- Customer Info -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h6 class="mb-0 text-white">
                                <i class="bi bi-person me-2"></i>
                                Customer Information
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="avatar-circle bg-primary text-white mx-auto mb-2">
                                    @GetCustomerInitials()
                                </div>
                                <h6 class="mb-1">@customer.Name</h6>
                                <small class="text-muted">Customer ID: @customer.Id</small>
                            </div>
                            <div class="customer-contact">
                                <div class="contact-row mb-2">
                                    <i class="bi bi-envelope text-muted me-2"></i>
                                    <span class="small">@customer.Email</span>
                                </div>
                                <div class="contact-row mb-2">
                                    <i class="bi bi-telephone text-muted me-2"></i>
                                    <span class="small">@customer.Phone</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Invoice Summary -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Invoice Summary</h6>
                        </div>
                        <div class="card-body">
                            @if (!selectedJobIds.Any())
                            {
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Select jobs to create invoice</p>
                                </div>
                            }
                            else
                            {
                                <div class="invoice-summary">
                                    <div class="summary-row">
                                        <span>Jobs Selected:</span>
                                        <span class="fw-bold">@selectedJobIds.Count</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">£@newInvoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>VAT (@newInvoice.VatRate.ToString("N1")%):</span>
                                        <span class="fw-bold">£@newInvoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="summary-row fs-5">
                                        <span class="fw-bold">Total:</span>
                                        <span class="fw-bold text-primary">£@newInvoice.Total.ToString("N2")</span>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">Due: @newInvoice.DueDate.ToString("dd MMMM yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger small" role="alert">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    @errorMessage
                                </div>
                            }
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@(!selectedJobIds.Any() || isSaving)">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Creating...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-plus-lg me-1"></i>
                                        <span>Create Invoice</span>
                                    }
                                </button>
                                <a href="/customer/@CustomerId/jobs" class="btn btn-outline-secondary">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>