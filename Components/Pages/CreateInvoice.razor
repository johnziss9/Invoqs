@rendermode InteractiveServer
@page "/invoice/new"
@page "/customer/{customerId:int}/invoice/new"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Δημιουργία Τιμολογίου - @(selectedCustomer?.Name ?? "Νέο Τιμολόγιο") - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            @if (CustomerId > 0 || selectedCustomer != null)
            {
                <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
                @if (CustomerId > 0)
                {
                    <li class="breadcrumb-item"><a href="/customer/@CustomerId" class="text-decoration-none">@(selectedCustomer?.Name ?? "Πελάτης")</a></li>
                    <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">Εργασίες</a></li>
                }
                else if (selectedCustomer != null)
                {
                    <li class="breadcrumb-item"><a href="/customer/@selectedCustomer.Id" class="text-decoration-none">@selectedCustomer.Name</a></li>
                    <li class="breadcrumb-item"><a href="/customer/@selectedCustomer.Id/jobs" class="text-decoration-none">Εργασίες</a></li>
                }
            }
            else
            {
                <li class="breadcrumb-item"><a href="/invoices" class="text-decoration-none">Τιμολόγια</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">Δημιουργία Τιμολογίου</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Δημιουργία Τιμολογίου</h2>
                    @if (selectedCustomer != null)
                    {
                        <p class="text-muted mb-0">Πελάτης: @selectedCustomer.Name</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Επιλέξτε έναν πελάτη και ολοκληρωμένες εργασίες για να συμπεριληφθούν στο τιμολόγιο</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (CustomerId > 0 && selectedCustomer == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Ο πελάτης δεν βρέθηκε.
        </div>
    }
    else
    {
        <EditForm Model="newInvoice" OnSubmit="HandleCreateInvoice">
            <div class="row">
                <!-- Job Selection Panel -->
                <div class="col-lg-8">
                    <!-- Invoice Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Στοιχεία Τιμολογίου</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Customer Selection (only if not pre-selected) -->
                                @if (CustomerId == 0)
                                {
                                    <div class="col-12">
                                        <label class="form-label required">Πελάτης</label>
                                        <InputSelect @bind-Value="newInvoice.CustomerId" class="@(validationErrors?.GetFieldErrors("CustomerId").Any() == true ? "form-select is-invalid" : "form-select")"
                                            @bind-Value:after="OnCustomerChanged">
                                            <option value="0">-- Επιλέξτε Πελάτη --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">@customer.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newInvoice.CustomerId)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("CustomerId").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("CustomerId"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <div class="col-md-6">
                                    <label class="form-label">Ημερομηνία Λήξης</label>
                                    <InputDate @bind-Value="newInvoice.DueDate" class="@GetFieldErrorClass("DueDate")" />
                                    <ValidationMessage For="@(() => newInvoice.DueDate)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("DueDate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("DueDate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">ΦΠΑ (%)</label>
                                    <InputNumber @bind-Value="newInvoice.VatRate" @bind-Value:after="RecalculateTotals"
                                        class="@GetFieldErrorClass("VatRate")" step="0.01" />
                                    @if (validationErrors?.GetFieldErrors("VatRate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("VatRate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Σημειώσεις</label>
                                    <InputTextArea @bind-Value="newInvoice.Notes" class="@GetFieldErrorClass("Notes")" rows="3"
                                        placeholder="Οποιεσδήποτε πρόσθετες σημειώσεις για αυτό το τιμολόγιο..." />
                                    @if (validationErrors?.GetFieldErrors("Notes").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Notes"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Jobs Section - Show based on customer selection -->
                    @if (CustomerId == 0 && newInvoice.CustomerId == 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Παρακαλώ επιλέξτε έναν πελάτη για να δείτε τις διαθέσιμες εργασίες προς τιμολόγηση.
                        </div>
                    }
                    else if (!availableJobs.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Δεν υπάρχουν ολοκληρωμένες εργασίες διαθέσιμες για τιμολόγηση. Οι εργασίες πρέπει να ολοκληρωθούν πριν μπορούν να τιμολογηθούν.
                        </div>
                    }
                    else
                    {
                        <!-- Job Filters -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="row g-3 align-items-end">
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Ημερομηνία Έναρξης</label>
                                                <InputDate @bind-Value="filterStartDate" @bind-Value:after="FilterJobs"
                                                    class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Ημερομηνία Λήξης</label>
                                                <InputDate @bind-Value="filterEndDate" @bind-Value:after="FilterJobs"
                                                    class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Διεύθυνση</label>
                                                <select @bind="filterAddress" @bind:after="FilterJobs" class="form-select">
                                                    <option value="">All Addresses</option>
                                                    @foreach (var address in GetUniqueAddresses())
                                                    {
                                                        <option value="@address">@address</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Τύπος Εργασίας</label>
                                                <select @bind="filterJobType" @bind:after="FilterJobs" class="form-select">
                                                    <option value="">Όλοι οι Τύποι</option>
                                                    <option value="SkipRental">Ενοικίαση Skip</option>
                                                    <option value="SandDelivery">Παράδοση Άμμου</option>
                                                    <option value="ForkLiftService">Υπηρεσία Forklift</option>
                                                </select>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small text-muted">Ενέργειες</label>
                                                <div class="btn-group w-100" role="group">
                                                    <button type="button" class="btn btn-outline-primary btn-sm" @onclick="SelectAllVisible">
                                                        Επιλογή Όλων
                                                    </button>
                                                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="ClearAllSelected">
                                                        Καθαρισμός Όλων
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <small class="text-muted">
                                                    @filteredJobs.Count() από @availableJobs.Count εργασίες εμφανίζονται
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Available Jobs -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0">Διαθέσιμες Εργασίες (@selectedJobIds.Count επιλεγμένες)</h5>
                            </div>
                            <div class="card-body">
                                @if (!filteredJobs.Any())
                                {
                                    <div class="text-center py-4 text-muted">
                                        <i class="bi bi-funnel" style="font-size: 3rem;"></i>
                                        <p class="mt-2">Δεν υπάρχουν εργασίες που να ταιριάζουν με τα τρέχοντα φίλτρα</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        @foreach (var job in filteredJobs)
                                        {
                                            <div class="col-12 mb-3">
                                                <div class="job-selection-card @(selectedJobIds.Contains(job.Id) ? "selected" : "")"
                                                    @onclick="() => ToggleJobSelection(job.Id)">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                            checked="@selectedJobIds.Contains(job.Id)"
                                                            @onchange="() => ToggleJobSelection(job.Id)">
                                                        <div class="job-info">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mb-1">@job.Title</h6>
                                                                    <p class="text-muted small mb-1">@job.TypeDisplayName</p>
                                                                    <p class="text-muted small mb-1">
                                                                        <i class="bi bi-geo-alt me-1"></i>@job.Address
                                                                    </p>
                                                                    <p class="text-muted small mb-0">
                                                                        <i class="bi bi-calendar me-1"></i>
                                                                        @job.StartDate.ToString("dd/MM/yyyy")
                                                                        @if (job.EndDate.HasValue && job.EndDate != job.StartDate)
                                                                        {
                                                                            <span> - @job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                                                        }
                                                                    </p>
                                                                </div>
                                                                <div class="text-end">
                                                                    <div class="h5 mb-1 text-success">@job.FormattedPrice</div>
                                                                    <small class="text-muted">χωρίς ΦΠΑ</small>
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(job.Description))
                                                            {
                                                                <p class="text-muted small mt-2 mb-0">@job.Description</p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Ακύρωση
                                    </a>
                                    <button type="submit" class="btn btn-primary"
                                        disabled="@(!selectedJobIds.Any() || isSaving)">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"
                                                aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-plus-lg me-1"></i>
                                        }
                                        @(isSaving ? "Δημιουργία..." : "Δημιουργία Τιμολογίου")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Preview Sidebar -->
                <div class="col-lg-4">
                    <!-- Customer Info -->
                   @if (selectedCustomer != null)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h6 class="mb-0">Στοιχεία Πελάτη</h6>
                            </div>
                            <div class="card-body">
                                <div class="small">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Όνομα:</span>
                                        <span class="fw-medium">@selectedCustomer.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Email:</span>
                                            <a href="mailto:@selectedCustomer.Email" class="fw-medium text-decoration-none">@selectedCustomer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Phone))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Τηλέφωνο:</span>
                                            <a href="tel:@selectedCustomer.Phone" class="fw-medium text-decoration-none">@selectedCustomer.Phone</a>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Δημιουργήθηκε:</span>
                                        <span class="fw-medium">@selectedCustomer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                        <span class="fw-medium">@((selectedCustomer.UpdatedDate ?? selectedCustomer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                    </div>
                                    <!-- Work Status -->
                                    <div class="mb-2 pb-2 border-bottom">
                                        @if (selectedCustomer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((selectedCustomer.ActiveJobs + selectedCustomer.NewJobs)) εργασίες σε εξέλιξη
                                                </span>
                                            </div>
                                        }
                                        else if (selectedCustomer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Τελευταία εργασία ολοκληρώθηκε
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    Δεν υπάρχουν εργασίες ακόμα
                                                </span>
                                            </div>
                                        }
                                        
                                        @* Financial status indicators *@
                                        @if (selectedCustomer.UninvoicedJobs > 0)
                                        {
                                            <div>
                                                <span class="text-warning">
                                                    <i class="bi bi-exclamation-circle me-1"></i>
                                                    @selectedCustomer.UninvoicedJobs μη τιμολογημένες εργασίες
                                                </span>
                                            </div>
                                        }
                                        
                                        @if (selectedCustomer.UnpaidInvoices > 0)
                                        {
                                            <div>
                                                <span class="text-danger">
                                                    @selectedCustomer.UnpaidInvoices απλήρωτα (€@selectedCustomer.OutstandingAmount.ToString("N2"))
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Invoice Summary -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Σύνοψη Τιμολογίου</h6>
                        </div>
                        <div class="card-body">
                            @if (!selectedJobIds.Any())
                            {
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Επιλέξτε εργασίες για να δημιουργήσετε τιμολόγιο</p>
                                </div>
                            }
                            else
                            {
                                <div class="invoice-summary">
                                    <div class="summary-row">
                                        <span>Εργασίες Επιλεγμένες:</span>
                                        <span class="fw-bold">@selectedJobIds.Count</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Υποσύνολο:</span>
                                        <span class="fw-bold">€@newInvoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>ΦΠΑ (@newInvoice.VatRate.ToString("N1")%):</span>
                                        <span class="fw-bold">€@newInvoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="summary-row fs-5">
                                        <span class="fw-bold">Σύνολο:</span>
                                        <span class="fw-bold text-primary">€@newInvoice.Total.ToString("N2")</span>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">Λήξη: @newInvoice.DueDate.ToString("dd MMMM yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>