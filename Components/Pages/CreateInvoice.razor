@rendermode InteractiveServer
@page "/invoice/new"
@page "/customer/{customerId:int}/invoice/new"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Create Invoice - @(selectedCustomer?.Name ?? "New Invoice") - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            @if (CustomerId > 0 || selectedCustomer != null)
            {
                <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Customers</a></li>
                @if (CustomerId > 0)
                {
                    <li class="breadcrumb-item"><a href="/customer/@CustomerId"
                            class="text-decoration-none">@(selectedCustomer?.Name ?? "Customer")</a></li>
                    <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">Jobs</a></li>
                }
                else if (selectedCustomer != null)
                {
                    <li class="breadcrumb-item"><a href="/customer/@selectedCustomer.Id"
                            class="text-decoration-none">@selectedCustomer.Name</a></li>
                    <li class="breadcrumb-item"><a href="/customer/@selectedCustomer.Id/jobs"
                            class="text-decoration-none">Jobs</a></li>
                }
            }
            else
            {
                <li class="breadcrumb-item"><a href="/invoices" class="text-decoration-none">Invoices</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">Create Invoice</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Create Invoice</h2>
                    @if (selectedCustomer != null)
                    {
                        <p class="text-muted mb-0">Customer: @selectedCustomer.Name</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Select a customer and completed jobs to include in the invoice</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (CustomerId > 0 && selectedCustomer == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Customer not found.
        </div>
    }
    else
    {
        <EditForm Model="newInvoice" OnValidSubmit="HandleCreateInvoice" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />

            <div class="row">
                <!-- Job Selection Panel -->
                <div class="col-lg-8">
                    <!-- Invoice Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Invoice Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Customer Selection (only if not pre-selected) -->
                                @if (CustomerId == 0)
                                {
                                    <div class="col-12">
                                        <label class="form-label required">Customer</label>
                                        <InputSelect @bind-Value="newInvoice.CustomerId" class="form-select"
                                            @bind-Value:after="OnCustomerChanged">
                                            <option value="0">-- Select Customer --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">@customer.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newInvoice.CustomerId)" class="text-danger small" />
                                    </div>
                                }

                                <div class="col-md-6">
                                    <label class="form-label">Due Date</label>
                                    <InputDate @bind-Value="newInvoice.DueDate" class="form-control" />
                                    <ValidationMessage For="@(() => newInvoice.DueDate)" class="text-danger small" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">VAT Rate (%)</label>
                                    <InputNumber @bind-Value="newInvoice.VatRate" @bind-Value:after="RecalculateTotals"
                                        class="form-control" step="0.01" />
                                    <div class="form-text">Rate automatically set based on job types</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Notes</label>
                                    <InputTextArea @bind-Value="newInvoice.Notes" class="form-control" rows="3"
                                        placeholder="Any additional notes for this invoice..." />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Jobs Section - Show based on customer selection -->
                    @if (CustomerId == 0 && newInvoice.CustomerId == 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Please select a customer to view available jobs for invoicing.
                        </div>
                    }
                    else if (!availableJobs.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            No completed jobs available for invoicing. Jobs must be completed before they can be invoiced.
                        </div>
                    }
                    else
                    {
                        <!-- Job Filters -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Filter Jobs</h5>
                                    <small class="text-muted">@filteredJobs.Count() of @availableJobs.Count jobs shown</small>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label small text-muted">Date Range</label>
                                        <div class="input-group">
                                            <InputDate @bind-Value="filterStartDate" @bind-Value:after="FilterJobs"
                                                class="form-control form-control-sm" />
                                            <span class="input-group-text">to</span>
                                            <InputDate @bind-Value="filterEndDate" @bind-Value:after="FilterJobs"
                                                class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label small text-muted">Job Type</label>
                                        <select @bind="filterJobType" @bind:after="FilterJobs"
                                            class="form-select form-select-sm">
                                            <option value="">All Types</option>
                                            <option value="SkipRental">Skip Rental</option>
                                            <option value="SandDelivery">Sand Delivery</option>
                                            <option value="FortCliffService">Fort Cliff Service</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <div class="btn-group w-100" role="group">
                                            <button type="button" class="btn btn-outline-primary btn-sm"
                                                @onclick="SelectAllVisible">
                                                Select All
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary btn-sm"
                                                @onclick="ClearAllSelected">
                                                Clear All
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Available Jobs -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0">Available Jobs (@selectedJobIds.Count selected)</h5>
                            </div>
                            <div class="card-body">
                                @if (!filteredJobs.Any())
                                {
                                    <div class="text-center py-4 text-muted">
                                        <i class="bi bi-funnel" style="font-size: 3rem;"></i>
                                        <p class="mt-2">No jobs match the current filters</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        @foreach (var job in filteredJobs)
                                        {
                                            <div class="col-12 mb-3">
                                                <div class="job-selection-card @(selectedJobIds.Contains(job.Id) ? "selected" : "")"
                                                    @onclick="() => ToggleJobSelection(job.Id)">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                            checked="@selectedJobIds.Contains(job.Id)"
                                                            @onchange="() => ToggleJobSelection(job.Id)">
                                                        <div class="job-info">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mb-1">@job.Title</h6>
                                                                    <p class="text-muted small mb-1">@job.TypeDisplayName</p>
                                                                    <p class="text-muted small mb-1">
                                                                        <i class="bi bi-geo-alt me-1"></i>@job.Address
                                                                    </p>
                                                                    <p class="text-muted small mb-0">
                                                                        <i class="bi bi-calendar me-1"></i>
                                                                        @job.StartDate.ToString("dd/MM/yyyy")
                                                                        @if (job.EndDate.HasValue && job.EndDate != job.StartDate)
                                                                        {
                                                                            <span> - @job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                                                        }
                                                                    </p>
                                                                </div>
                                                                <div class="text-end">
                                                                    <div class="h5 mb-1 text-success">@job.FormattedPrice</div>
                                                                    <small class="text-muted">@job.GetVatRate()% VAT</small>
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(job.Description))
                                                            {
                                                                <p class="text-muted small mt-2 mb-0">@job.Description</p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary"
                                        disabled="@(!selectedJobIds.Any() || isSaving)">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"
                                                aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-plus-lg me-1"></i>
                                        }
                                        @(isSaving ? "Creating..." : "Create Invoice")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Preview Sidebar -->
                <div class="col-lg-4">
                    <!-- Customer Info -->
                   @if (selectedCustomer != null)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h6 class="mb-0">Customer Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="small">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Name:</span>
                                        <span class="fw-medium">@selectedCustomer.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Email:</span>
                                            <a href="mailto:@selectedCustomer.Email" class="fw-medium text-decoration-none">@selectedCustomer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedCustomer.Phone))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Phone:</span>
                                            <a href="tel:@selectedCustomer.Phone" class="fw-medium text-decoration-none">@selectedCustomer.Phone</a>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Created:</span>
                                        <span class="fw-medium">@selectedCustomer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Last Updated:</span>
                                        <span class="fw-medium">@((selectedCustomer.UpdatedDate ?? selectedCustomer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Status:</span>
                                        <span class="badge @(selectedCustomer.Status == "Active" ? "bg-success" : "bg-secondary") ms-2">
                                            @selectedCustomer.Status
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Invoice Summary -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Invoice Summary</h6>
                        </div>
                        <div class="card-body">
                            @if (!selectedJobIds.Any())
                            {
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Select jobs to create invoice</p>
                                </div>
                            }
                            else
                            {
                                <div class="invoice-summary">
                                    <div class="summary-row">
                                        <span>Jobs Selected:</span>
                                        <span class="fw-bold">@selectedJobIds.Count</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">£@newInvoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>VAT (@newInvoice.VatRate.ToString("N1")%):</span>
                                        <span class="fw-bold">£@newInvoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="summary-row fs-5">
                                        <span class="fw-bold">Total:</span>
                                        <span class="fw-bold text-primary">£@newInvoice.Total.ToString("N2")</span>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">Due: @newInvoice.DueDate.ToString("dd MMMM yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>