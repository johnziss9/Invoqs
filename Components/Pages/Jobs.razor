@rendermode InteractiveServer
@page "/jobs"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Εργασίες - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item active" aria-current="page">Εργασίες</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Εργασίες</h2>
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/customers", true))">
                        <i class="bi bi-people me-1"></i>
                        Προβολή Πελατών
                    </button>
                    <button class="btn btn-outline-primary" @onclick="CreateInvoice">
                        <i class="bi bi-receipt me-1"></i>
                        Δημιουργία Τιμολογίου
                    </button>
                    <button class="btn btn-primary" @onclick="ShowAddJobModal">
                        <i class="bi bi-plus-lg me-1"></i>
                        Προσθήκη Εργασίας
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Job Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-secondary text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.New)</h3>
                            <p class="mb-0 small">Νέες</p>
                        </div>
                        <i class="bi bi-clock fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-primary text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Active)</h3>
                            <p class="mb-0 small">Ενεργές</p>
                        </div>
                        <i class="bi bi-play-circle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-success text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Completed)</h3>
                            <p class="mb-0 small">Ολοκληρωμένες</p>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-danger text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@jobs.Count(j => j.Status == JobStatus.Cancelled)</h3>
                            <p class="mb-0 small">Ακυρωμένες</p>
                        </div>
                        <i class="bi bi-x-circle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-info text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@jobs.Count</h3>
                            <p class="mb-0 small">Σύνολο Εργασιών</p>
                        </div>
                        <i class="bi bi-briefcase fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-warning text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">€@jobs.Where(j => j.Status == JobStatus.Completed).Sum(j => j.Price).ToString("N0")</h3>
                            <p class="mb-0 small">Έσοδα</p>
                        </div>
                        <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6 col-lg-4">
                            <label class="form-label small text-muted">Αναζήτηση Εργασιών</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput"
                                    placeholder="Αναζήτηση με τίτλο, πελάτη ή διεύθυνση...">
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Πελάτης</label>
                            <select class="form-select" @bind="customerFilter">
                                <option value="all">Όλοι οι Πελάτες</option>
                                @foreach (var customer in customers)
                                {
                                    <option value="@customer.Id">@customer.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Κατάσταση</label>
                            <select class="form-select" @bind="statusFilter">
                                <option value="all">Όλες οι Καταστάσεις</option>
                                <option value="new">Νέες</option>
                                <option value="active">Ενεργές</option>
                                <option value="completed">Ολοκληρωμένες</option>
                                <option value="cancelled">Ακυρωμένες</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Τύπος</label>
                            <select class="form-select" @bind="typeFilter">
                                <option value="all">Όλοι οι Τύποι</option>
                                <option value="skip">Ενοικίαση Skip</option>
                                <option value="sand">Παράδοση Άμμου</option>
                                <option value="cliff">Υπηρεσία Forklift</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Ταξινόμηση</label>
                            <select class="form-select" @bind="sortBy">
                                <option value="startDate">Ημερομηνία Έναρξης</option>
                                <option value="customer">Πελάτης</option>
                                <option value="title">Τίτλος</option>
                                <option value="status">Κατάσταση</option>
                                <option value="price">Τιμή</option>
                            </select>
                        </div>
                        <div class="row mt-3">
                        <div class="col-12">
                            <small class="text-muted">
                                Εμφάνιση @filteredJobs.Count() από @jobs.Count εργασίες
                                @if (!string.IsNullOrWhiteSpace(searchTerm) || customerFilter != "all" || statusFilter != "all" || typeFilter != "all")
                                {
                                    <span> • <button class="btn btn-link btn-sm p-0 text-decoration-none" @onclick="ClearFilters">Εκκαθάριση φίλτρων</button></span>
                                }
                            </small>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Job Cards -->
    <div class="row">
        @foreach (var job in filteredJobs)
        {
            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                <JobCard Job="job" 
                        Customer="@customers.FirstOrDefault(c => c.Id == job.CustomerId)"
                        OnStatusChange="@(async (tuple) => await HandleStatusChange(tuple.job, tuple.status))"
                        OnEdit="@(async (job) => await HandleEditJob(job))"
                        OnDelete="@(async (job) => await HandleDeleteJob(job))"
                        OnGenerateInvoice="@(async (job) => await HandleGenerateInvoice(job))" />
            </div>
        }
    </div>

    @if (!filteredJobs.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-briefcase text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">Δεν βρέθηκαν εργασίες</h4>
            <p class="text-muted">
                @if (string.IsNullOrWhiteSpace(searchTerm) && customerFilter == "all" && statusFilter == "all" && typeFilter == "all")
                {
                    <span>Δεν έχουν δημιουργηθεί εργασίες ακόμα</span>
                }
                else
                {
                    <span>Δεν υπάρχουν εργασίες που να ταιριάζουν με τα τρέχοντα κριτήρια αναζήτησης και φιλτραρίσματος</span>
                }
            </p>
            @if (string.IsNullOrWhiteSpace(searchTerm) && customerFilter == "all" && statusFilter == "all" && typeFilter == "all")
            {
                <button class="btn btn-primary" @onclick="ShowAddJobModal">
                    <i class="bi bi-plus-lg me-1"></i>
                    Προσθήκη Πρώτης Εργασίας
                </button>
            }
            else
            {
                <button class="btn btn-outline-primary" @onclick="ClearFilters">
                    <i class="bi bi-funnel me-1"></i>
                    Εκκαθάριση Φίλτρων
                </button>
            }
        </div>
    }
</div>