@page "/job/{JobId:int}"
@using Invoqs.Components.UI
@using Invoqs.Models
@using Invoqs.Services
@inherits JobDetailsBase

<PageTitle>@(job?.Description ?? "Loading...") - Job Details - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Jobs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(job?.Description ?? "Job Details")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">@(job?.Description ?? "Loading...")</h2>
                    @if (job != null)
                    {
                        <span class="badge @job.StatusColor badge-sm">
                            <i class="@job.StatusIcon me-1"></i>
                            @job.Status
                        </span>
                        @if (job.IsInvoiced)
                        {
                            <span class="badge bg-info text-white badge-sm ms-2"
                                  title="Invoiced on @job.InvoicedDate?.ToString("dd/MM/yyyy")">
                                <i class="bi bi-receipt me-1"></i>
                                Invoiced
                            </span>
                        }
                    }
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <button class="btn btn-outline-secondary" @onclick="GoBack">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back
                    </button>
                    <a href="/job/@JobId/edit" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>
                        Edit Job
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Job not found or an error occurred while loading.
            <div class="mt-3">
                <button class="btn btn-primary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Jobs
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Job Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="@job.TypeIcon me-2"></i>Job Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Job Type</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-light text-dark">
                                        <i class="@job.TypeIcon me-1"></i>
                                        @job.TypeDisplayName
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Status</label>
                                <div class="form-control-plaintext">
                                    <span class="badge @job.StatusColor">
                                        <i class="@job.StatusIcon me-1"></i>
                                        @job.Status
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Start Date</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-calendar me-2"></i>
                                    @job.StartDate.ToString("dddd, MMMM dd, yyyy")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">End Date</label>
                                <div class="form-control-plaintext">
                                    @if (job.EndDate.HasValue)
                                    {
                                        <i class="bi bi-calendar-check me-2"></i>
                                        @job.EndDate.Value.ToString("dddd, MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not completed</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-medium">Service Address</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    @job.Address
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Price</label>
                                <div class="form-control-plaintext">
                                    <span class="h5 text-success mb-0">£@job.Price.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Duration</label>
                                <div class="form-control-plaintext">
                                    @job.DurationDays days
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Job Description -->
                @if (!string.IsNullOrWhiteSpace(job.Description))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-file-text me-2"></i>Description
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Description
                            </div>
                        </div>
                    </div>
                }

                <!-- Job Notes -->
                @if (!string.IsNullOrWhiteSpace(job.Notes))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-sticky me-2"></i>Notes
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Notes
                            </div>
                        </div>
                    </div>
                }

                <!-- Invoice Information -->
                @if (job.IsInvoiced)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle me-2"></i>
                                Invoice Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Invoice ID</label>
                                    <div class="form-control-plaintext">#@job.InvoiceId</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Invoiced Date</label>
                                    <div class="form-control-plaintext">@job.InvoicedDate?.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary" @onclick="() => ViewInvoice(job.InvoiceId)">
                                    <i class="bi bi-receipt me-1"></i>
                                    View Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else if (job.Status == JobStatus.Completed)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Ready for Invoicing</h5>
                            <p class="text-muted mb-3">This job is completed and ready to be invoiced.</p>
                            <button class="btn btn-success" @onclick="CreateInvoice">
                                <i class="bi bi-plus-lg me-1"></i>
                                Create Invoice
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Customer Information -->
                @if (customer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-person me-2"></i>
                                Customer Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">@customer.Name</h6>
                            
                            @if (!string.IsNullOrEmpty(customer.Email))
                            {
                                <div class="mb-2">
                                    <a href="mailto:@customer.Email" class="text-decoration-none">
                                        <i class="bi bi-envelope me-2"></i>@customer.Email
                                    </a>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(customer.Phone))
                            {
                                <div class="mb-2">
                                    <a href="tel:@customer.Phone" class="text-decoration-none">
                                        <i class="bi bi-telephone me-2"></i>@customer.Phone
                                    </a>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a href="/customer/@customer.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-person me-1"></i>
                                    View Customer
                                </a>
                                <a href="/customer/@customer.Id/jobs" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-briefcase me-1"></i>
                                    All Jobs
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <!-- Job Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Job Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Job ID:</span>
                                <span class="fw-medium">#@job.Id</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Created:</span>
                                <span class="fw-medium">@job.StartDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Duration:</span>
                                <span class="fw-medium">@job.DurationDays days</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Value:</span>
                                <span class="fw-medium text-success">£@job.Price.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/job/@JobId/edit" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>
                                Edit Job
                            </a>
                            @if (job.Status == JobStatus.Completed && !job.IsInvoiced)
                            {
                                <button class="btn btn-outline-success btn-sm" @onclick="CreateInvoice">
                                    <i class="bi bi-receipt me-1"></i>
                                    Create Invoice
                                </button>
                            }
                            @if (job.IsInvoiced && job.InvoiceId.HasValue)
                            {
                                <button class="btn btn-outline-info btn-sm" @onclick="() => ViewInvoice(job.InvoiceId)">
                                    <i class="bi bi-file-earmark-text me-1"></i>
                                    View Invoice
                                </button>
                            }
                            @if (customer != null)
                            {
                                <hr class="my-2">
                                <a href="/customer/@customer.Id/job/new" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    New Job for Customer
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>