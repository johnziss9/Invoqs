@page "/job/{JobId:int}"
@rendermode InteractiveServer
@using Invoqs.Components.UI
@using Invoqs.Models
@using Invoqs.Services
@inherits JobDetailsBase

<PageTitle>@(job?.Title ?? "Φόρτωση...") - Λεπτομέρειες Εργασίας - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Εργασίες</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(job?.Title ?? "Λεπτομέρειες Εργασίας")</li>
        </ol>
    </nav>

    <!-- Error Message Alert -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">@(job?.Title ?? "Φόρτωση...")</h2>
                    @if (job != null)
                    {
                        <span class="badge bg-@job.StatusColor badge-sm">
                            <i class="@job.StatusIcon me-1"></i>
                            @job.StatusDisplay
                        </span>
                        @if (job.IsInvoiced)
                        {
                            <span class="badge bg-info text-white badge-sm ms-2"
                                  title="Τιμολογήθηκε στις @job.InvoicedDate?.ToString("dd/MM/yyyy")">
                                <i class="bi bi-receipt me-1"></i>
                                Τιμολογημένο
                            </span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Η εργασία δεν βρέθηκε ή παρουσιάστηκε σφάλμα κατά τη φόρτωση.
            <div class="mt-3">
                <button class="btn btn-primary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-1"></i>
                    Επιστροφή στις Εργασίες
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Job Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="@job.TypeIcon me-2"></i>Πληροφορίες Εργασίας
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-medium">Τύπος Εργασίας</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-light text-dark">
                                        <i class="@job.TypeIcon me-1"></i>
                                        @job.TypeDisplayName
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Ημερομηνία Έναρξης</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-calendar me-2"></i>
                                    @job.StartDate.ToString("dddd, MMMM dd, yyyy")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Ημερομηνία Λήξης</label>
                                <div class="form-control-plaintext">
                                    @if (job.EndDate.HasValue)
                                    {
                                        <i class="bi bi-calendar-check me-2"></i>
                                        @job.EndDate.Value.ToString("dddd, MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Δεν ολοκληρώθηκε</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-medium">Διεύθυνση Υπηρεσίας</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    @job.Address
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Τιμή</label>
                                <div class="form-control-plaintext">
                                    <span class="h5 text-success mb-0">€@job.Price.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Διάρκεια</label>
                                <div class="form-control-plaintext">
                                    @job.DurationDays ημέρες
                                </div>
                            </div>

                            <!-- ===== TYPE-SPECIFIC FIELDS DISPLAY ===== -->

                            @if (job.Type == JobType.SkipRental)
                            {
                                @if (!string.IsNullOrEmpty(job.SkipType))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Τύπος Skip</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-box me-2"></i>
                                            @job.SkipTypeDisplay
                                        </div>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(job.SkipNumber))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Αριθμός Skip</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-hash me-2"></i>
                                            @job.SkipNumber
                                        </div>
                                    </div>
                                }
                            }

                            @if (job.Type == JobType.SandDelivery)
                            {
                                @if (!string.IsNullOrEmpty(job.SandMaterialType))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Τύπος Υλικού</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-box-seam me-2"></i>
                                            @job.SandMaterialTypeDisplay
                                        </div>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(job.SandDeliveryMethod))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Μέθοδος Παράδοσης</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-truck me-2"></i>
                                            @job.SandDeliveryMethodDisplay
                                        </div>
                                    </div>
                                }
                            }

                            @if (job.Type == JobType.ForkLiftService && !string.IsNullOrEmpty(job.ForkliftSize))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Μέγεθος Forklift</label>
                                    <div class="form-control-plaintext">
                                        <i class="bi bi-rulers me-2"></i>
                                        @job.ForkliftSizeDisplay
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Job Description -->
                @if (!string.IsNullOrWhiteSpace(job.Description))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-file-text me-2"></i>Περιγραφή
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Description
                            </div>
                        </div>
                    </div>
                }

                <!-- Job Notes -->
                @if (!string.IsNullOrWhiteSpace(job.Notes))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-sticky me-2"></i>Σημειώσεις
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Notes
                            </div>
                        </div>
                    </div>
                }

                <!-- Invoice Information -->
                @if (job.IsInvoiced)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle me-2"></i>
                                Πληροφορίες Τιμολογίου
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Ημερομηνία Τιμολόγησης</label>
                                    <div class="form-control-plaintext">@job.InvoicedDate?.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary" @onclick="() => ViewInvoice(job.InvoiceId)">
                                    <i class="bi bi-receipt me-1"></i>
                                    Προβολή Τιμολογίου
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else if (job.Status == JobStatus.Completed)
                {
                    @if (isCustomerDeleted)
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                                <h5 class="text-muted mt-3">Δεν Είναι Δυνατή η Δημιουργία Τιμολογίου</h5>
                                <p class="text-muted mb-3">Ο πελάτης αυτής της εργασίας έχει διαγραφεί. Η τιμολόγηση δεν είναι διαθέσιμη.</p>
                                <button class="btn btn-secondary" disabled>
                                    <i class="bi bi-receipt me-1"></i>
                                    Δημιουργία Τιμολογίου
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                                <h5 class="text-muted mt-3">Έτοιμο για Τιμολόγηση</h5>
                                <p class="text-muted mb-3">Αυτή η εργασία έχει ολοκληρωθεί και είναι έτοιμη για τιμολόγηση.</p>
                                <button class="btn btn-success" @onclick="CreateInvoice">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    Δημιουργία Τιμολογίου
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Job Actions -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Ενέργειες Εργασίας</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/job/@JobId/edit?returnUrl=@Uri.EscapeDataString($"/job/{JobId}")" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>
                                Επεξεργασία Εργασίας
                            </a>
                            
                            @if (job.Status == JobStatus.New)
                            {
                                <button class="btn btn-success btn-sm" @onclick="() => StartJob(job.Id)">
                                    <i class="bi bi-play me-1"></i>
                                    Έναρξη Εργασίας
                                </button>
                            }
                            else if (job.Status == JobStatus.Active)
                            {
                                <button class="btn btn-warning btn-sm" @onclick="() => CompleteJob(job.Id)">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Ολοκλήρωση
                                </button>
                            }
                            else if (job.Status == JobStatus.Completed && !job.IsInvoiced)
                            {
                                @if (isCustomerDeleted)
                                {
                                    <button class="btn btn-secondary btn-sm" disabled title="Cannot create invoice for deleted customer">
                                        <i class="bi bi-receipt me-1"></i>
                                        Δημιουργία Τιμολογίου
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-info btn-sm" @onclick="CreateInvoice">
                                        <i class="bi bi-receipt me-1"></i>
                                        Δημιουργία Τιμολογίου
                                    </button>
                                }
                            }
                            
                            <hr class="my-2">
                            @if (job.IsInvoiced || job.Status == JobStatus.Active || job.Status == JobStatus.Completed)
                            {
                                <button class="btn btn-outline-danger btn-sm" disabled="true" title="@GetDeleteDisabledReason()">
                                    <i class="bi bi-lock me-1"></i>
                                    @GetDeleteButtonText()
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteJobConfirmation">
                                    <i class="bi bi-trash me-1"></i>
                                    Διαγραφή Εργασίας
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">
                            Στοιχεία Πελάτη
                            @if (isCustomerDeleted)
                            {
                                <i class="bi bi-exclamation-triangle text-warning ms-2" title="Ο πελάτης έχει διαγραφεί"></i>
                            }
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (isCustomerDeleted)
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Πελάτης Διαγράφηκε:</strong> Ο πελάτης που σχετίζεται με αυτή την εργασία έχει αφαιρεθεί από το σύστημα.
                            </div>
                        }
                        
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Όνομα:</span>
                                <span class="fw-medium @(isCustomerDeleted ? "text-muted text-decoration-line-through" : "")">
                                    @customer?.Name
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(customer?.Email))
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Email:</span>
                                    @if (isCustomerDeleted)
                                    {
                                        <span class="fw-medium text-muted">@customer.Email</span>
                                    }
                                    else
                                    {
                                        <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                    }
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(customer?.Phone))
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τηλέφωνο:</span>
                                    @if (isCustomerDeleted)
                                    {
                                        <span class="fw-medium text-muted">@customer.Phone</span>
                                    }
                                    else
                                    {
                                        <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Δημιουργήθηκε:</span>
                                <span class="fw-medium">@customer?.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            @if (customer != null)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                    <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>

                                @if (!isCustomerDeleted)
                                {
                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (customer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success fw-normal">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((customer.ActiveJobs + customer.NewJobs)) εργασίες σε εξέλιξη
                                                </span>
                                            </div>
                                        }
                                        else if (customer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Τελευταία εργασία ολοκληρώθηκε
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    Δεν υπάρχουν εργασίες ακόμα
                                                </span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Financial Status -->
                                    @if (customer.UninvoicedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @customer.UninvoicedJobs μη τιμολογημένες εργασίες
                                            </span>
                                        </div>
                                    }

                                    @if (customer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                @customer.UnpaidInvoices απλήρωτα (€@customer.OutstandingAmount.ToString("N2"))
                                            </span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Κατάσταση:</span>
                                        <span class="badge bg-secondary ms-2">Διαγραμμένος</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Job Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Λεπτομέρειες Εργασίας</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Ημερομηνία Έναρξης:</span>
                                <span class="fw-medium">@job.StartDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            @if (job.EndDate.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Ημερομηνία Ολοκλήρωσης:</span>
                                    <span class="fw-medium">@job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Ημερομηνία Δημιουργίας:</span>
                                <span class="fw-medium">@job.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                <span class="fw-medium">@((job.UpdatedDate ?? job.CreatedDate).ToString("dd/MM/yyyy"))</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Διάρκεια:</span>
                                <span class="fw-medium">@job.DurationDays ημέρες</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Αξία:</span>
                                <span class="fw-medium text-success">€@job.Price.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Γρήγορες Ενέργειες</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (customer != null && !isCustomerDeleted)
                            {
                                <a href="/customer/@customer.Id/job/new?returnUrl=@Uri.EscapeDataString($"/job/{JobId}")" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    Νέα Εργασία για Πελάτη
                                </a>
                                <hr class="my-2">
                                <a href="/customer/@customer.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-person me-1"></i>
                                    Προβολή Πελάτη
                                </a>
                                <a href="/customer/@customer.Id/jobs" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-briefcase me-1"></i>
                                    Εργασίες Πελάτη
                                </a>
                                <a href="/customer/@customer.Id/invoices" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-file-earmark-text me-1"></i>
                                    Τιμολόγια Πελάτη
                                </a>
                            }
                            else if (isCustomerDeleted)
                            {
                                <div class="text-muted text-center py-2 small">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Ενέργειες συγκεκριμένου πελάτη μη διαθέσιμες
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* Delete Job Confirmation Modal *@
@if (showDeleteJobConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Εργασίας</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteJobConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτό θα διαγράψει μόνιμα την εργασία <strong>@job?.Title</strong>.
                            Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                        </p>
                        @if (job!.Status == JobStatus.Cancelled)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Προειδοποίηση:</strong> Αυτή η εργασία έχει ακυρωθεί. 
                                Η διαγραφή θα την αφαιρέσει μόνιμα από τα αρχεία σας.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteJobConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteJob" disabled="@isDeletingJob">
                        @if (isDeletingJob)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeletingJob ? "Διαγραφή..." : "Διαγραφή Εργασίας")
                    </button>
                </div>
            </div>
        </div>
    </div>
}