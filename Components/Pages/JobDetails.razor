@page "/job/{JobId:int}"
@rendermode InteractiveServer
@using Invoqs.Components.UI
@using Invoqs.Models
@using Invoqs.Services
@inherits JobDetailsBase

<PageTitle>@(job?.Title ?? "Loading...") - Job Details - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Jobs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(job?.Title ?? "Job Details")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">@(job?.Title ?? "Loading...")</h2>
                    @if (job != null)
                    {
                        <span class="badge bg-@job.StatusColor badge-sm">
                            <i class="@job.StatusIcon me-1"></i>
                            @job.Status
                        </span>
                        @if (job.IsInvoiced)
                        {
                            <span class="badge bg-info text-white badge-sm ms-2"
                                  title="Invoiced on @job.InvoicedDate?.ToString("dd/MM/yyyy")">
                                <i class="bi bi-receipt me-1"></i>
                                Invoiced
                            </span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Job not found or an error occurred while loading.
            <div class="mt-3">
                <button class="btn btn-primary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Jobs
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Job Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="@job.TypeIcon me-2"></i>Job Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-medium">Job Type</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-light text-dark">
                                        <i class="@job.TypeIcon me-1"></i>
                                        @job.TypeDisplayName
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Start Date</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-calendar me-2"></i>
                                    @job.StartDate.ToString("dddd, MMMM dd, yyyy")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">End Date</label>
                                <div class="form-control-plaintext">
                                    @if (job.EndDate.HasValue)
                                    {
                                        <i class="bi bi-calendar-check me-2"></i>
                                        @job.EndDate.Value.ToString("dddd, MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not completed</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-medium">Service Address</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    @job.Address
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Price</label>
                                <div class="form-control-plaintext">
                                    <span class="h5 text-success mb-0">£@job.Price.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Duration</label>
                                <div class="form-control-plaintext">
                                    @job.DurationDays days
                                </div>
                            </div>

                            <!-- ===== TYPE-SPECIFIC FIELDS DISPLAY ===== -->

                            @if (job.Type == JobType.SkipRental)
                            {
                                @if (!string.IsNullOrEmpty(job.SkipType))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Skip Type</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-box me-2"></i>
                                            @job.SkipTypeDisplay
                                        </div>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(job.SkipNumber))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Skip Number</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-hash me-2"></i>
                                            @job.SkipNumber
                                        </div>
                                    </div>
                                }
                            }

                            @if (job.Type == JobType.SandDelivery)
                            {
                                @if (!string.IsNullOrEmpty(job.SandMaterialType))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Material Type</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-box-seam me-2"></i>
                                            @job.SandMaterialTypeDisplay
                                        </div>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(job.SandDeliveryMethod))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Delivery Method</label>
                                        <div class="form-control-plaintext">
                                            <i class="bi bi-truck me-2"></i>
                                            @job.SandDeliveryMethodDisplay
                                        </div>
                                    </div>
                                }
                            }

                            @if (job.Type == JobType.ForkLiftService && !string.IsNullOrEmpty(job.ForkliftSize))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Forklift Size</label>
                                    <div class="form-control-plaintext">
                                        <i class="bi bi-rulers me-2"></i>
                                        @job.ForkliftSizeDisplay
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Job Description -->
                @if (!string.IsNullOrWhiteSpace(job.Description))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-file-text me-2"></i>Description
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Description
                            </div>
                        </div>
                    </div>
                }

                <!-- Job Notes -->
                @if (!string.IsNullOrWhiteSpace(job.Notes))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-sticky me-2"></i>Notes
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                @job.Notes
                            </div>
                        </div>
                    </div>
                }

                <!-- Invoice Information -->
                @if (job.IsInvoiced)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle me-2"></i>
                                Invoice Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Invoiced Date</label>
                                    <div class="form-control-plaintext">@job.InvoicedDate?.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary" @onclick="() => ViewInvoice(job.InvoiceId)">
                                    <i class="bi bi-receipt me-1"></i>
                                    View Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else if (job.Status == JobStatus.Completed)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Ready for Invoicing</h5>
                            <p class="text-muted mb-3">This job is completed and ready to be invoiced.</p>
                            <button class="btn btn-success" @onclick="CreateInvoice">
                                <i class="bi bi-plus-lg me-1"></i>
                                Create Invoice
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Job Actions -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Job Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/job/@JobId/edit?returnUrl=@Uri.EscapeDataString($"/job/{JobId}")" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>
                                Edit Job
                            </a>
                            
                            @if (job.Status == JobStatus.New)
                            {
                                <button class="btn btn-success btn-sm" @onclick="() => StartJob(job.Id)">
                                    <i class="bi bi-play me-1"></i>
                                    Start Job
                                </button>
                            }
                            else if (job.Status == JobStatus.Active)
                            {
                                <button class="btn btn-warning btn-sm" @onclick="() => CompleteJob(job.Id)">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Mark Complete
                                </button>
                            }
                            else if (job.Status == JobStatus.Completed && !job.IsInvoiced)
                            {
                                <button class="btn btn-info btn-sm" @onclick="CreateInvoice">
                                    <i class="bi bi-receipt me-1"></i>
                                    Create Invoice
                                </button>
                            }
                            
                            <hr class="my-2">
                            <button class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteJobConfirmation">
                                <i class="bi bi-trash me-1"></i>
                                Delete Job
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">
                            Customer Details
                            @if (isCustomerDeleted)
                            {
                                <i class="bi bi-exclamation-triangle text-warning ms-2" title="Customer has been deleted"></i>
                            }
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (isCustomerDeleted)
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Customer Deleted:</strong> The customer associated with this job has been removed from the system.
                            </div>
                        }
                        
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Name:</span>
                                <span class="fw-medium @(isCustomerDeleted ? "text-muted text-decoration-line-through" : "")">
                                    @customer?.Name
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(customer?.Email))
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Email:</span>
                                    @if (isCustomerDeleted)
                                    {
                                        <span class="fw-medium text-muted">@customer.Email</span>
                                    }
                                    else
                                    {
                                        <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                    }
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(customer?.Phone))
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Phone:</span>
                                    @if (isCustomerDeleted)
                                    {
                                        <span class="fw-medium text-muted">@customer.Phone</span>
                                    }
                                    else
                                    {
                                        <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Created:</span>
                                <span class="fw-medium">@customer?.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            @if (customer != null)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Last Updated:</span>
                                    <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>

                                @if (!isCustomerDeleted)
                                {
                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (customer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success fw-normal">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((customer.ActiveJobs + customer.NewJobs)) ongoing jobs
                                                </span>
                                            </div>
                                        }
                                        else if (customer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Last job completed
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    No jobs yet
                                                </span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Financial Status -->
                                    @if (customer.UninvoicedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @customer.UninvoicedJobs uninvoiced jobs
                                            </span>
                                        </div>
                                    }

                                    @if (customer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                <i class="bi bi-currency-pound me-1"></i>
                                                @customer.UnpaidInvoices unpaid (@customer.OutstandingAmount.ToString("C"))
                                            </span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Status:</span>
                                        <span class="badge bg-secondary ms-2">Deleted</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Job Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Job Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Date Started:</span>
                                <span class="fw-medium">@job.StartDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            @if (job.EndDate.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Date Completed:</span>
                                    <span class="fw-medium">@job.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Date Created:</span>
                                <span class="fw-medium">@job.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Last Updated:</span>
                                <span class="fw-medium">@((job.UpdatedDate ?? job.CreatedDate).ToString("dd/MM/yyyy"))</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Duration:</span>
                                <span class="fw-medium">@job.DurationDays days</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Value:</span>
                                <span class="fw-medium text-success">£@job.Price.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (customer != null && !isCustomerDeleted)
                            {
                                <a href="/customer/@customer.Id/job/new?returnUrl=@Uri.EscapeDataString($"/job/{JobId}")" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    New Job for Customer
                                </a>
                                <hr class="my-2">
                                <a href="/customer/@customer.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-person me-1"></i>
                                    View Customer
                                </a>
                                <a href="/customer/@customer.Id/jobs" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-briefcase me-1"></i>
                                    Customer Jobs
                                </a>
                                <a href="/customer/@customer.Id/invoices" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-file-earmark-text me-1"></i>
                                    Customer Invoices
                                </a>
                            }
                            else if (isCustomerDeleted)
                            {
                                <div class="text-muted text-center py-2">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Customer actions unavailable
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* Delete Job Confirmation Modal *@
@if (showDeleteJobConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Job</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteJobConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure?</h5>
                        <p class="text-muted">
                            This will permanently delete the job <strong>@job?.Title</strong>.
                            This action cannot be undone.
                        </p>
                        @if (job!.IsInvoiced)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Warning:</strong> This job has been invoiced. Deleting it may affect invoice records.
                            </div>
                        }
                        else if (job.Status == JobStatus.Active)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Notice:</strong> This job is currently active.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteJobConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteJob" disabled="@isDeletingJob">
                        @if (isDeletingJob)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeletingJob ? "Deleting..." : "Delete Job")
                    </button>
                </div>
            </div>
        </div>
    </div>
}