@rendermode InteractiveServer
@page "/customer/{customerId:int}/receipts"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>@(customer?.Name ?? "Φόρτωση...") - Αποδείξεις - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
            <li class="breadcrumb-item"><a href="/customer/@CustomerId" class="text-decoration-none">@(customer?.Name ?? "Πελάτης")</a></li>
            <li class="breadcrumb-item active" aria-current="page">Αποδείξεις</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">@(customer?.Name ?? "Πελάτης") - Αποδείξεις</h2>
                    @if (customer != null)
                    {
                        <p class="text-muted mb-0">Αποδείξεις πληρωμής για αυτόν τον πελάτη</p>
                    }
                </div>
                <div class="mt-2 mt-md-0">
                    <a href="/receipts/new" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>
                        Δημιουργία Απόδειξης
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (!receipts.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-receipt" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">Δεν υπάρχουν αποδείξεις ακόμα</h4>
                <p class="text-muted">Αυτός ο πελάτης δεν έχει αποδείξεις πληρωμής</p>
                <a href="/receipts/new" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-lg me-2"></i>
                    Δημιουργία Απόδειξης
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Search and Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-3 align-items-end">
                            <!-- Search Receipts -->
                            <div class="col-md-6 col-lg-4">
                                <label class="form-label small text-muted">Αναζήτηση Αποδείξεων</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" 
                                        class="form-control" 
                                        @bind="searchTerm" 
                                        @bind:event="oninput"
                                        placeholder="Αναζήτηση με αριθμό απόδειξης, πελάτη...">
                                </div>
                            </div>

                            <!-- Sort By -->
                            <div class="col-md-3 col-lg-2">
                                <label class="form-label small text-muted">Ταξινόμηση Κατά</label>
                                <select class="form-select" @bind="sortBy">
                                    <option value="date">Ημερομηνία Πληρωμής</option>
                                    <option value="amount">Ποσό</option>
                                    <option value="created">Ημερομηνία Δημιουργίας</option>
                                </select>
                            </div>

                            <!-- Filter -->
                            <div class="col-md-3 col-lg-2">
                                <label class="form-label small text-muted">Φίλτρο</label>
                                <select class="form-select" @bind="filterBy">
                                    <option value="all">Όλες οι Αποδείξεις</option>
                                    <option value="sent">Απεσταλμένες</option>
                                    <option value="notSent">Μη Απεσταλμένες</option>
                                </select>
                            </div>

                            <!-- Filter Summary -->
                            <div class="row mt-3">
                                <div class="col-12">
                                    <small class="text-muted">
                                        Εμφάνιση @filteredReceipts.Count() από @receipts.Count αποδείξεις
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Receipt Statistics -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-primary text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@receipts.Count</h3>
                                <p class="mb-0 small">Σύνολο Αποδείξεων</p>
                            </div>
                            <i class="bi bi-receipt-cutoff fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-success text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@receipts.Sum(r => r.Invoices.Count)</h3>
                                <p class="mb-0 small">Σύνολο Τιμολογίων</p>
                            </div>
                            <i class="bi bi-file-earmark-text fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-info text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">€@receipts.Sum(r => r.TotalAmount).ToString("N0")</h3>
                                <p class="mb-0 small">Συνολικό Ποσό</p>
                            </div>
                            <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-warning text-white border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="mb-0">@receipts.Count(r => r.CreatedDate >= DateTime.Today.AddDays(-30))</h3>
                                <p class="mb-0 small">Αυτόν τον Μήνα</p>
                            </div>
                            <i class="bi bi-calendar-check fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Receipts Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Αρ. Απόδειξης</th>
                                <th>Τιμολόγια</th>
                                <th>Ποσό</th>
                                <th class="text-end">Δημιουργήθηκε</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var receipt in filteredReceipts)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-medium text-primary">@receipt.ReceiptNumber</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">@receipt.Invoices.Count τιμολόγιο(α)</span>
                                    </td>
                                    <td>
                                        <span class="fw-medium">€@receipt.TotalAmount.ToString("N2")</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-medium">@receipt.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" @onclick="() => ViewReceipt(receipt.Id)"
                                                title="Προβολή Απόδειξης">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary"
                                                @onclick="() => DownloadReceipt(receipt.Id, receipt.ReceiptNumber)"
                                                title="Λήψη PDF">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger"
                                                @onclick="() => ShowDeleteConfirmation(receipt)" title="Διαγραφή Απόδειξης">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation && receiptToDelete != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Απόδειξης</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτό θα διαγράψει την απόδειξη <strong>@receiptToDelete.ReceiptNumber</strong> 
                            για <strong>@receiptToDelete.CustomerName</strong>.
                        </p>
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle me-2"></i>
                            Αυτή η απόδειξη καλύπτει @receiptToDelete.Invoices.Count τιμολόγιο(α) συνολικού ποσού 
                            <strong>€@receiptToDelete.TotalAmount.ToString("N2")</strong>.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Απόδειξης")
                    </button>
                </div>
            </div>
        </div>
    </div>
}