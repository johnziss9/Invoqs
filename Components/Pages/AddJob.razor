@rendermode InteractiveServer
@page "/job/new"
@page "/customer/{customerId:int}/job/new"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Add New Job - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            @if (CustomerId > 0)
            {
                <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Customers</a></li>
                <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">@(selectedCustomer?.Name ?? "Customer Jobs")</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Job</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Jobs</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Job</li>
            }
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Add New Job</h2>
                    @if (selectedCustomer != null)
                    {
                        <p class="text-muted mb-0">Customer: @selectedCustomer.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="newJob" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            
            <div class="row">
                <!-- Main Form -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Job Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Customer Selection (only if not pre-selected) -->
                                @if (CustomerId == 0)
                                {
                                    <div class="col-12">
                                        <label class="form-label required">Customer</label>
                                        <InputSelect @bind-Value="newJob.CustomerId" class="form-select" @bind-Value:after="OnCustomerChanged">
                                            <option value="0">-- Select Customer --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">@customer.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.CustomerId)" class="text-danger small" />
                                    </div>
                                }

                                <!-- Job Title -->
                                <div class="col-12">
                                    <label class="form-label required">Job Title</label>
                                    <InputText @bind-Value="newJob.Title" class="form-control" placeholder="Enter job title (e.g., 8-Yard Skip Rental)" />
                                    <ValidationMessage For="@(() => newJob.Title)" class="text-danger small" />
                                </div>

                                <!-- Job Type -->
                                <div class="col-md-6">
                                    <label class="form-label required">Job Type</label>
                                    <InputSelect @bind-Value="newJob.Type" class="form-select" @bind-Value:after="UpdateJobTypeDisplay">
                                        <option value="">-- Select Job Type --</option>
                                        <option value="@JobType.SkipRental">Skip Rental</option>
                                        <option value="@JobType.SandDelivery">Sand Delivery</option>
                                        <option value="@JobType.ForkLiftService">Fork Lift Service</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => newJob.Type)" class="text-danger small" />
                                </div>

                                <!-- Job Status -->
                                <div class="col-md-6">
                                    <label class="form-label required">Initial Status</label>
                                    <InputSelect @bind-Value="newJob.Status" class="form-select">
                                        <option value="@JobStatus.New">New (Scheduled)</option>
                                        <option value="@JobStatus.Active">Active (Start Immediately)</option>
                                    </InputSelect>
                                    <div class="form-text">Most jobs start as "New" until work begins</div>
                                    <ValidationMessage For="@(() => newJob.Status)" class="text-danger small" />
                                </div>

                                <!-- ===== CONDITIONAL TYPE-SPECIFIC FIELDS ===== -->

                                <!-- SKIP RENTAL FIELDS -->
                                @if (newJob.Type == JobType.SkipRental)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Skip Rental Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Skip Type</label>
                                        <InputSelect @bind-Value="newJob.SkipType" class="form-select" @bind-Value:after="OnSkipTypeChanged">
                                            <option value="">-- Select Skip Type --</option>
                                            <option value="SmallSkip">Small Skip</option>
                                            <option value="LargeSkip">Large Skip</option>
                                            <option value="Hook">Hook</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SkipType)" class="text-danger small" />
                                    </div>

                                    @if (newJob.SkipType == "SmallSkip" || newJob.SkipType == "LargeSkip")
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label required">Skip Number</label>
                                            <InputText @bind-Value="newJob.SkipNumber" class="form-control" 
                                                      placeholder="e.g., SK-001" />
                                            <div class="form-text">Enter the skip identification number</div>
                                            <ValidationMessage For="@(() => newJob.SkipNumber)" class="text-danger small" />
                                        </div>
                                    }
                                }

                                <!-- SAND DELIVERY FIELDS -->
                                @if (newJob.Type == JobType.SandDelivery)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Sand Delivery Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Material Type</label>
                                        <InputSelect @bind-Value="newJob.SandMaterialType" class="form-select">
                                            <option value="">-- Select Material --</option>
                                            <option value="Sand">Sand</option>
                                            <option value="CrushedStone">Crushed Stone</option>
                                            <option value="SandMixedWithCrushedStone">Sand Mixed with Crushed Stone</option>
                                            <option value="Soil">Soil</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SandMaterialType)" class="text-danger small" />
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Delivery Method</label>
                                        <InputSelect @bind-Value="newJob.SandDeliveryMethod" class="form-select">
                                            <option value="">-- Select Method --</option>
                                            <option value="InBags">In Bags</option>
                                            <option value="ByTruck">By Truck</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SandDeliveryMethod)" class="text-danger small" />
                                    </div>
                                }

                                <!-- FORKLIFT SERVICE FIELDS -->
                                @if (newJob.Type == JobType.ForkLiftService)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Forklift Service Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Forklift Size</label>
                                        <InputSelect @bind-Value="newJob.ForkliftSize" class="form-select">
                                            <option value="">-- Select Size --</option>
                                            <option value="17m">17m</option>
                                            <option value="25m">25m</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.ForkliftSize)" class="text-danger small" />
                                    </div>
                                }

                                <!-- Address -->
                                <div class="col-12">
                                    <label class="form-label required">Service Address</label>
                                    <InputText @bind-Value="newJob.Address" class="form-control" 
                                              placeholder="Enter the full address where the service will be provided" />
                                    <div class="form-text">This will be used for scheduling and invoicing</div>
                                    <ValidationMessage For="@(() => newJob.Address)" class="text-danger small" />
                                </div>

                                <!-- Start Date and Price -->
                                <div class="col-md-6">
                                    <label class="form-label required">Start Date</label>
                                    <InputDate @bind-Value="newJob.StartDate" class="form-control" />
                                    <ValidationMessage For="@(() => newJob.StartDate)" class="text-danger small" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Price (£)</label>
                                    <InputNumber @bind-Value="newJob.Price" class="form-control" 
                                               placeholder="0.00" step="0.01" />
                                    <ValidationMessage For="@(() => newJob.Price)" class="text-danger small" />
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <InputTextArea @bind-Value="newJob.Description" class="form-control" rows="3" 
                                                  placeholder="Additional details about this job (e.g., skip size, sand type, special requirements)..." />
                                    <ValidationMessage For="@(() => newJob.Description)" class="text-danger small" />
                                </div>

                                <!-- Notes -->
                                <div class="col-12">
                                    <label class="form-label">Internal Notes</label>
                                    <InputTextArea @bind-Value="newJob.Notes" class="form-control" rows="2" 
                                                  placeholder="Internal notes (not visible to customer)..." />
                                    <ValidationMessage For="@(() => newJob.Notes)" class="text-danger small" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-plus-lg me-1"></i>
                                        }
                                        @(isSaving ? "Creating Job..." : "Create Job")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Job Details Preview -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Job Preview</h6>
                        </div>
                        <div class="card-body">
                            <!-- Job Type Icon -->
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(jobTypeIcon))
                                {
                                    <i class="@jobTypeIcon fs-1 text-primary mb-2"></i>
                                    <div class="badge bg-light text-dark fs-6 px-3 py-2">
                                        @jobTypeDisplayName
                                    </div>
                                }
                                else
                                {
                                    <i class="bi bi-question-circle fs-1 text-muted mb-2"></i>
                                    <div class="text-muted small">Select job type</div>
                                }
                            </div>

                            <!-- Job Details -->
                            <div class="job-preview-details">
                                <div class="mb-2">
                                    <small class="text-muted d-block">Title:</small>
                                    <div class="fw-medium">
                                        @(string.IsNullOrWhiteSpace(newJob.Title) ? "Enter job title..." : newJob.Title)
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Status:</small>
                                    <span class="badge bg-@GetStatusColor(newJob.Status)">
                                        <i class="@GetStatusIcon(newJob.Status) me-1"></i>
                                        @newJob.Status
                                    </span>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Address:</small>
                                    <div class="small">
                                        @if (string.IsNullOrWhiteSpace(newJob.Address))
                                        {
                                            <span class="text-muted">Enter service address...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-geo-alt me-1"></i>@newJob.Address
                                        }
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Start Date:</small>
                                    <div class="small">
                                        <i class="bi bi-calendar me-1"></i>
                                        @newJob.StartDate.ToString("dddd, MMMM dd, yyyy")
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Price:</small>
                                    <div class="fw-bold text-success">
                                        £@newJob.Price.ToString("N2")
                                    </div>
                                </div>

                                <!-- ===== TYPE-SPECIFIC PREVIEW FIELDS ===== -->

                                @if (newJob.Type == JobType.SkipRental && !string.IsNullOrEmpty(newJob.SkipType))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Skip Type:</small>
                                        <div class="small">
                                            @newJob.SkipTypeDisplay
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(newJob.SkipNumber))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Skip Number:</small>
                                            <div class="small">
                                                <i class="bi bi-hash me-1"></i>
                                                @newJob.SkipNumber
                                            </div>
                                        </div>
                                    }
                                }

                                @if (newJob.Type == JobType.SandDelivery)
                                {
                                    @if (!string.IsNullOrEmpty(newJob.SandMaterialType))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Material Type:</small>
                                            <div class="small">
                                                @newJob.SandMaterialTypeDisplay
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(newJob.SandDeliveryMethod))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Delivery Method:</small>
                                            <div class="small">
                                                @newJob.SandDeliveryMethodDisplay
                                            </div>
                                        </div>
                                    }
                                }

                                @if (newJob.Type == JobType.ForkLiftService && !string.IsNullOrEmpty(newJob.ForkliftSize))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Forklift Size:</small>
                                        <div class="small">
                                            @newJob.ForkliftSizeDisplay
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrWhiteSpace(newJob.Description))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Description:</small>
                                        <div class="small text-muted">
                                            @newJob.Description
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                <!-- Customer Information -->
                @if (selectedCustomer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Customer Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Name:</span>
                                    <span class="fw-medium">@selectedCustomer.Name</span>
                                </div>
                                @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Email:</span>
                                        <a href="mailto:@selectedCustomer.Email" class="fw-medium text-decoration-none">@selectedCustomer.Email</a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(selectedCustomer.Phone))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Phone:</span>
                                        <a href="tel:@selectedCustomer.Phone" class="fw-medium text-decoration-none">@selectedCustomer.Phone</a>
                                    </div>
                                }
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Created:</span>
                                    <span class="fw-medium">@selectedCustomer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Last Updated:</span>
                                    <span class="fw-medium">@((selectedCustomer.UpdatedDate ?? selectedCustomer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>
                                <!-- Work Status -->
                                <div class="mb-2 pb-2 border-bottom">
                                    @if (selectedCustomer.HasActiveWork)
                                    {
                                        <div class="mb-1">
                                            <span class="text-success">
                                                <i class="bi bi-briefcase me-1"></i>
                                                @((selectedCustomer.ActiveJobs + selectedCustomer.NewJobs)) ongoing jobs
                                            </span>
                                        </div>
                                    }
                                    else if (selectedCustomer.CompletedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Last job completed
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-clock-history me-1"></i>
                                                No jobs yet
                                            </span>
                                        </div>
                                    }
                                    
                                    @* Financial status indicators *@
                                    @if (selectedCustomer.UninvoicedJobs > 0)
                                    {
                                        <div>
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @selectedCustomer.UninvoicedJobs uninvoiced jobs
                                            </span>
                                        </div>
                                    }
                                    
                                    @if (selectedCustomer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                <i class="bi bi-currency-pound me-1"></i>
                                                @selectedCustomer.UnpaidInvoices unpaid (@selectedCustomer.OutstandingAmount.ToString("C"))
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Statistics -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Customer Statistics</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center g-2">
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-primary fs-5">@selectedCustomer.ActiveJobs</div>
                                        <small class="text-muted">Active</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-secondary fs-5">@selectedCustomer.NewJobs</div>
                                        <small class="text-muted">Scheduled</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-success fs-5">@selectedCustomer.CompletedJobs</div>
                                        <small class="text-muted">Completed</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-danger fs-5">@selectedCustomer.CancelledJobs</div>
                                        <small class="text-muted">Cancelled</small>
                                    </div>
                                </div>
                                <div class="col-12 mt-2">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-info fs-5">£@selectedCustomer.TotalRevenue.ToString("N0")</div>
                                        <small class="text-muted">Total Revenue</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </EditForm>
    }
</div>