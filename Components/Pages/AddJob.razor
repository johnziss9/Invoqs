@rendermode InteractiveServer
@page "/job/new"
@page "/customer/{customerId:int}/job/new"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Προσθήκη Νέας Εργασίας - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            @if (CustomerId > 0)
            {
                <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
                <li class="breadcrumb-item"><a href="/customer/@CustomerId/jobs" class="text-decoration-none">@(selectedCustomer?.Name ?? "Εργασίες Πελάτη")</a></li>
                <li class="breadcrumb-item active" aria-current="page">Προσθήκη Εργασίας</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Εργασίες</a></li>
                <li class="breadcrumb-item active" aria-current="page">Προσθήκη Εργασίας</li>
            }
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Προσθήκη Νέας Εργασίας</h2>
                    @if (selectedCustomer != null)
                    {
                        <p class="text-muted mb-0">Πελάτης: @selectedCustomer.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="newJob" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            
            <div class="row">
                <!-- Main Form -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Στοιχεία Εργασίας</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Customer Selection (only if not pre-selected) -->
                                @if (CustomerId == 0)
                                {
                                    <div class="col-12">
                                        <label class="form-label required">Πελάτης</label>
                                        <InputSelect @bind-Value="newJob.CustomerId" class="@(validationErrors?.GetFieldErrors("CustomerId").Any() == true ? "form-select is-invalid" : "form-select")" @bind-Value:after="OnCustomerChanged">
                                            <option value="0">-- Επιλέξτε Πελάτη --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">@customer.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.CustomerId)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("CustomerId").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("CustomerId"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <!-- Job Title -->
                                <div class="col-12">
                                    <label class="form-label required">Τίτλος Εργασίας</label>
                                    <InputText @bind-Value="newJob.Title" class="@GetFieldErrorClass("Title")" placeholder="Εισάγετε τίτλο εργασίας" />
                                    <ValidationMessage For="@(() => newJob.Title)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Title").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Title"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Job Type -->
                                <div class="col-md-6">
                                    <label class="form-label required">Τύπος Εργασίας</label>
                                    <InputSelect @bind-Value="newJob.Type" class="@(validationErrors?.GetFieldErrors("Type").Any() == true ? "form-select is-invalid" : "form-select")" @bind-Value:after="UpdateJobTypeDisplay">
                                        <option value="">-- Επιλέξτε Τύπο Εργασίας --</option>
                                        <option value="@JobType.SkipRental">Ενοικίαση Skip</option>
                                        <option value="@JobType.SandDelivery">Παράδοση Άμμου</option>
                                        <option value="@JobType.ForkLiftService">Υπηρεσία Forklift</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => newJob.Type)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Type").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Type"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Job Status -->
                                <div class="col-md-6">
                                    <label class="form-label required">Αρχική Κατάσταση</label>
                                    <InputSelect @bind-Value="newJob.Status" class="form-select">
                                        <option value="@JobStatus.New">Νέα (Προγραμματισμένη)</option>
                                        <option value="@JobStatus.Active">Ενεργή (Έναρξη Αμέσως)</option>
                                    </InputSelect>
                                    <div class="form-text">Οι περισσότερες εργασίες ξεκινούν ως "Νέα" μέχρι να αρχίσει η δουλειά</div>
                                    <ValidationMessage For="@(() => newJob.Status)" class="text-danger small" />
                                </div>

                                <!-- ===== CONDITIONAL TYPE-SPECIFIC FIELDS ===== -->

                                <!-- SKIP RENTAL FIELDS -->
                                @if (newJob.Type == JobType.SkipRental)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Ενοικίασης Skip</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Τύπος Skip</label>
                                        <InputSelect @bind-Value="newJob.SkipType" class="@(validationErrors?.GetFieldErrors("SkipType").Any() == true ? "form-select is-invalid" : "form-select")" @bind-Value:after="OnSkipTypeChanged">
                                            <option value="">-- Επιλέξτε Τύπο Skip --</option>
                                            <option value="SmallSkip">Μικρό Skip</option>
                                            <option value="LargeSkip">Μεγάλο Skip</option>
                                            <option value="Hook">Γάντζος</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SkipType)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SkipType").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SkipType"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>

                                    @if (newJob.SkipType == "SmallSkip" || newJob.SkipType == "LargeSkip")
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label required">Αριθμός Skip</label>
                                            <InputText @bind-Value="newJob.SkipNumber" class="@GetFieldErrorClass("SkipNumber")" 
                                                    placeholder="π.χ., 001" />
                                            <div class="form-text">Εισάγετε τον αριθμό ταυτοποίησης του skip</div>
                                            <ValidationMessage For="@(() => newJob.SkipNumber)" class="text-danger small" />
                                            @if (validationErrors?.GetFieldErrors("SkipNumber").Any() == true)
                                            {
                                                @foreach (var error in validationErrors.GetFieldErrors("SkipNumber"))
                                                {
                                                    <div class="text-danger small">@error</div>
                                                }
                                            }
                                        </div>
                                    }
                                }

                                <!-- SAND DELIVERY FIELDS -->
                                @if (newJob.Type == JobType.SandDelivery)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Παράδοσης Άμμου</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Τύπος Υλικού</label>
                                        <InputSelect @bind-Value="newJob.SandMaterialType" class="@(validationErrors?.GetFieldErrors("SandMaterialType").Any() == true ? "form-select is-invalid" : "form-select")">
                                            <option value="">-- Επιλέξτε Υλικό --</option>
                                            <option value="Sand">Άμμος</option>
                                            <option value="CrushedStone">Τσακίλι</option>
                                            <option value="SandMixedWithCrushedStone">Άμμος Αναμεμειγμένη με Τσακίλι</option>
                                            <option value="Soil">Χώμα</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SandMaterialType)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SandMaterialType").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SandMaterialType"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Μέθοδος Παράδοσης</label>
                                        <InputSelect @bind-Value="newJob.SandDeliveryMethod" class="@(validationErrors?.GetFieldErrors("SandDeliveryMethod").Any() == true ? "form-select is-invalid" : "form-select")">
                                            <option value="">-- Επιλέξτε Μέθοδο --</option>
                                            <option value="InBags">Σε Σακιά</option>
                                            <option value="ByTruck">Με Φορτηγό</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.SandDeliveryMethod)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SandDeliveryMethod").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SandDeliveryMethod"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <!-- FORKLIFT SERVICE FIELDS -->
                                @if (newJob.Type == JobType.ForkLiftService)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Υπηρεσίας Forklift</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Μέγεθος Forklift</label>
                                        <InputSelect @bind-Value="newJob.ForkliftSize" class="@(validationErrors?.GetFieldErrors("ForkliftSize").Any() == true ? "form-select is-invalid" : "form-select")">
                                            <option value="">-- Επιλέξτε Μέγεθος --</option>
                                            <option value="17m">17μ</option>
                                            <option value="25m">25μ</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => newJob.ForkliftSize)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("ForkliftSize").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("ForkliftSize"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <!-- Address with Autocomplete -->
                                <div class="col-12">
                                    <label class="form-label required">Διεύθυνση Υπηρεσίας</label>
                                    <div class="position-relative">
                                        <input type="text" 
                                            class="@GetFieldErrorClass("Address")" 
                                            value="@newJob.Address"
                                            @oninput="OnAddressInput"
                                            @onfocus="@(() => { if (addressSuggestions.Any()) showAddressSuggestions = true; })"
                                            @onblur="HideAddressSuggestions"
                                            placeholder="Αρχίστε να πληκτρολογείτε μια διεύθυνση..."
                                            autocomplete="off" />
                                        
                                        @if (isSearchingAddresses)
                                        {
                                            <div class="position-absolute end-0 top-50 translate-middle-y me-2">
                                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                    <span class="visually-hidden">Αναζήτηση...</span>
                                                </div>
                                            </div>
                                        }
                                        
                                        @if (showAddressSuggestions && addressSuggestions.Any())
                                        {
                                            <div class="address-suggestions">
                                                @foreach (var suggestion in addressSuggestions)
                                                {
                                                    <div class="address-suggestion-item" @onmousedown="@(() => SelectAddress(suggestion))">
                                                        <i class="bi bi-geo-alt me-2 text-muted"></i>
                                                        @suggestion
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                    <div class="form-text">Αρχίστε να πληκτρολογείτε για να δείτε προηγούμενες διευθύνσεις, ή εισάγετε μια νέα</div>
                                    <ValidationMessage For="@(() => newJob.Address)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Address").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Address"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Start Date and Price -->
                                <div class="col-md-6">
                                    <label class="form-label required">Ημερομηνία Έναρξης</label>
                                    <InputDate @bind-Value="newJob.StartDate" class="@GetFieldErrorClass("StartDate")" />
                                    <ValidationMessage For="@(() => newJob.StartDate)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("StartDate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("StartDate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Τιμή (€)</label>
                                    <InputNumber @bind-Value="newJob.Price" class="@GetFieldErrorClass("Price")" 
                                            placeholder="0.00" step="0.01" />
                                    <ValidationMessage For="@(() => newJob.Price)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Price").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Price"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label class="form-label">Περιγραφή</label>
                                    <InputTextArea @bind-Value="newJob.Description" class="@GetFieldErrorClass("Description")" rows="3" 
                                                placeholder="Πρόσθετες λεπτομέρειες για αυτήν την εργασία (π.χ. ειδικές απαιτήσεις)..." />
                                    <ValidationMessage For="@(() => newJob.Description)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Description").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Description"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Εσωτερικές Σημειώσεις</label>
                                    <InputTextArea @bind-Value="newJob.Notes" class="@GetFieldErrorClass("Notes")" rows="2" 
                                                placeholder="Εσωτερικές σημειώσεις (δεν είναι ορατές στον πελάτη)..." />
                                    <ValidationMessage For="@(() => newJob.Notes)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Notes").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Notes"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                        Ακύρωση
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-plus-lg me-1"></i>
                                        }
                                        @(isSaving ? "Δημιουργία Εργασίας..." : "Δημιουργία Εργασίας")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Job Details Preview -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Προεπισκόπηση Εργασίας</h6>
                        </div>
                        <div class="card-body">
                            <!-- Job Type Icon -->
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(jobTypeIcon))
                                {
                                    <i class="@jobTypeIcon fs-1 text-primary mb-2"></i>
                                    <div class="badge bg-light text-dark fs-6 px-3 py-2">
                                        @jobTypeDisplayName
                                    </div>
                                }
                                else
                                {
                                    <i class="bi bi-question-circle fs-1 text-muted mb-2"></i>
                                    <div class="text-muted small">Επιλέξτε τύπο εργασίας</div>
                                }
                            </div>

                            <!-- Job Details -->
                            <div class="job-preview-details">
                                <div class="mb-2">
                                    <small class="text-muted d-block">Τίτλος:</small>
                                    <div class="fw-medium">
                                        @(string.IsNullOrWhiteSpace(newJob.Title) ? "Εισάγετε τίτλο εργασίας..." : newJob.Title)
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Κατάσταση:</small>
                                    <span class="badge bg-@GetStatusColor(newJob.Status)">
                                        <i class="@GetStatusIcon(newJob.Status) me-1"></i>
                                        @newJob.Status
                                    </span>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Διεύθυνση:</small>
                                    <div class="small">
                                        @if (string.IsNullOrWhiteSpace(newJob.Address))
                                        {
                                            <span class="text-muted">Εισάγετε διεύθυνση υπηρεσίας...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-geo-alt me-1"></i>@newJob.Address
                                        }
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Ημερομηνία Έναρξης:</small>
                                    <div class="small">
                                        <i class="bi bi-calendar me-1"></i>
                                        @newJob.StartDate.ToString("dddd, MMMM dd, yyyy")
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted d-block">Τιμή:</small>
                                    <div class="fw-bold text-success">
                                        €@newJob.Price.ToString("N2")
                                    </div>
                                </div>

                                <!-- ===== TYPE-SPECIFIC PREVIEW FIELDS ===== -->

                                @if (newJob.Type == JobType.SkipRental && !string.IsNullOrEmpty(newJob.SkipType))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Τύπος Skip:</small>
                                        <div class="small">
                                            @newJob.SkipTypeDisplay
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(newJob.SkipNumber))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Αριθμός Skip:</small>
                                            <div class="small">
                                                <i class="bi bi-hash me-1"></i>
                                                @newJob.SkipNumber
                                            </div>
                                        </div>
                                    }
                                }

                                @if (newJob.Type == JobType.SandDelivery)
                                {
                                    @if (!string.IsNullOrEmpty(newJob.SandMaterialType))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Τύπος Υλικού:</small>
                                            <div class="small">
                                                @newJob.SandMaterialTypeDisplay
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(newJob.SandDeliveryMethod))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-block">Μέθοδος Παράδοσης:</small>
                                            <div class="small">
                                                @newJob.SandDeliveryMethodDisplay
                                            </div>
                                        </div>
                                    }
                                }

                                @if (newJob.Type == JobType.ForkLiftService && !string.IsNullOrEmpty(newJob.ForkliftSize))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Μέγεθος Forklift:</small>
                                        <div class="small">
                                            @newJob.ForkliftSizeDisplay
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrWhiteSpace(newJob.Description))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Περιγραφή:</small>
                                        <div class="small text-muted">
                                            @newJob.Description
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                <!-- Customer Information -->
                @if (selectedCustomer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Στοιχεία Πελάτη</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Όνομα:</span>
                                    <span class="fw-medium">@selectedCustomer.Name</span>
                                </div>
                                @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Email:</span>
                                        <a href="mailto:@selectedCustomer.Email" class="fw-medium text-decoration-none">@selectedCustomer.Email</a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(selectedCustomer.Phone))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Τηλέφωνο:</span>
                                        <a href="tel:@selectedCustomer.Phone" class="fw-medium text-decoration-none">@selectedCustomer.Phone</a>
                                    </div>
                                }
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Δημιουργήθηκε:</span>
                                    <span class="fw-medium">@selectedCustomer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                    <span class="fw-medium">@((selectedCustomer.UpdatedDate ?? selectedCustomer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>
                                <!-- Work Status -->
                                <div class="mb-2 pb-2 border-bottom">
                                    @if (selectedCustomer.HasActiveWork)
                                    {
                                        <div class="mb-1">
                                            <span class="text-success">
                                                <i class="bi bi-briefcase me-1"></i>
                                                @((selectedCustomer.ActiveJobs + selectedCustomer.NewJobs)) εργασίες σε εξέλιξη
                                            </span>
                                        </div>
                                    }
                                    else if (selectedCustomer.CompletedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Τελευταία εργασία ολοκληρώθηκε
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-clock-history me-1"></i>
                                                Δεν υπάρχουν εργασίες ακόμα
                                            </span>
                                        </div>
                                    }
                                    
                                    @* Financial status indicators *@
                                    @if (selectedCustomer.UninvoicedJobs > 0)
                                    {
                                        <div>
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @selectedCustomer.UninvoicedJobs μη τιμολογημένες εργασίες
                                            </span>
                                        </div>
                                    }
                                    
                                    @if (selectedCustomer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                <i class="bi bi-currency-euro me-1"></i>
                                                @selectedCustomer.UnpaidInvoices απλήρωτα (@selectedCustomer.OutstandingAmount.ToString("C"))
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Statistics -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Στατιστικά Πελάτη</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center g-2">
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-primary fs-5">@selectedCustomer.ActiveJobs</div>
                                        <small class="text-muted">Ενεργές</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-secondary fs-5">@selectedCustomer.NewJobs</div>
                                        <small class="text-muted">Προγραμματισμένες</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-success fs-5">@selectedCustomer.CompletedJobs</div>
                                        <small class="text-muted">Ολοκληρωμένες</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-danger fs-5">@selectedCustomer.CancelledJobs</div>
                                        <small class="text-muted">Ακυρωμένες</small>
                                    </div>
                                </div>
                                <div class="col-12 mt-2">
                                    <div class="bg-light p-3 rounded">
                                        <div class="fw-bold text-info fs-5">€@selectedCustomer.TotalRevenue.ToString("N0")</div>
                                        <small class="text-muted">Συνολικά Έσοδα</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </EditForm>
    }
</div>