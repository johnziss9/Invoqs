@rendermode InteractiveServer
@page "/invoices"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Τιμολόγια - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item active" aria-current="page">Τιμολόγια</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Τιμολόγια</h2>
                    <p class="text-muted mb-0">Διαχείριση όλων των τιμολογίων πελατών</p>
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <a href="/invoice/new?returnUrl=@Uri.EscapeDataString(Navigation.Uri)" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>
                        Δημιουργία Τιμολογίου
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice Statistics -->
    <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-secondary text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@invoices.Count(i => i.Status == InvoiceStatus.Draft)</h3>
                            <p class="mb-0 small">Πρόχειρα</p>
                        </div>
                        <i class="bi bi-file-earmark fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-primary text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@invoices.Count(i => i.Status == InvoiceStatus.Sent || i.Status == InvoiceStatus.Delivered)</h3>
                            <p class="mb-0 small">Παραδοθέντα/Απεσταλμένα</p>
                        </div>
                        <i class="bi bi-send fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-success text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@invoices.Count(i => i.Status == InvoiceStatus.Paid)</h3>
                            <p class="mb-0 small">Πληρωμένα</p>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-danger text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@invoices.Count(i => i.Status == InvoiceStatus.Overdue)</h3>
                            <p class="mb-0 small">Καθυστερημένα</p>
                        </div>
                        <i class="bi bi-exclamation-triangle fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-info text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">@invoices.Count</h3>
                            <p class="mb-0 small">Σύνολο</p>
                        </div>
                        <i class="bi bi-receipt fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-warning text-white border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0">€@totalOutstanding.ToString("N0")</h3>
                            <p class="mb-0 small">Οφειλόμενα</p>
                        </div>
                        <i class="bi bi-currency-euro fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6 col-lg-4">
                            <label class="form-label small text-muted">Αναζήτηση Τιμολογίων</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" 
                                    @bind="searchTerm" 
                                    @bind:event="oninput"
                                    placeholder="Αναζήτηση με αριθμό τιμολογίου ή πελάτη...">
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Πελάτης</label>
                            <select class="form-select" @bind="customerFilter" @bind:after="FilterInvoices">
                                <option value="">Όλοι οι Πελάτες</option>
                                @foreach (var customer in customers)
                                {
                                    <option value="@customer.Id">@customer.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Κατάσταση</label>
                            <select class="form-select" @bind="statusFilter" @bind:after="FilterInvoices">
                                <option value="">Όλες οι Καταστάσεις</option>
                                <option value="Draft">Πρόχειρα</option>
                                <option value="Sent">Απεσταλμένα</option>
                                <option value="Paid">Πληρωμένα</option>
                                <option value="Overdue">Καθυστερημένα</option>
                                <option value="Cancelled">Ακυρωμένα</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Χρονικό Εύρος</label>
                            <select class="form-select" @bind="dateFilter" @bind:after="FilterInvoices">
                                <option value="all">Όλες οι Περίοδοι</option>
                                <option value="thisWeek">Αυτή την Εβδομάδα</option>
                                <option value="thisMonth">Αυτόν το Μήνα</option>
                                <option value="lastMonth">Προηγούμενο Μήνα</option>
                                <option value="thisYear">Φέτος</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small text-muted">Ταξινόμηση</label>
                            <select class="form-select" @bind="sortBy" @bind:after="FilterInvoices">
                                <option value="created">Ημερομηνία Δημιουργίας</option>
                                <option value="due">Ημερομηνία Λήξης</option>
                                <option value="number">Αριθμός Τιμολογίου</option>
                                <option value="customer">Πελάτης</option>
                                <option value="total">Συνολικό Ποσό</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <small class="text-muted">
                                Εμφάνιση @filteredInvoices.Count() από @invoices.Count τιμολόγια
                                @if (filteredInvoices.Any())
                                {
                                    <span class="ms-2">• Σύνολο: €@filteredInvoices.Sum(i => i.Total).ToString("N2")</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice List/Grid -->
    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
        </div>
    }
    else if (!filteredInvoices.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-receipt text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">
                @if (invoices.Any())
                {
                    <span>Κανένα τιμολόγιο δεν ταιριάζει με τα φίλτρα σας</span>
                }
                else
                {
                    <span>Δεν βρέθηκαν τιμολόγια</span>
                }
            </h4>
            <p class="text-muted">
                @if (invoices.Any())
                {
                    <span>Δοκιμάστε να προσαρμόσετε τα κριτήρια αναζήτησης ή φίλτρου</span>
                }
                else
                {
                    <span>Δημιουργήστε το πρώτο σας τιμολόγιο ολοκληρώνοντας μια εργασία</span>
                }
            </p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var invoice in filteredInvoices)
            {
                <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                    <InvoiceCard Invoice="invoice" 
                                OnView="HandleViewInvoice"
                                OnEdit="HandleEditInvoice"
                                OnMarkAsSent="HandleMarkAsSent"
                                OnMarkAsDelivered="HandleMarkAsDelivered"
                                OnMarkAsPaid="HandleMarkAsPaid"
                                OnCancel="HandleCancelInvoice"
                                OnDelete="HandleDeleteInvoice" />
                </div>
            }
        </div>
    }
</div>