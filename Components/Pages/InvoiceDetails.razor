<!-- Cancel Invoice Modal -->
@if (showCancelModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ακύρωση Τιμολογίου</h5>
                    <button type="button" class="btn-close" @onclick="() => showCancelModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-x-circle text-warning" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Ακύρωση αυτού του τιμολογίου;</h5>
                        <p class="text-muted">
                            Αυτό θα ακυρώσει το τιμολόγιο <strong>@invoice?.InvoiceNumber</strong> και θα το σημειώσει ως μη έγκυρο.
                            Οι συσχετισμένες εργασίες θα είναι διαθέσιμες για επανατιμολόγηση.
                        </p>
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Σημείωση:</strong> Αυτό το τιμολόγιο έχει ήδη σταλεί στον πελάτη.
                            Μια ειδοποίηση ακύρωσης θα σταλεί αυτόματα.
                        </div>
                    </div>

                    <!-- Cancellation Reason -->
                    <div class="mt-3">
                        <label class="form-label">Λόγος ακύρωσης:</label>
                        <select class="form-select" @bind="cancellationReason">
                            <option value="">Επιλέξτε λόγο...</option>
                            <option value="Customer Request">Αίτημα Πελάτη</option>
                            <option value="Service Not Completed">Υπηρεσία Δεν Ολοκληρώθηκε</option>
                            <option value="Pricing Error">Λάθος Τιμολόγησης</option>
                            <option value="Duplicate Invoice">Διπλό Τιμολόγιο</option>
                            <option value="Other">Άλλο</option>
                        </select>
                        @if (cancellationReason == "Other")
                        {
                            <textarea class="form-control mt-2" @bind="customCancellationReason"
                                placeholder="Παρακαλώ προσδιορίστε τον λόγο..." rows="3"></textarea>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showCancelModal = false">Διατήρηση Τιμολογίου</button>
                    <button type="button" class="btn btn-warning" @onclick="CancelInvoice"
                        disabled="@(isProcessing || string.IsNullOrEmpty(cancellationReason))">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle me-1"></i>
                        }
                        @(isProcessing ? "Ακύρωση..." : "Ακύρωση Τιμολογίου")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Send/Resend Confirmation Modal *@
@if (showSendConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(invoice!.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue ? "Επαναποστολή" : "Αποστολή") Τιμολογίου</h5>
                    <button type="button" class="btn-close" @onclick="() => showSendConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-envelope text-primary" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">@(invoice!.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue ? "Επαναποστολή" : "Αποστολή") Τιμολογίου στον Πελάτη;</h5>
                        <p class="text-muted">
                            Αυτή η ενέργεία θα @(invoice!.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue ? "επαναποστείλει" : "αποστείλει") το τιμολόγιο
                            <strong>@invoice?.InvoiceNumber</strong> στον/στην
                            <strong>@invoice?.CustomerName</strong>.
                        </p>
                        @if (!string.IsNullOrEmpty(invoice?.CustomerEmail))
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Το τιμολόγιο θα σταλεί στο: <strong>@invoice.CustomerEmail</strong>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Προειδοποίηση:</strong> Η διεύθυνση email του πελάτη δεν είναι διαθέσιμη.
                            </div>
                        }
                        @if (invoice?.Status == InvoiceStatus.Draft)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Αυτό το τιμολόγιο είναι αυτή τη στιγμή σε κατάσταση προσχεδίου. Η αποστολή θα οριστικοποιήσει το τιμολόγιο.
                            </div>
                        }
                        @if ((invoice!.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue) && invoice.SentDate.HasValue)
                        {
                            <div class="alert alert-secondary">
                                <i class="bi bi-clock-history me-2"></i>
                                Στάλθηκε προηγουμένως στις: <strong>@invoice.SentDate.Value.ToString("dd MMM yyyy 'at' HH:mm")</strong>
                            </div>
                        }
                        @if (invoice?.Total > 1000)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Τιμολόγιο Υψηλής Αξίας:</strong> Αυτό το τιμολόγιο είναι για €@invoice.Total.ToString("N2"). Παρακαλώ επαληθεύστε ότι όλες οι λεπτομέρειες είναι σωστές.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showSendConfirmation = false">Ακύρωση</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmSend" 
                        disabled="@(isProcessing || string.IsNullOrEmpty(invoice?.CustomerEmail))">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-send me-1"></i>
                        }
                        @(isProcessing ? "Αποστολή..." : (invoice!.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue ? "Επαναποστολή Τιμολογίου" : "Αποστολή Τιμολογίου"))
                    </button>
                </div>
            </div>
        </div>
    </div>
}

