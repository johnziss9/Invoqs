@rendermode InteractiveServer
@page "/invoice/{id:int}"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Λεπτομέρειες Τιμολογίου - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/invoices" class="text-decoration-none">Τιμολόγια</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(invoice?.InvoiceNumber ?? "Λεπτομέρειες Τιμολογίου")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <div>
                        <h2 class="text-primary mb-1">@(invoice?.InvoiceNumber ?? "Φόρτωση...")</h2>
                        @if (invoice != null)
                        {
                            <span class="badge @invoice.StatusBadgeClass badge-sm">
                                <i class="@invoice.StatusIcon me-1"></i>
                                @invoice.StatusDisplay
                            </span>
                        }
                    </div>
                    @if (invoice != null)
                    {
                        <p class="text-muted mb-0">Δημιουργήθηκε @invoice.CreatedDate.ToString("MMMM dd, yyyy")</p>
                    }
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <button class="btn btn-outline-secondary" @onclick="PrintInvoice">
                        <i class="bi bi-printer me-1"></i>
                        Εκτύπωση
                    </button>
                    <button class="btn btn-primary" @onclick="DownloadPdf">
                        <i class="bi bi-file-earmark-pdf me-1"></i>
                        Λήψη PDF
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (invoice == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Το τιμολόγιο δεν βρέθηκε ή προέκυψε σφάλμα κατά τη φόρτωση.
            <div class="mt-3">
                <a href="/invoices" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Επιστροφή στα Τιμολόγια
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Success/Error Messages -->
        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
            </div>
        }

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Company & Invoice Header -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt me-2"></i>Πληροφορίες Τιμολογίου
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">Από</h6>
                                <div>
                                    <strong>Your Company Name</strong><br>
                                    123 Business Street<br>
                                    London, SW1A 1AA<br>
                                    Phone: 020 1234 5678<br>
                                    <a href="mailto:info@company.com">info@company.com</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-success mb-3">Χρέωση Σε</h6>
                                @if (customer != null)
                                {
                                    <div>
                                        <strong>@customer.Name</strong><br>
                                        @if (invoice?.LineItems?.Any() == true && !string.IsNullOrWhiteSpace(invoice.LineItems.First().JobAddress))
                                        {
                                            @invoice.LineItems.First().JobAddress<br>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(customer.Email))
                                        {
                                            <a href="mailto:@customer.Email">@customer.Email</a>
                                            <br>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(customer.Phone))
                                        {
                                            <a href="tel:@customer.Phone">@customer.Phone</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Ημερομηνία Τιμολογίου</label>
                                <div class="form-control-plaintext">@invoice?.CreatedDate.ToString("dd MMM yyyy")</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Ημερομηνία Λήξης</label>
                                <div class="form-control-plaintext @(invoice!.IsOverdue ? "text-danger" : "")">
                                    @invoice.DueDate.ToString("dd MMM yyyy")
                                    @if (invoice.IsOverdue)
                                    {
                                        <small class="text-danger">(Καθυστερημένο)</small>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Όροι Πληρωμής</label>
                                <div class="form-control-plaintext">@invoice.PaymentTermsDays ημέρες</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Items -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Υπηρεσίες που Παρασχέθηκαν
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Περιγραφή</th>
                                        <th>Ημερομηνία</th>
                                        <th class="text-end">Ποσό</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in invoice.LineItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-medium">@item.Description</div>
                                            </td>
                                            <td>
                                                @if (item.Job != null)
                                                {
                                                    <span class="text-muted">@item.Job.StartDate.ToString("dd MMM yyyy")</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium">€@item.LineTotal.ToString("N2")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Invoice Totals -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-calculator me-2"></i>Σύνολο Τιμολογίου
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                @if (!string.IsNullOrWhiteSpace(invoice.Notes))
                                {
                                    <label class="form-label fw-medium">Σημειώσεις</label>
                                    <div class="border rounded p-3 bg-light">
                                        @invoice.Notes
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Υποσύνολο:</span>
                                        <span>€@invoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>ΦΠΑ (@(invoice.VatRate)%):</span>
                                        <span>€@invoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong>Σύνολο:</strong>
                                        <strong class="text-primary">€@invoice.Total.ToString("N2")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                @if (invoice.Status == InvoiceStatus.Paid && invoice.PaymentDate.HasValue)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle me-2"></i>Πληρωμή Ελήφθη
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Ημερομηνία Πληρωμής</label>
                                    <div class="form-control-plaintext">@invoice.PaymentDate.Value.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Μέθοδος Πληρωμής</label>
                                    <div class="form-control-plaintext">@TranslatePaymentMethod(invoice.PaymentMethod)</div>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(invoice.PaymentReference))
                                {
                                    <div class="col-md-4">
                                        <label class="form-label fw-medium">Αναφορά Πληρωμής</label>
                                        <div class="form-control-plaintext">@invoice.PaymentReference</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Invoice Actions -->
                @if (invoice.Status != InvoiceStatus.Paid && invoice.Status != InvoiceStatus.Cancelled)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Ενέργειες Τιμολογίου</h6>
                        </div>
                        <div class="card-body">
                            @if (invoice.Status == InvoiceStatus.Draft)
                            {
                                <div class="d-grid gap-2">
                                    <a href="/invoice/@invoice.Id/edit?returnUrl=@Uri.EscapeDataString($"/invoice/{invoice.Id}")" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil me-1"></i>
                                        Επεξεργασία Τιμολογίου
                                    </a>
                                    
                                    <button class="btn btn-success btn-sm" @onclick="() => showSendConfirmation = true" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-send me-1"></i>
                                        Αποστολή με Email
                                    </button>
                                    
                                    <button class="btn btn-info btn-sm" @onclick="() => showDeliveredConfirmation = true" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-hand-thumbs-up me-1"></i>
                                        Σημείωση ως Παραδοθέν
                                    </button>
                                    
                                    <hr class="my-3">
                                    @if (invoice.Status != InvoiceStatus.Draft)
                                    {
                                        <button class="btn btn-outline-danger btn-sm" disabled title="@GetDeleteDisabledReason()">
                                            <i class="bi bi-lock me-1"></i>
                                            @GetDeleteButtonText()
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteConfirmation">
                                            <i class="bi bi-trash me-1"></i>
                                            Διαγραφή Τιμολογίου
                                        </button>
                                    }
                                </div>
                            }
                            else if (invoice.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Delivered || invoice.Status == InvoiceStatus.Overdue)
                            {
                                <div class="d-grid gap-2">
                                    @* Show "Send via Email" button ONLY if invoice is delivered but NOT sent *@
                                    @if (invoice.Status == InvoiceStatus.Delivered && !invoice.IsSent)
                                    {
                                        <button class="btn btn-primary btn-sm" @onclick="() => showSendConfirmation = true" disabled="@isProcessing">
                                            @if (isProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <i class="bi bi-send me-1"></i>
                                            Αποστολή με Email
                                        </button>
                                    }
                                    
                                    <button class="btn btn-success btn-sm" @onclick="() => showMarkAsPaidConfirmation = true">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Σημείωση ως Πληρωμένο
                                    </button>
                                    
                                    @* Show "Resend Invoice" button ONLY if invoice has been sent (IsSent = true) *@
                                    @if (invoice.IsSent)
                                    {
                                        <button class="btn btn-outline-secondary btn-sm" @onclick="ResendInvoice"
                                            disabled="@isProcessing">
                                            @if (isProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <i class="bi bi-envelope me-1"></i>
                                            Επαναποστολή Τιμολογίου
                                        </button>
                                    }
                                    
                                    <hr class="my-3">
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => showCancelModal = true">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Ακύρωση Τιμολογίου
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Invoice Summary -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Σύνοψη Τιμολογίου</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-primary mb-1">€@invoice.Total.ToString("N0")</div>
                                    <small class="text-muted">Συνολικό Ποσό</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-info mb-1">@invoice.LineItems.Count</div>
                                    <small class="text-muted">Εργασίες</small>
                                </div>
                            </div>
                            @if (invoice.Status != InvoiceStatus.Paid && invoice.Status != InvoiceStatus.Cancelled)
                            {
                                <div class="col-12">
                                    <div class="border rounded p-2">
                                        <div class="h4 @(invoice.IsOverdue ? "text-danger" : "text-warning") mb-1">
                                            @(invoice.DaysUntilDue > 0 ? invoice.DaysUntilDue : Math.Abs(invoice.DaysUntilDue))
                                        </div>
                                        <small class="text-muted">
                                            @(invoice.IsOverdue ? "Ημέρες Καθυστέρησης" : "Ημέρες μέχρι τη Λήξη")
                                        </small>
                                    </div>
                                </div>
                            }
                            @if (invoice.Status == InvoiceStatus.Paid)
                            {
                                <button class="btn btn-primary btn-sm" @onclick="GoToCreateReceipt">
                                    <i class="bi bi-receipt me-1"></i>
                                    Δημιουργία Απόδειξης
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- Invoice Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Λεπτομέρειες Τιμολογίου</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Κατάσταση:</span>
                                <span class="badge @invoice.StatusBadgeClass ms-2">@invoice.StatusDisplay</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Δημιουργήθηκε:</span>
                                <span class="fw-medium">@invoice.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Συντελεστής ΦΠΑ:</span>
                                <span class="fw-medium">@invoice.VatRate%</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Details -->
                @if (customer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">
                                Λεπτομέρειες Πελάτη
                                @if (isCustomerDeleted)
                                {
                                    <i class="bi bi-exclamation-triangle text-warning ms-2" title="Ο πελάτης έχει διαγραφεί"></i>
                                }
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (isCustomerDeleted)
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Ο Πελάτης Διαγράφηκε:</strong> Ο πελάτης που σχετίζεται με αυτό το τιμολόγιο έχει αφαιρεθεί από το σύστημα.
                                </div>
                            }
                            
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Όνομα:</span>
                                    <span class="fw-medium @(isCustomerDeleted ? "text-muted text-decoration-line-through" : "")">
                                        @customer.Name
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(customer.Email))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Email:</span>
                                        @if (isCustomerDeleted)
                                        {
                                            <span class="fw-medium text-muted">@customer.Email</span>
                                        }
                                        else
                                        {
                                            <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                        }
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(customer.Phone))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Τηλέφωνο:</span>
                                        @if (isCustomerDeleted)
                                        {
                                            <span class="fw-medium text-muted">@customer.Phone</span>
                                        }
                                        else
                                        {
                                            <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                        }
                                    </div>
                                }
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Δημιουργήθηκε:</span>
                                    <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                    <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>

                                @if (!isCustomerDeleted)
                                {
                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (customer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success fw-normal">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((customer.ActiveJobs + customer.NewJobs)) εργασίες σε εξέλιξη
                                                </span>
                                            </div>
                                        }
                                        else if (customer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Τελευταία εργασία ολοκληρώθηκε
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    Δεν υπάρχουν εργασίες ακόμα
                                                </span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Financial Status -->
                                    @if (customer.UninvoicedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @customer.UninvoicedJobs εργασίες χωρίς τιμολόγηση
                                            </span>
                                        </div>
                                    }

                                    @if (customer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                @customer.UnpaidInvoices απλήρωτα (€@customer.OutstandingAmount.ToString("C"))
                                            </span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Κατάσταση:</span>
                                        <span class="badge bg-secondary ms-2">Διαγραμμένος</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Quick Actions -->
                @if (customer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Γρήγορες Ενέργειες</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (!isCustomerDeleted)
                                {
                                    <!-- Primary Customer Actions (only show for active customers) -->
                                    <a href="/customer/@customer.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-person me-1"></i>
                                        Προβολή Πελάτη
                                    </a>
                                    <a href="/customer/@customer.Id/jobs" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-briefcase me-1"></i>
                                        Εργασίες Πελάτη
                                    </a>
                                    <a href="/customer/@customer.Id/invoices" class="btn btn-outline-dark btn-sm">
                                        <i class="bi bi-file-earmark-text me-1"></i>
                                        Τιμολόγια Πελάτη
                                    </a>
                                    
                                    <hr class="my-2">
                                    
                                    <!-- Creation Actions with customer pre-selected -->
                                    <a href="/customer/@customer.Id/job/new?returnUrl=@Uri.EscapeDataString($"/invoice/{Id}")" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-plus-lg me-1"></i>
                                        Δημιουργία Νέας Εργασίας
                                    </a>
                                    <a href="/customer/@customer.Id/invoice/new" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-receipt me-1"></i>
                                        Δημιουργία Τιμολογίου
                                    </a>
                                    <a href="/receipts/new?customerId=@customer.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-receipt-cutoff me-1"></i>
                                        Δημιουργία Απόδειξης
