@rendermode InteractiveServer
@page "/invoice/{id:int}"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>@(invoice?.InvoiceNumber ?? "Loading...") - Invoice Details - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/invoices" class="text-decoration-none">Invoices</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(invoice?.InvoiceNumber ?? "Invoice Details")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <div>
                        <h2 class="text-primary mb-1">@(invoice?.InvoiceNumber ?? "Loading...")</h2>
                        @if (invoice != null)
                        {
                            <span class="badge @invoice.StatusBadgeClass badge-sm">
                                <i class="@invoice.StatusIcon me-1"></i>
                                @invoice.Status
                            </span>
                        }
                    </div>
                    @if (invoice != null)
                    {
                        <p class="text-muted mb-0">Created @invoice.CreatedDate.ToString("MMMM dd, yyyy")</p>
                    }
                </div>
                <div class="d-flex gap-2 mt-2 mt-md-0">
                    <button class="btn btn-outline-secondary" @onclick="PrintInvoice">
                        <i class="bi bi-printer me-1"></i>
                        Print
                    </button>
                    <button class="btn btn-primary" @onclick="DownloadPdf">
                        <i class="bi bi-file-earmark-pdf me-1"></i>
                        Download PDF
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (invoice == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Invoice not found or an error occurred while loading.
            <div class="mt-3">
                <a href="/invoices" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Invoices
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Success/Error Messages -->
        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
            </div>
        }

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Company & Invoice Header -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt me-2"></i>Invoice Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">From</h6>
                                <div>
                                    <strong>Your Company Name</strong><br>
                                    123 Business Street<br>
                                    London, SW1A 1AA<br>
                                    Phone: 020 1234 5678<br>
                                    <a href="mailto:info@company.com">info@company.com</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-success mb-3">Bill To</h6>
                                @if (customer != null)
                                {
                                    <div>
                                        <strong>@customer.Name</strong><br>
                                        @if (invoice?.LineItems?.Any() == true && !string.IsNullOrWhiteSpace(invoice.LineItems.First().JobAddress))
                                        {
                                            @invoice.LineItems.First().JobAddress<br>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(customer.Email))
                                        {
                                            <a href="mailto:@customer.Email">@customer.Email</a>
                                            <br>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(customer.Phone))
                                        {
                                            <a href="tel:@customer.Phone">@customer.Phone</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Invoice Date</label>
                                <div class="form-control-plaintext">@invoice?.CreatedDate.ToString("dd MMM yyyy")</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Due Date</label>
                                <div class="form-control-plaintext @(invoice!.IsOverdue ? "text-danger" : "")">
                                    @invoice.DueDate.ToString("dd MMM yyyy")
                                    @if (invoice.IsOverdue)
                                    {
                                        <small class="text-danger">(Overdue)</small>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-medium">Payment Terms</label>
                                <div class="form-control-plaintext">@invoice.PaymentTermsDays days</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Items -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Services Provided
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th>Date</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in invoice.LineItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-medium">@item.Description</div>
                                            </td>
                                            <td>
                                                @if (item.Job != null)
                                                {
                                                    <span class="text-muted">@item.Job.StartDate.ToString("dd MMM yyyy")</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium">Â£@item.LineTotal.ToString("N2")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Invoice Totals -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-calculator me-2"></i>Invoice Total
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                @if (!string.IsNullOrWhiteSpace(invoice.Notes))
                                {
                                    <label class="form-label fw-medium">Notes</label>
                                    <div class="border rounded p-3 bg-light">
                                        @invoice.Notes
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span>Â£@invoice.Subtotal.ToString("N2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>VAT (@(invoice.VatRate)%):</span>
                                        <span>Â£@invoice.VatAmount.ToString("N2")</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong>Total:</strong>
                                        <strong class="text-primary">Â£@invoice.Total.ToString("N2")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                @if (invoice.Status == InvoiceStatus.Paid && invoice.PaidDate.HasValue)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-check-circle me-2"></i>Payment Received
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Payment Date</label>
                                    <div class="form-control-plaintext">@invoice.PaidDate.Value.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Payment Method</label>
                                    <div class="form-control-plaintext">@(invoice.PaymentMethod ?? "Not specified")</div>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(invoice.PaymentReference))
                                {
                                    <div class="col-md-4">
                                        <label class="form-label fw-medium">Payment Reference</label>
                                        <div class="form-control-plaintext">@invoice.PaymentReference</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Invoice Actions -->
                @if (invoice.Status != InvoiceStatus.Paid && invoice.Status != InvoiceStatus.Cancelled)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Invoice Actions</h6>
                        </div>
                        <div class="card-body">
                            @if (invoice.Status == InvoiceStatus.Draft)
                            {
                                <div class="d-grid gap-2">
                                    <a href="/invoice/@invoice.Id/edit?returnUrl=@Uri.EscapeDataString($"/invoice/{invoice.Id}")" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil me-1"></i>
                                        Edit Invoice
                                    </a>
                                    <button class="btn btn-success btn-sm" @onclick="() => showSendConfirmation = true" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-send me-1"></i>
                                        Send Invoice
                                    </button>
                                    <hr class="my-3">
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => showDeleteModal = true">
                                        <i class="bi bi-trash me-1"></i>
                                        Delete Invoice
                                    </button>
                                </div>
                            }
                            else if (invoice.Status == InvoiceStatus.Sent || invoice.Status == InvoiceStatus.Overdue)
                            {
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success btn-sm" @onclick="() => showMarkAsPaidConfirmation = true">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Mark as Paid
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm" @onclick="ResendInvoice"
                                        disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-envelope me-1"></i>
                                        Resend Invoice
                                    </button>
                                    <hr class="my-3">
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => showCancelModal = true">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Cancel Invoice
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Invoice Summary -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Invoice Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-primary mb-1">Â£@invoice.Total.ToString("N0")</div>
                                    <small class="text-muted">Total Amount</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-info mb-1">@invoice.LineItems.Count</div>
                                    <small class="text-muted">Line Items</small>
                                </div>
                            </div>
                            @if (invoice.Status != InvoiceStatus.Paid && invoice.Status != InvoiceStatus.Cancelled)
                            {
                                <div class="col-12">
                                    <div class="border rounded p-2">
                                        <div class="h4 @(invoice.IsOverdue ? "text-danger" : "text-warning") mb-1">
                                            @(invoice.DaysUntilDue > 0 ? invoice.DaysUntilDue : Math.Abs(invoice.DaysUntilDue))
                                        </div>
                                        <small class="text-muted">
                                            @(invoice.IsOverdue ? "Days Overdue" : "Days Until Due")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Invoice Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Invoice Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Status:</span>
                                <span class="badge @invoice.StatusBadgeClass ms-2">@invoice.Status</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Created:</span>
                                <span class="fw-medium">@invoice.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">VAT Rate:</span>
                                <span class="fw-medium">@invoice.VatRate%</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Details -->
                @if (customer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Customer Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Name:</span>
                                    <span class="fw-medium">@customer.Name</span>
                                </div>
                                @if (!string.IsNullOrEmpty(customer.Email))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Email:</span>
                                        <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(customer.Phone))
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Phone:</span>
                                        <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                    </div>
                                }
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Created:</span>
                                    <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Last Updated:</span>
                                    <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>

                                <!-- Work Status -->
                                <div class="pb-2 border-bottom mb-2">
                                    @if (customer.HasActiveWork)
                                    {
                                        <div class="mb-1">
                                            <span class="text-success">
                                                <i class="bi bi-briefcase me-1"></i>
                                                @((customer.ActiveJobs + customer.NewJobs)) ongoing jobs
                                            </span>
                                        </div>
                                    }
                                    else if (customer.CompletedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Last job completed
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mb-1">
                                            <span class="text-muted">
                                                <i class="bi bi-clock-history me-1"></i>
                                                No jobs yet
                                            </span>
                                        </div>
                                    }
                                </div>

                                <!-- Financial Status -->
                                @if (customer.UninvoicedJobs > 0)
                                {
                                    <div class="mb-1">
                                        <span class="text-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            @customer.UninvoicedJobs uninvoiced jobs
                                        </span>
                                    </div>
                                }

                                @if (customer.UnpaidInvoices > 0)
                                {
                                    <div>
                                        <span class="text-danger">
                                            <i class="bi bi-currency-pound me-1"></i>
                                            @customer.UnpaidInvoices unpaid (@customer.OutstandingAmount.ToString("C"))
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Quick Actions -->
                @if (customer != null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <!-- Primary Customer Actions -->
                                <a href="/customer/@customer.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-person me-1"></i>
                                    View Customer
                                </a>
                                <a href="/customer/@customer.Id/jobs" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-briefcase me-1"></i>
                                    Customer Jobs
                                </a>
                                <a href="/customer/@customer.Id/job/new?returnUrl=@Uri.EscapeDataString($"/invoice/{Id}")" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-plus-lg me-1"></i>
                                    Create New Job
                                </a>
                                <a href="/customer/@customer.Id/invoice/new" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-receipt me-1"></i>
                                    Create Invoice
                                </a>
                                <a href="/customer/@customer.Id/invoices" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-file-earmark-text me-1"></i>
                                    Customer Invoices
                                </a>
                                <a href="/receipts/new" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-receipt-cutoff me-1"></i>
                                    Create Receipt
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@* Mark as Paid Confirmation Modal *@
@if (showMarkAsPaidConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mark Invoice as Paid</h5>
                    <button type="button" class="btn-close" @onclick="HideMarkAsPaidConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Mark as Paid?</h5>
                        <p class="text-muted">
                            This will mark invoice <strong>@invoice?.InvoiceNumber</strong> as paid.
                            Total amount: <strong>Â£@invoice?.Total.ToString("N2")</strong>
                        </p>
                    </div>

                    <!-- Payment Details -->
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Payment Date:</label>
                                <input type="date" class="form-control" @bind="paymentDate" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Payment Method:</label>
                                <select class="form-select" @bind="paymentMethod">
                                    <option value="Bank Transfer">Bank Transfer</option>
                                    <option value="Cash">Cash</option>
                                    <option value="Cheque">Cheque</option>
                                    <option value="Credit Card">Credit Card</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label">Payment Reference (optional):</label>
                            <input type="text" class="form-control" @bind="paymentReference"
                                placeholder="Transaction ID, check number, etc." />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideMarkAsPaidConfirmation">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmMarkAsPaid" disabled="@isMarkingPaid">
                        @if (isMarkingPaid)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle me-1"></i>
                        }
                        @(isMarkingPaid ? "Processing..." : "Mark as Paid")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Cancel Invoice Modal -->
@if (showCancelModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Invoice</h5>
                    <button type="button" class="btn-close" @onclick="() => showCancelModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone.
                    </div>
                    <p>Are you sure you want to cancel invoice <strong>@invoice?.InvoiceNumber</strong>?</p>
                    <p class="text-muted">This will mark the invoice as cancelled and make the associated jobs available for
                        invoicing again.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showCancelModal = false">Keep
                        Invoice</button>
                    <button type="button" class="btn btn-danger" @onclick="CancelInvoice" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Cancel Invoice
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Send Confirmation Modal *@
@if (showSendConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Send Invoice</h5>
                    <button type="button" class="btn-close" @onclick="() => showSendConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-envelope text-primary" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Send Invoice?</h5>
                        <p class="text-muted">
                            This will send invoice <strong>@invoice?.InvoiceNumber</strong> to the customer.
                            The invoice status will be changed to "Sent".
                        </p>
                        @if (invoice?.Status == InvoiceStatus.Draft)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                This invoice is currently in draft status. Sending will finalize the invoice.
                            </div>
                        }
                        @if (invoice?.Total > 1000)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>High Value Invoice:</strong> This invoice is for Â£@invoice.Total.ToString("N2"). Please verify all details are correct.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showSendConfirmation = false">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmSend" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-send me-1"></i>
                        }
                        @(isProcessing ? "Sending..." : "Send Invoice")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Invoice Modal -->
@if (showDeleteModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Invoice</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure?</h5>
                        <p class="text-muted">
                            This will permanently delete invoice <strong>@invoice?.InvoiceNumber</strong>.
                            This action cannot be undone.
                        </p>
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Deleting this invoice will make the associated jobs available for invoicing again.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteModal = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteInvoice" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Deleting..." : "Delete Invoice")
                    </button>
                </div>
            </div>
        </div>
    </div>
}