@rendermode InteractiveServer
@page "/customer/{customerId:int}"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Στοιχεία Πελάτη - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/customers" class="text-decoration-none">Πελάτες</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(customer?.Name ?? "Στοιχεία Πελάτη")</li>
        </ol>
    </nav>

    <!-- Error Message Alert -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <div>
                        <h2 class="text-primary mb-1">@(customer?.Name ?? "Φόρτωση...")</h2>
                    </div>
                    @if (customer != null)
                    {
                        <p class="text-muted mb-0">Πελάτης από @customer.CreatedDate.ToString("MMMM yyyy")</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (customer == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Ο πελάτης δεν βρέθηκε ή προέκυψε σφάλμα κατά τη φόρτωση.
            <div class="mt-3">
                <a href="/customers" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Επιστροφή στους Πελάτες
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Contact Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-person-vcard me-2"></i>Στοιχεία Επικοινωνίας
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Email</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(customer.Email))
                                    {
                                        <a href="mailto:@customer.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-2"></i>@customer.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Δεν παρέχεται</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Αριθμός Τηλεφώνου</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(customer.Phone))
                                    {
                                        <a href="tel:@customer.Phone" class="text-decoration-none">
                                            <i class="bi bi-telephone me-2"></i>@customer.Phone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Δεν παρέχεται</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Business Information -->
                @if (!string.IsNullOrEmpty(customer.CompanyRegistrationNumber) || !string.IsNullOrEmpty(customer.VatNumber) || !string.IsNullOrEmpty(customer.Notes))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-building me-2"></i>Επιχειρηματικές Πληροφορίες
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @if (!string.IsNullOrEmpty(customer.CompanyRegistrationNumber))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Αριθμός Μητρώου Εταιρείας</label>
                                        <div class="form-control-plaintext">@customer.CompanyRegistrationNumber</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(customer.VatNumber))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">ΑΦΜ</label>
                                        <div class="form-control-plaintext">@customer.VatNumber</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(customer.Notes))
                                {
                                    <div class="col-12">
                                        <label class="form-label fw-medium">Σημειώσεις</label>
                                        <div class="border rounded p-3 bg-light">
                                            @customer.Notes
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Recent Jobs -->
                @if (recentJobs != null && recentJobs.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-clock-history me-2"></i>Πρόσφατες Εργασίες
                            </h5>
                            <a href="/customer/@CustomerId/jobs" class="btn btn-outline-primary btn-sm">
                                Προβολή Όλων των Εργασιών
                            </a>
                        </div>
                        <div class="card-body">
                            @foreach (var job in recentJobs.Take(5))
                            {
                                <div class="d-flex justify-content-between align-items-center py-3 @(job != recentJobs.Take(5).Last() ? "border-bottom" : "")">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="@job.TypeIcon text-primary" style="font-size: 1.2rem;"></i>
                                        </div>
                                        <div>
                                            <div class="fw-medium">@System.Text.RegularExpressions.Regex.Replace(job.Type.ToString(), "([a-z])([A-Z])", "$1 $2")</div>
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>@job.Address
                                            </small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-@job.StatusColor">@job.StatusDisplay</span>
                                        <div class="small text-muted mt-1">@job.StartDate.ToString("dd MMM yyyy")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Δεν Υπάρχουν Εργασίες Ακόμα</h5>
                            <p class="text-muted mb-3">Αυτός ο πελάτης δεν έχει προγραμματισμένες εργασίες.</p>
                            <a href="/customer/@CustomerId/job/new" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>
                                Δημιουργία Πρώτης Εργασίας
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Customer Actions -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Ενέργειες Πελάτη</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/customer/@CustomerId/edit?returnUrl=@Uri.EscapeDataString($"/customer/{CustomerId}")" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>
                                Επεξεργασία Πελάτη
                            </a>
                            <hr class="my-2">
                            @if (customerStats.ActiveJobs > 0)
                            {
                                <button class="btn btn-outline-danger btn-sm" disabled title="@GetDeleteDisabledReason()">
                                    <i class="bi bi-lock me-1"></i>
                                    @GetDeleteButtonText()
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteConfirmation">
                                    <i class="bi bi-trash me-1"></i>
                                    Διαγραφή Πελάτη
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- Customer Stats -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Στατιστικά Πελάτη</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-primary mb-1">@customerStats.ActiveJobs</div>
                                    <small class="text-muted">Ενεργές</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-secondary mb-1">@customerStats.NewJobs</div>
                                    <small class="text-muted">Προγραμματισμένες</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-success mb-1">@customerStats.CompletedJobs</div>
                                    <small class="text-muted">Ολοκληρωμένες</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="h4 text-danger mb-1">@customerStats.CancelledJobs</div>
                                    <small class="text-muted">Ακυρωμένες</small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="border rounded p-2">
                                    <div class="h4 text-warning mb-1">€@customerStats.TotalRevenue.ToString("N0")</div>
                                    <small class="text-muted">Συνολικά Έσοδα</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Λεπτομέρειες Πελάτη</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Δημιουργήθηκε:</span>
                                <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                            </div>
                            
                            <!-- Work Status -->
                            <div class="pb-2 border-bottom mb-2">
                                @if (customer.HasActiveWork)
                                {
                                    <div class="mb-1">
                                        <span class="text-success">
                                            <i class="bi bi-briefcase me-1"></i>
                                            @((customer.ActiveJobs + customer.NewJobs)) εργασίες σε εξέλιξη
                                        </span>
                                    </div>
                                }
                                else if (customer.CompletedJobs > 0)
                                {
                                    <div class="mb-1">
                                        <span class="text-muted">
                                            <i class="bi bi-check-circle me-1"></i>
                                            Τελευταία εργασία ολοκληρώθηκε
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-1">
                                        <span class="text-muted">
                                            <i class="bi bi-clock-history me-1"></i>
                                            Δεν υπάρχουν εργασίες ακόμα
                                        </span>
                                    </div>
                                }
                            </div>
                            
                            <!-- Financial Status -->
                            @if (customer.UninvoicedJobs > 0)
                            {
                                <div class="mb-1">
                                    <span class="text-warning">
                                        <i class="bi bi-exclamation-circle me-1"></i>
                                        @customer.UninvoicedJobs μη τιμολογημένες εργασίες
                                    </span>
                                </div>
                            }
                            
                            @if (customer.UnpaidInvoices > 0)
                            {
                                <div>
                                    <span class="text-danger">
                                        @customer.UnpaidInvoices απλήρωτα (€@customer.OutstandingAmount.ToString("N2"))
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0">Γρήγορες Ενέργειες</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/customer/@CustomerId/job/new?returnUrl=@Uri.EscapeDataString($"/customer/{CustomerId}")" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-plus-lg me-1"></i>
                                Δημιουργία Νέας Εργασίας
                            </a>
                            <a href="/customer/@CustomerId/invoice/new" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-receipt me-1"></i>
                                Δημιουργία Τιμολογίου
                            </a>
                            <a href="/receipts/new?customerId=@CustomerId" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-receipt-cutoff me-1"></i>
                                Δημιουργία Απόδειξης
                            </a>
                            <a href="/customer/@customer.Id/invoices" class="btn btn-outline-dark btn-sm">
                                <i class="bi bi-file-earmark-text me-1"></i>
                                Τιμολόγια Πελάτη
                            </a>
                            <a href="/customer/@customer.Id/receipts" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-receipt-cutoff me-1"></i>
                                Αποδείξεις Πελάτη
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Πελάτη</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτό θα διαγράψει μόνιμα τον/την <strong>@customer?.Name</strong> και όλα τα σχετικά δεδομένα.
                            Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                        </p>
                        @if (customerStats.ActiveJobs > 0 || customerStats.CompletedJobs > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Αυτός ο πελάτης έχει @(customerStats.ActiveJobs + customerStats.CompletedJobs) συσχετισμένες εργασίες που θα παραμείνουν στο σύστημα.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Πελάτη")
                    </button>
                </div>
            </div>
        </div>
    </div>
}