@rendermode InteractiveServer
@page "/job/{jobId:int}/edit"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Edit Job - @(job?.Title ?? "Loading...") - Invoqs</PageTitle>

<Navbar CurrentUser="@currentUser" OnLogout="HandleLogout" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Jobs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Job</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Edit Job</h2>
                    @if (customer != null)
                    {
                        <p class="text-muted mb-0">Customer: @customer.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Job not found or an error occurred while loading.
        </div>
    }
    else
    {
        <EditForm Model="job" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            
            <div class="row">
                <!-- Main Form -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Job Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Job Title -->
                                <div class="col-12">
                                    <label class="form-label required">Job Title</label>
                                    <InputText @bind-Value="job.Title" class="form-control" placeholder="Enter job title" />
                                    <ValidationMessage For="@(() => job.Title)" class="text-danger small" />
                                </div>

                                <!-- Job Type and Status -->
                                <div class="col-md-6">
                                    <label class="form-label required">Job Type</label>
                                    <InputSelect @bind-Value="job.Type" class="form-select" @bind-Value:after="OnJobTypeChanged">
                                        <option value="@JobType.SkipRental">Skip Rental</option>
                                        <option value="@JobType.SandDelivery">Sand Delivery</option>
                                        <option value="@JobType.ForkLiftService">Fork Lift Service</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => job.Type)" class="text-danger small" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Status</label>
                                    <InputSelect @bind-Value="job.Status" class="form-select">
                                        <option value="@JobStatus.New">New</option>
                                        <option value="@JobStatus.Active">Active</option>
                                        <option value="@JobStatus.Completed">Completed</option>
                                        <option value="@JobStatus.Cancelled">Cancelled</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => job.Status)" class="text-danger small" />
                                </div>

                                <!-- ===== CONDITIONAL TYPE-SPECIFIC FIELDS ===== -->

                                <!-- SKIP RENTAL FIELDS -->
                                @if (job.Type == JobType.SkipRental)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Skip Rental Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Skip Type</label>
                                        <InputSelect @bind-Value="job.SkipType" class="form-select" @bind-Value:after="OnSkipTypeChanged">
                                            <option value="">-- Select Skip Type --</option>
                                            <option value="SmallSkip">Small Skip</option>
                                            <option value="LargeSkip">Large Skip</option>
                                            <option value="Hook">Hook</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SkipType)" class="text-danger small" />
                                    </div>

                                    @if (job.SkipType == "SmallSkip" || job.SkipType == "LargeSkip")
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label required">Skip Number</label>
                                            <InputText @bind-Value="job.SkipNumber" class="form-control" 
                                                      placeholder="e.g., SK-001" />
                                            <div class="form-text">Enter the skip identification number</div>
                                            <ValidationMessage For="@(() => job.SkipNumber)" class="text-danger small" />
                                        </div>
                                    }
                                }

                                <!-- SAND DELIVERY FIELDS -->
                                @if (job.Type == JobType.SandDelivery)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Sand Delivery Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Material Type</label>
                                        <InputSelect @bind-Value="job.SandMaterialType" class="form-select">
                                            <option value="">-- Select Material --</option>
                                            <option value="Sand">Sand</option>
                                            <option value="CrushedStone">Crushed Stone</option>
                                            <option value="SandMixedWithCrushedStone">Sand Mixed with Crushed Stone</option>
                                            <option value="Soil">Soil</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SandMaterialType)" class="text-danger small" />
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Delivery Method</label>
                                        <InputSelect @bind-Value="job.SandDeliveryMethod" class="form-select">
                                            <option value="">-- Select Method --</option>
                                            <option value="InBags">In Bags</option>
                                            <option value="ByTruck">By Truck</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SandDeliveryMethod)" class="text-danger small" />
                                    </div>
                                }

                                <!-- FORKLIFT SERVICE FIELDS -->
                                @if (job.Type == JobType.ForkLiftService)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Forklift Service Details</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Forklift Size</label>
                                        <InputSelect @bind-Value="job.ForkliftSize" class="form-select">
                                            <option value="">-- Select Size --</option>
                                            <option value="17m">17m</option>
                                            <option value="25m">25m</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.ForkliftSize)" class="text-danger small" />
                                    </div>
                                }

                                <!-- Address -->
                                <div class="col-12">
                                    <label class="form-label required">Service Address</label>
                                    <InputText @bind-Value="job.Address" class="form-control" 
                                              placeholder="Enter the address where the service will be provided" />
                                    <ValidationMessage For="@(() => job.Address)" class="text-danger small" />
                                </div>

                                <!-- Dates -->
                                <div class="col-md-6">
                                    <label class="form-label required">Start Date</label>
                                    <InputDate @bind-Value="job.StartDate" class="form-control" />
                                    <ValidationMessage For="@(() => job.StartDate)" class="text-danger small" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">End Date</label>
                                    <InputDate @bind-Value="job.EndDate" class="form-control" />
                                    <div class="form-text">Leave empty if job is not yet completed</div>
                                    <ValidationMessage For="@(() => job.EndDate)" class="text-danger small" />
                                </div>

                                <!-- Price -->
                                <div class="col-md-6">
                                    <label class="form-label required">Price (£)</label>
                                    <InputNumber @bind-Value="job.Price" class="form-control" 
                                               placeholder="0.00" step="0.01" />
                                    <ValidationMessage For="@(() => job.Price)" class="text-danger small" />
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <InputTextArea @bind-Value="job.Description" class="form-control" rows="4" 
                                                  placeholder="Additional details about this job..." />
                                    <ValidationMessage For="@(() => job.Description)" class="text-danger small" />
                                </div>

                                <!-- Notes -->
                                <div class="col-12">
                                    <label class="form-label">Internal Notes</label>
                                    <InputTextArea @bind-Value="job.Notes" class="form-control" rows="3" 
                                                  placeholder="Internal notes (not visible to customer)..." />
                                    <ValidationMessage For="@(() => job.Notes)" class="text-danger small" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        }
                                        @(isSaving ? "Saving..." : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Job Status -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Job Status</h6>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="badge bg-@job.StatusColor fs-6 px-3 py-2">
                                    <i class="@job.StatusIcon me-2"></i>
                                    @job.Status
                                </span>
                            </div>
                            <div class="row text-center g-3">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h5 text-primary mb-1">@job.DurationDays</div>
                                        <small class="text-muted">Days</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h5 text-success mb-1">£@job.Price.ToString("N2")</div>
                                        <small class="text-muted">Price</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    @if (customer != null)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h6 class="mb-0">Customer Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="small">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Name:</span>
                                        <span class="fw-medium">@customer.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(customer.Email))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Email:</span>
                                            <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(customer.Phone))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Phone:</span>
                                            <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Created:</span>
                                        <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Last Updated:</span>
                                        <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                    </div>

                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (customer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((customer.ActiveJobs + customer.NewJobs)) ongoing jobs
                                                </span>
                                            </div>
                                        }
                                        else if (customer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Last job completed
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    No jobs yet
                                                </span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Financial Status -->
                                    @if (customer.UninvoicedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @customer.UninvoicedJobs uninvoiced jobs
                                            </span>
                                        </div>
                                    }

                                    @if (customer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                <i class="bi bi-currency-pound me-1"></i>
                                                @customer.UnpaidInvoices unpaid (@customer.OutstandingAmount.ToString("C"))
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Job Details -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Job Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Created:</span>
                                    <span class="fw-medium">@job.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Last Updated:</span>
                                    <span class="fw-medium">@((job.UpdatedDate ?? job.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Job Type:</span>
                                    <span class="badge bg-light text-dark">
                                        <i class="@job.TypeIcon me-1"></i>
                                        @job.TypeDisplayName
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (customer != null)
                                {
                                    <a href="/customer/@customer.Id/jobs" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-person me-1"></i>
                                        View Customer Jobs
                                    </a>
                                }
                                @if (job.Status == JobStatus.Completed)
                                {
                                    <button type="button" class="btn btn-outline-info btn-sm" @onclick="GenerateInvoice">
                                        <i class="bi bi-file-earmark-text me-1"></i>
                                        Generate Invoice
                                    </button>
                                }
                                else if (job.Status == JobStatus.New)
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm" @onclick="() => QuickStatusChange(JobStatus.Active)">
                                        <i class="bi bi-play-circle me-1"></i>
                                        Start Job
                                    </button>
                                }
                                else if (job.Status == JobStatus.Active)
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm" @onclick="() => QuickStatusChange(JobStatus.Completed)">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Mark Completed
                                    </button>
                                }
                                <hr class="my-2">
                                <button type="button" class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteConfirmation">
                                    <i class="bi bi-trash me-1"></i>
                                    Delete Job
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Job</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure?</h5>
                        <p class="text-muted">
                            This will permanently delete the job <strong>@job?.Title</strong>.
                            This action cannot be undone.
                        </p>
                        @if (job?.Status == JobStatus.Completed)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                This job is completed and may be associated with invoices.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Deleting..." : "Delete Job")
                    </button>
                </div>
            </div>
        </div>
    </div>
}