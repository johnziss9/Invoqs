@rendermode InteractiveServer
@page "/job/{jobId:int}/edit"
@using Invoqs.Components.UI
@using Invoqs.Models

<PageTitle>Επεξεργασία Εργασίας - @(job?.Title ?? "Φόρτωση...") - Invoqs</PageTitle>

<Navbar />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Πίνακας Ελέγχου</a></li>
            <li class="breadcrumb-item"><a href="/jobs" class="text-decoration-none">Εργασίες</a></li>
            <li class="breadcrumb-item active" aria-current="page">Επεξεργασία Εργασίας</li>
        </ol>
    </nav>

    <!-- Error Message Alert -->
    @if (!string.IsNullOrEmpty(errorMessage) && !isLoading && job != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @* Customer Deleted Warning *@
    @if (isCustomerDeleted && job != null)
    {
        <div class="alert alert-warning mb-3">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Ο Πελάτης Διαγράφηκε:</strong> Αυτή η εργασία ανήκει σε διαγραμμένο πελάτη (@job.CustomerName).
            Μπορείτε ακόμα να επεξεργαστείτε τις λεπτομέρειες της εργασίας, αλλά οι πληροφορίες του πελάτη δεν είναι πλέον διαθέσιμες.
        </div>
    }

    @* Invoiced Job Warning *@
    @if (isInvoiced && job != null)
    {
        <div class="alert alert-warning mb-3">
            <i class="bi bi-exclamation-circle me-2"></i>
            <strong>Περιορισμένη Επεξεργασία:</strong> Αυτή η εργασία έχει τιμολογηθεί. Μόνο η κατάσταση και οι σημειώσεις μπορούν να τροποποιηθούν.
            <a href="/invoice/@job.InvoiceId" class="alert-link ms-2">Προβολή Τιμολογίου</a>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="text-primary mb-1">Επεξεργασία Εργασίας</h2>
                    @if (customer != null)
                    {
                        <p class="text-muted mb-0">Πελάτης: @customer.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (job?.Status == JobStatus.Cancelled)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Προειδοποίηση:</strong> Αυτή η εργασία έχει ακυρωθεί. 
            Η διαγραφή θα την αφαιρέσει οριστικά από τα αρχεία σας.
        </div>
    }

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Φόρτωση...</span>
            </div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Η εργασία δεν βρέθηκε ή προέκυψε σφάλμα κατά τη φόρτωση.
        </div>
    }
    else
    {
        <EditForm Model="job" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
            <DataAnnotationsValidator />
            
            <div class="row">
                <!-- Main Form -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Πληροφορίες Εργασίας</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Job Title -->
                                <div class="col-12">
                                    <label class="form-label required">Τίτλος Εργασίας</label>
                                    <InputText @bind-Value="job.Title" class="@GetFieldErrorClass("Title")" placeholder="Εισάγετε τίτλο εργασίας" disabled="@isInvoiced" />
                                    <ValidationMessage For="@(() => job.Title)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Title").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Title"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Job Type and Status -->
                                <div class="col-md-6">
                                    <label class="form-label required">Τύπος Εργασίας</label>
                                    <InputSelect @bind-Value="job.Type" class="@(validationErrors?.GetFieldErrors("Type").Any() == true ? "form-select is-invalid" : "form-select")" @bind-Value:after="OnJobTypeChanged" disabled="@isInvoiced">
                                        <option value="">-- Επιλέξτε Τύπο Εργασίας --</option>
                                        <option value="@JobType.SkipRental">Ενοικίαση Skip</option>
                                        <option value="@JobType.SandDelivery">Παράδοση Άμμου</option>
                                        <option value="@JobType.ForkLiftService">Υπηρεσία Forklift</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => job.Type)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Type").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Type"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Κατάσταση</label>
                                    <InputSelect @bind-Value="job.Status" class="form-select">
                                        @{
                                            var currentStatus = job.Status;
                                        }
                                        
                                        @* Always show current status *@
                                        <option value="@currentStatus" selected>@currentStatus (Τρέχουσα)</option>
                                        
                                        @* Show valid transitions based on current status *@
                                        @if (currentStatus == JobStatus.New)
                                        {
                                            <option value="@JobStatus.Active">Ενεργή</option>
                                            <option value="@JobStatus.Cancelled">Ακυρωμένη</option>
                                        }
                                        else if (currentStatus == JobStatus.Active)
                                        {
                                            <option value="@JobStatus.Completed">Ολοκληρωμένη</option>
                                            <option value="@JobStatus.Cancelled">Ακυρωμένη</option>
                                        }
                                        else if (currentStatus == JobStatus.Completed)
                                        {
                                            <option value="@JobStatus.Active">Ενεργή (Επαναφορά)</option>
                                        }
                                        else if (currentStatus == JobStatus.Cancelled)
                                        {
                                            <option value="@JobStatus.New">Νέα (Επανενεργοποίηση)</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => job.Status)" class="text-danger small" />
                                </div>

                                <!-- ===== CONDITIONAL TYPE-SPECIFIC FIELDS ===== -->

                                <!-- SKIP RENTAL FIELDS -->
                                @if (job.Type == JobType.SkipRental)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Ενοικίασης Skip</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Τύπος Skip</label>
                                        <InputSelect @bind-Value="job.SkipType" class="@(validationErrors?.GetFieldErrors("SkipType").Any() == true ? "form-select is-invalid" : "form-select")" @bind-Value:after="OnSkipTypeChanged" disabled="@isInvoiced">
                                            <option value="">-- Επιλέξτε Τύπο Skip --</option>
                                            <option value="SmallSkip">Μικρό Skip</option>
                                            <option value="LargeSkip">Μεγάλο Skip</option>
                                            <option value="Hook">Γάντζος</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SkipType)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SkipType").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SkipType"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>

                                    @if (job.SkipType == "SmallSkip" || job.SkipType == "LargeSkip")
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label required">Αριθμός Skip</label>
                                            <InputText @bind-Value="job.SkipNumber" class="@GetFieldErrorClass("SkipNumber")" 
                                                    placeholder="π.χ., SK-001" disabled="@isInvoiced" />
                                            <div class="form-text">Εισάγετε τον αριθμό αναγνώρισης του skip</div>
                                            <ValidationMessage For="@(() => job.SkipNumber)" class="text-danger small" />
                                            @if (validationErrors?.GetFieldErrors("SkipNumber").Any() == true)
                                            {
                                                @foreach (var error in validationErrors.GetFieldErrors("SkipNumber"))
                                                {
                                                    <div class="text-danger small">@error</div>
                                                }
                                            }
                                        </div>
                                    }
                                }

                                <!-- SAND DELIVERY FIELDS -->
                                @if (job.Type == JobType.SandDelivery)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Παράδοσης Άμμου</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Τύπος Υλικού</label>
                                        <InputSelect @bind-Value="job.SandMaterialType" class="@(validationErrors?.GetFieldErrors("SandMaterialType").Any() == true ? "form-select is-invalid" : "form-select")" disabled="@isInvoiced">
                                            <option value="">-- Επιλέξτε Υλικό --</option>
                                            <option value="Sand">Άμμος</option>
                                            <option value="CrushedStone">Τσακίλι</option>
                                            <option value="SandMixedWithCrushedStone">Άμμος Ανακατεμένη με Τσακίλι</option>
                                            <option value="Soil">Χώμα</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SandMaterialType)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SandMaterialType").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SandMaterialType"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Μέθοδος Παράδοσης</label>
                                        <InputSelect @bind-Value="job.SandDeliveryMethod" class="@(validationErrors?.GetFieldErrors("SandDeliveryMethod").Any() == true ? "form-select is-invalid" : "form-select")" disabled="@isInvoiced">
                                            <option value="">-- Επιλέξτε Μέθοδο --</option>
                                            <option value="InBags">Σε Σάκους</option>
                                            <option value="ByTruck">Με Φορτηγό</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.SandDeliveryMethod)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("SandDeliveryMethod").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("SandDeliveryMethod"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <!-- FORKLIFT SERVICE FIELDS -->
                                @if (job.Type == JobType.ForkLiftService)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info py-2">
                                            <i class="bi bi-info-circle me-2"></i>
                                            <strong>Λεπτομέρειες Υπηρεσίας Forklift</strong>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label required">Μέγεθος Forklift</label>
                                        <InputSelect @bind-Value="job.ForkliftSize" class="@(validationErrors?.GetFieldErrors("ForkliftSize").Any() == true ? "form-select is-invalid" : "form-select")" disabled="@isInvoiced">
                                            <option value="">-- Επιλέξτε Μέγεθος --</option>
                                            <option value="17m">17μ</option>
                                            <option value="25m">25μ</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => job.ForkliftSize)" class="text-danger small" />
                                        @if (validationErrors?.GetFieldErrors("ForkliftSize").Any() == true)
                                        {
                                            @foreach (var error in validationErrors.GetFieldErrors("ForkliftSize"))
                                            {
                                                <div class="text-danger small">@error</div>
                                            }
                                        }
                                    </div>
                                }

                                <!-- Address with Autocomplete -->
                                <div class="col-12">
                                    <label class="form-label required">Διεύθυνση Υπηρεσίας</label>
                                    <div class="position-relative">
                                        <input type="text" 
                                               class="@GetFieldErrorClass("Address")" 
                                               value="@job.Address"
                                               @oninput="OnAddressInput"
                                               @onfocus="@(() => { if (addressSuggestions.Any()) showAddressSuggestions = true; })"
                                               @onblur="HideAddressSuggestions"
                                               placeholder="Αρχίστε να πληκτρολογείτε μια διεύθυνση..."
                                               autocomplete="off"
                                               disabled="@isInvoiced" />
                                        
                                        @if (isSearchingAddresses)
                                        {
                                            <div class="position-absolute end-0 top-50 translate-middle-y me-2">
                                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                    <span class="visually-hidden">Αναζήτηση...</span>
                                                </div>
                                            </div>
                                        }
                                        
                                        @if (showAddressSuggestions && addressSuggestions.Any() && !isInvoiced)
                                        {
                                            <div class="address-suggestions">
                                                @foreach (var suggestion in addressSuggestions)
                                                {
                                                    <div class="address-suggestion-item" @onmousedown="@(() => SelectAddress(suggestion))">
                                                        <i class="bi bi-geo-alt me-2 text-muted"></i>
                                                        @suggestion
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                    <div class="form-text">Αρχίστε να πληκτρολογείτε για να δείτε προηγούμενες διευθύνσεις, ή εισάγετε μια νέα</div>
                                    <ValidationMessage For="@(() => job.Address)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Address").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Address"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Start Date and Price -->
                                <div class="col-md-6">
                                    <label class="form-label required">Ημερομηνία Έναρξης</label>
                                    <InputDate @bind-Value="job.StartDate" class="@GetFieldErrorClass("StartDate")" disabled="@isInvoiced" />
                                    <ValidationMessage For="@(() => job.StartDate)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("StartDate").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("StartDate"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">Τιμή (€)</label>
                                    <InputNumber @bind-Value="job.Price" class="@GetFieldErrorClass("Price")" 
                                            placeholder="0.00" step="0.01" disabled="@isInvoiced" />
                                    <ValidationMessage For="@(() => job.Price)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Price").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Price"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label class="form-label">Περιγραφή</label>
                                    <InputTextArea @bind-Value="job.Description" class="@GetFieldErrorClass("Description")" rows="3" 
                                                placeholder="Πρόσθετες λεπτομέρειες για αυτή την εργασία (π.χ. ειδικές απαιτήσεις)..." disabled="@isInvoiced" />
                                    <ValidationMessage For="@(() => job.Description)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Description").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Description"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Εσωτερικές Σημειώσεις</label>
                                    <InputTextArea @bind-Value="job.Notes" class="@GetFieldErrorClass("Notes")" rows="2" 
                                                placeholder="Εσωτερικές σημειώσεις (δεν είναι ορατές στον πελάτη)..." />
                                    <ValidationMessage For="@(() => job.Notes)" class="text-danger small" />
                                    @if (validationErrors?.GetFieldErrors("Notes").Any() == true)
                                    {
                                        @foreach (var error in validationErrors.GetFieldErrors("Notes"))
                                        {
                                            <div class="text-danger small">@error</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mb-0" role="alert">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            @errorMessage
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(successMessage))
                                    {
                                        <div class="alert alert-success mb-0" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            @successMessage
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@GetReturnUrl()" class="btn btn-outline-secondary">
                                        Ακύρωση
                                    </a>
                                    <button type="submit" class="btn btn-primary" disabled="@(isSaving || isInvoiced)">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        }
                                        @(isSaving ? "Αποθήκευση..." : isInvoiced ? "Δεν Μπορεί να Αποθηκευτεί (Τιμολογημένη)" : "Αποθήκευση Αλλαγών")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Job Status -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Κατάσταση Εργασίας</h6>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="badge bg-@job.StatusColor fs-6 px-3 py-2">
                                    <i class="@job.StatusIcon me-2"></i>
                                    @job.StatusDisplay
                                </span>
                            </div>
                            <div class="row text-center g-3">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h5 text-primary mb-1">@job.DurationDays</div>
                                        <small class="text-muted">Ημέρες</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h5 text-success mb-1">€@job.Price.ToString("N2")</div>
                                        <small class="text-muted">Τιμή</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    @if (customer != null)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white py-3">
                                <h6 class="mb-0">Πληροφορίες Πελάτη</h6>
                            </div>
                            <div class="card-body">
                                <div class="small">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Όνομα:</span>
                                        <span class="fw-medium">@customer.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(customer.Email))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Email:</span>
                                            <a href="mailto:@customer.Email" class="fw-medium text-decoration-none">@customer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(customer.Phone))
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Τηλέφωνο:</span>
                                            <a href="tel:@customer.Phone" class="fw-medium text-decoration-none">@customer.Phone</a>
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Δημιουργήθηκε:</span>
                                        <span class="fw-medium">@customer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                        <span class="fw-medium">@((customer.UpdatedDate ?? customer.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                    </div>

                                    <!-- Work Status -->
                                    <div class="pb-2 border-bottom mb-2">
                                        @if (customer.HasActiveWork)
                                        {
                                            <div class="mb-1">
                                                <span class="text-success">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    @((customer.ActiveJobs + customer.NewJobs)) εργασίες σε εξέλιξη
                                                </span>
                                            </div>
                                        }
                                        else if (customer.CompletedJobs > 0)
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Τελευταία εργασία ολοκληρώθηκε
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-1">
                                                <span class="text-muted">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    Δεν υπάρχουν εργασίες ακόμα
                                                </span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Financial Status -->
                                    @if (customer.UninvoicedJobs > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-circle me-1"></i>
                                                @customer.UninvoicedJobs εργασίες χωρίς τιμολόγηση
                                            </span>
                                        </div>
                                    }

                                    @if (customer.UnpaidInvoices > 0)
                                    {
                                        <div>
                                            <span class="text-danger">
                                                @customer.UnpaidInvoices απλήρωτα (€@customer.OutstandingAmount.ToString("N2"))
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Job Details -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Λεπτομέρειες Εργασίας</h6>
                        </div>
                        <div class="card-body">
                            <div class="small">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Δημιουργήθηκε:</span>
                                    <span class="fw-medium">@job.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τελευταία Ενημέρωση:</span>
                                    <span class="fw-medium">@((job.UpdatedDate ?? job.CreatedDate).ToString("dd/MM/yyyy"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Τύπος Εργασίας:</span>
                                    <span class="badge bg-light text-dark">
                                        <i class="@job.TypeIcon me-1"></i>
                                        @job.TypeDisplayName
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h6 class="mb-0">Γρήγορες Ενέργειες</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (customer != null && !isCustomerDeleted)
                                {
                                    <a href="/customer/@customer.Id/jobs" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-person me-1"></i>
                                        Προβολή Εργασιών Πελάτη
                                    </a>
                                }
                                
                                @if (job?.Status == JobStatus.Completed && !job.IsInvoiced)
                                {
                                    @if (!isCustomerDeleted)
                                    {
                                        <button type="button" class="btn btn-success" @onclick="GenerateInvoice">
                                            <i class="bi bi-file-earmark-text me-1"></i>
                                            Δημιουργία Τιμολογίου
                                        </button>
                                    }
                                }
                                else if (job?.Status == JobStatus.New)
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm" @onclick="() => QuickStatusChange(JobStatus.Active)">
                                        <i class="bi bi-play-circle me-1"></i>
                                        Έναρξη Εργασίας
                                    </button>
                                }
                                else if (job?.Status == JobStatus.Active)
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm" @onclick="() => QuickStatusChange(JobStatus.Completed)">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Σημείωση ως Ολοκληρωμένη
                                    </button>
                                }
                                
                                @if (isCustomerDeleted)
                                {
                                    <div class="text-muted text-center py-2 small">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Οι ενέργειες για συγκεκριμένο πελάτη δεν είναι διαθέσιμες
                                    </div>
                                }
                                
                                <hr class="my-2">
                                
                                @if (job?.Status == JobStatus.Active || job?.Status == JobStatus.Completed || isInvoiced)
                                {
                                    <button type="button" class="btn btn-outline-danger btn-sm" disabled="true" 
                                            title="@GetDeleteDisabledReason()">
                                        <i class="bi bi-lock me-1"></i>
                                        @GetDeleteButtonText()
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-danger btn-sm" @onclick="ShowDeleteConfirmation">
                                        <i class="bi bi-trash me-1"></i>
                                        Διαγραφή Εργασίας
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Εργασίας</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτή η ενέργεια θα διαγράψει οριστικά την εργασία <strong>@job?.Title</strong>.
                            Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                        </p>
                        @if (isInvoiced)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-x-circle me-2"></i>
                                <strong>Δεν Μπορεί να Διαγραφεί:</strong> Αυτή η εργασία έχει τιμολογηθεί και δεν μπορεί να διαγραφεί. 
                                Αφαιρέστε την από το τιμολόγιο πρώτα.
                            </div>
                        }
                        else if (job?.Status == JobStatus.Completed)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-x-circle me-2"></i>
                                <strong>Δεν Μπορεί να Διαγραφεί:</strong> Οι ολοκληρωμένες εργασίες δεν μπορούν να διαγραφούν. 
                                Πρέπει να διατηρηθούν για ίχνος ελέγχου και οικονομική αναφορά.
                            </div>
                        }
                        else if (job?.Status == JobStatus.Active)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-x-circle me-2"></i>
                                <strong>Δεν Μπορεί να Διαγραφεί:</strong> Οι ενεργές εργασίες δεν μπορούν να διαγραφούν. 
                                Παρακαλώ σημειώστε την εργασία ως ακυρωμένη πρώτα.
                            </div>
                        }
                        else if (job?.Status == JobStatus.Cancelled)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Προειδοποίηση:</strong> Αυτή η εργασία έχει ακυρωθεί. 
                                Η διαγραφή θα την αφαιρέσει οριστικά από τα αρχεία σας.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Εργασίας")
                    </button>
                </div>
            </div>
        </div>
    </div>
}