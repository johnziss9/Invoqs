@using Invoqs.Models

<div class="card h-100 shadow-sm invoice-card">
    <div class="card-body d-flex flex-column">
        <!-- Error Message Alert -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        <!-- Header with invoice number and status -->
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="invoice-number">
                <h6 class="text-primary mb-1 fw-bold">@Invoice.InvoiceNumber</h6>
            </div>
            <div class="d-flex align-items-center gap-2">
                <div class="d-flex align-items-center gap-2">
                    <span class="badge @Invoice.StatusBadgeClass">
                        <i class="@Invoice.StatusIcon me-1"></i>
                        @Invoice.StatusDisplay
                    </span>
                </div>
                <div class="dropdown">
                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (Invoice.Status == InvoiceStatus.Draft)
                        {
                            <!-- Draft actions: Edit, Send, Delete -->
                            <li><a class="dropdown-item" href="/invoice/@Invoice.Id/edit">
                                    <i class="bi bi-pencil me-2"></i>Επεξεργασία Τιμολογίου
                                </a></li>
                            <li><button class="dropdown-item" @onclick="ShowSendConfirmation">
                                    <i class="bi bi-send me-2"></i>Αποστολή με Email
                                </button></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (Invoice.Status != InvoiceStatus.Draft)
                            {
                                <li><span class="dropdown-item-text text-muted" title="@GetDeleteDisabledReason()">
                                        <i class="bi bi-lock me-2"></i>@GetDeleteButtonText()
                                    </span></li>
                            }
                            else
                            {
                                <li><button class="dropdown-item text-danger" @onclick="ShowDeleteConfirmation">
                                        <i class="bi bi-trash me-2"></i>Διαγραφή
                                    </button></li>
                            }
                        }
                        else if (Invoice.Status == InvoiceStatus.Sent || Invoice.Status == InvoiceStatus.Delivered || Invoice.Status == InvoiceStatus.Overdue)
                        {
                            <!-- Sent/Delivered/Overdue actions: Mark as Paid, Cancel -->
                            <li><button class="dropdown-item text-success" @onclick="ShowMarkAsPaidConfirmation">
                                    <i class="bi bi-check-circle me-2"></i>Σήμανση ως Πληρωμένο
                                </button></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item text-danger" @onclick="ShowCancelConfirmation">
                                    <i class="bi bi-x-circle me-2"></i>Ακύρωση Τιμολογίου
                                </button></li>
                        }
                        else if (Invoice.Status == InvoiceStatus.Paid)
                        {
                            <!-- Paid invoice - informational only -->
                            <li><span class="dropdown-item-text text-muted">
                                    Πληρώθηκε στις @Invoice.PaymentDate?.ToString("dd/MM/yyyy")
                                </span></li>
                            @if (!string.IsNullOrEmpty(Invoice.PaymentMethod))
                            {
                                <li><span class="dropdown-item-text text-muted">
                                        μέσω @TranslatePaymentMethod(Invoice.PaymentMethod)
                                    </span></li>
                            }
                        }
                        else if (Invoice.Status == InvoiceStatus.Cancelled)
                        {
                            <!-- Cancelled invoice - informational only -->
                            <li><span class="dropdown-item-text text-muted">
                                    Δεν υπάρχουν διαθέσιμες ενέργειες
                                </span></li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Customer Information -->
        <div class="customer-info mb-3">
            <div class="d-flex align-items-center mb-2">
                <div class="avatar-circle bg-primary text-white me-2">
                    @GetCustomerInitials()
                </div>
                <div class="flex-grow-1">
                    @if (Invoice.CustomerIsDeleted)
                    {
                        <h6 class="mb-0">
                            <span class="text-decoration-line-through">@Invoice.CustomerName</span>
                            <span class="text-danger ms-2">(Διαγράφηκε)</span>
                        </h6>
                    }
                    else
                    {
                        <h6 class="mb-0">@(Invoice.CustomerName ?? "Άγνωστος Πελάτης")</h6>
                    }
                    <small class="text-muted">@(Invoice.CustomerEmail ?? "")</small>
                </div>
            </div>
        </div>

        <!-- Invoice Details -->
        <div class="invoice-details mb-3 flex-grow-1">
            <div class="detail-item mb-2">
                <i class="bi bi-calendar text-muted me-2"></i>
                <span class="text-muted small">
                    Δημιουργήθηκε: @Invoice.CreatedDate.ToString("dd/MM/yyyy")
                </span>
            </div>

            <div class="detail-item mb-2">
                <i class="bi bi-calendar-event text-muted me-2"></i>
                <span class="text-muted small @(Invoice.IsOverdue ? "text-danger fw-bold" : "")">
                    Λήξη: @Invoice.DueDate.ToString("dd/MM/yyyy")
                </span>
            </div>

            @if (Invoice.PaymentDate.HasValue)
            {
                <div class="detail-item mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>
                    <span class="text-success small">
                        Πληρώθηκε: @Invoice.PaymentDate.Value.ToString("dd/MM/yyyy")
                    </span>
                </div>
            }

            <div class="detail-item mb-2">
                <i class="bi bi-receipt text-muted me-2"></i>
                <span class="text-muted small">
                    @Invoice.LineItems.Count εργασία(ες) • @Invoice.VatRate% ΦΠΑ
                </span>
            </div>

            @if (!string.IsNullOrEmpty(Invoice.Notes))
            {
                <div class="detail-item mb-2">
                    <i class="bi bi-sticky text-muted me-2"></i>
                    <span class="text-muted small">@Invoice.Notes</span>
                </div>
            }
        </div>

        <!-- Invoice Totals -->
        <div class="invoice-totals mb-3">
            <div class="row text-center">
                <div class="col-4">
                    <div class="stat-number text-muted small">€@Invoice.Subtotal.ToString("N2")</div>
                    <div class="stat-label text-muted small">Υποσύνολο</div>
                </div>
                <div class="col-4">
                    <div class="stat-number text-muted small">€@Invoice.VatAmount.ToString("N2")</div>
                    <div class="stat-label text-muted small">ΦΠΑ</div>
                </div>
                <div class="col-4">
                    <div class="stat-number text-success fw-bold">€@Invoice.Total.ToString("N2")</div>
                    <div class="stat-label text-muted small">Σύνολο</div>
                </div>
            </div>
        </div>

        <!-- Due Date Display -->
        <div class="due-date-display mb-3 text-center">
            <div
                class="@(Invoice.IsOverdue ? "text-danger" : Invoice.DaysUntilDue <= 7 ? "text-warning" : "text-muted")">
                <i class="@(Invoice.IsOverdue ? "bi-exclamation-triangle" : "bi-calendar-event") me-1"></i>
                <small>@Invoice.DueDateDisplay</small>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-auto">
            <div class="d-flex gap-2">
                <a href="/invoice/@Invoice.Id" class="btn btn-primary btn-sm flex-fill">
                    <i class="bi bi-eye me-1"></i>
                    Προβολή Λεπτομερειών
                </a>
            </div>
        </div>
    </div>
</div>

@* Send Confirmation Modal *@
@if (showSendConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Αποστολή Τιμολογίου</h5>
                    <button type="button" class="btn-close" @onclick="HideSendConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-envelope text-primary" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Αποστολή Τιμολογίου;</h5>
                        <p class="text-muted">
                            Αυτό θα στείλει το τιμολόγιο <strong>@Invoice.InvoiceNumber</strong> στον πελάτη.
                            Η κατάσταση του τιμολογίου θα αλλάξει σε "Απεσταλμένο".
                        </p>
                        @if (Invoice.Status == InvoiceStatus.Draft)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Αυτό το τιμολόγιο είναι προς το παρόν σε κατάσταση πρόχειρου. Η αποστολή θα οριστικοποιήσει το τιμολόγιο.
                            </div>
                        }
                        @if (Invoice.Total > 1000)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Τιμολόγιο Υψηλής Αξίας:</strong> Αυτό το τιμολόγιο είναι για €@Invoice.Total.ToString("N2"). Παρακαλώ
                                επαληθεύστε ότι όλες οι λεπτομέρειες είναι σωστές.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideSendConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmSend" disabled="@isSending">
                        @if (isSending)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-send me-1"></i>
                        }
                        @(isSending ? "Αποστολή..." : "Αποστολή Τιμολογίου")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Delete Confirmation Modal (for Draft invoices) *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Πρόχειρου Τιμολογίου</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Διαγραφή αυτού του πρόχειρου τιμολογίου;</h5>
                        <p class="text-muted">
                            Αυτό θα διαγράψει οριστικά το πρόχειρο τιμολόγιο <strong>@Invoice.InvoiceNumber</strong>.
                            Οι συσχετισμένες εργασίες θα είναι διαθέσιμες για επανατιμολόγηση.
                        </p>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Αυτό το τιμολόγιο είναι ακόμα σε κατάσταση πρόχειρου και δεν έχει σταλεί στον πελάτη.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Διατήρηση Πρόχειρου</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Πρόχειρου")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Cancel Confirmation Modal (for Sent/Overdue invoices) *@
@if (showCancelConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ακύρωση Τιμολογίου</h5>
                    <button type="button" class="btn-close" @onclick="HideCancelConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-x-circle text-warning" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Ακύρωση αυτού του τιμολογίου;</h5>
                        <p class="text-muted">
                            Αυτό θα ακυρώσει το τιμολόγιο <strong>@Invoice.InvoiceNumber</strong> και θα το σημειώσει ως μη έγκυρο.
                            Οι συσχετισμένες εργασίες θα είναι διαθέσιμες για επανατιμολόγηση.
                        </p>
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Σημείωση:</strong> Αυτό το τιμολόγιο έχει ήδη σταλεί στον πελάτη.
                            Μια ειδοποίηση ακύρωσης θα σταλεί αυτόματα.
                        </div>
                    </div>

                    <!-- Cancellation Reason -->
                    <div class="mt-3">
                        <label class="form-label">Λόγος ακύρωσης:</label>
                        <select class="form-select" @bind="cancellationReason">
                            <option value="">Επιλέξτε λόγο...</option>
                            <option value="Customer Request">Αίτημα Πελάτη</option>
                            <option value="Service Not Completed">Υπηρεσία Δεν Ολοκληρώθηκε</option>
                            <option value="Pricing Error">Λάθος Τιμολόγησης</option>
                            <option value="Duplicate Invoice">Διπλό Τιμολόγιο</option>
                            <option value="Other">Άλλο</option>
                        </select>
                        @if (cancellationReason == "Other")
                        {
                            <textarea class="form-control mt-2" @bind="customCancellationReason"
                                placeholder="Παρακαλώ προσδιορίστε τον λόγο..." rows="3"></textarea>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideCancelConfirmation">Διατήρηση Τιμολογίου</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmCancel"
                        disabled="@(isCancelling || string.IsNullOrEmpty(cancellationReason))">
                        @if (isCancelling)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle me-1"></i>
                        }
                        @(isCancelling ? "Ακύρωση..." : "Ακύρωση Τιμολογίου")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Mark as Paid Confirmation Modal *@
@if (showMarkAsPaidConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Σήμανση Τιμολογίου ως Πληρωμένο</h5>
                    <button type="button" class="btn-close" @onclick="HideMarkAsPaidConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Σήμανση ως Πληρωμένο;</h5>
                        <p class="text-muted">
                            Αυτό θα σημειώσει το τιμολόγιο <strong>@Invoice.InvoiceNumber</strong> ως πληρωμένο.
                            Συνολικό ποσό: <strong>€@Invoice.Total.ToString("N2")</strong>
                        </p>
                    </div>

                    <!-- Payment Details -->
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Ημερομηνία Πληρωμής:</label>
                                <input type="date" class="form-control" @bind="paymentDate" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Μέθοδος Πληρωμής:</label>
                                <select class="form-select" @bind="paymentMethod">
                                    <option value="Bank Transfer">Τραπεζική Μεταφορά</option>
                                    <option value="Cash">Μετρητά</option>
                                    <option value="Cheque">Επιταγή</option>
                                    <option value="Credit Card">Πιστωτική Κάρτα</option>
                                    <option value="Other">Άλλο</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label">Αναφορά Πληρωμής (προαιρετικό):</label>
                            <input type="text" class="form-control" @bind="paymentReference"
                                placeholder="Αριθμός συναλλαγής, αριθμός επιταγής, κλπ." />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideMarkAsPaidConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-success" @onclick="ConfirmMarkAsPaid" disabled="@isMarkingPaid">
                        @if (isMarkingPaid)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle me-1"></i>
                        }
                        @(isMarkingPaid ? "Επεξεργασία..." : "Σήμανση ως Πληρωμένο")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Mark as Delivered Confirmation Modal *@
@if (showDeliveredConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Σήμανση Τιμολογίου ως Παραδομένο</h5>
                    <button type="button" class="btn-close" @onclick="HideDeliveredConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-hand-thumbs-up text-info" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Σήμανση ως Παραδομένο;</h5>
                        <p class="text-muted">
                            Αυτό θα σημειώσει το τιμολόγιο <strong>@Invoice.InvoiceNumber</strong> ως παραδομένο στον πελάτη.
                            Η κατάσταση του τιμολογίου θα αλλάξει σε "Παραδομένο".
                        </p>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Μπορείτε ακόμα να στείλετε αυτό το τιμολόγιο μέσω email αργότερα αν χρειαστεί.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeliveredConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-info" @onclick="ConfirmDeliver" disabled="@isMarkingDelivered">
                        @if (isMarkingDelivered)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-hand-thumbs-up me-1"></i>
                        }
                        @(isMarkingDelivered ? "Επεξεργασία..." : "Σήμανση ως Παραδομένο")
                    </button>
                </div>
            </div>
        </div>
    </div>
}