@using Invoqs.Models

<div class="card h-100 shadow-sm customer-card">
    <div class="card-body d-flex flex-column">
        <!-- Error Message Alert -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="customer-avatar">
                <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center">
                    @GetInitials(Customer.Name)
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/customer/@Customer.Id/jobs"><i class="bi bi-calendar-check me-2"></i>Εργασίες Πελάτη</a></li>
                    <li><a class="dropdown-item" href="/customer/@Customer.Id/invoices"><i class="bi bi-file-earmark-text me-2"></i>Τιμολόγια Πελάτη</a></li>
                    <li><a class="dropdown-item" href="/customer/@Customer.Id/receipts"><i class="bi bi-receipt-cutoff me-2"></i>Αποδείξεις Πελάτη</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/customer/@Customer.Id/invoice/new?returnUrl=@Uri.EscapeDataString(Navigation.Uri)"><i class="bi bi-file-earmark-plus me-2"></i>Δημιουργία Τιμολογίου</a></li>
                    <li><a class="dropdown-item" href="/receipt/new?customerId=@Customer.Id&returnUrl=@Uri.EscapeDataString(Navigation.Uri)"><i class="bi bi-receipt me-2"></i>Δημιουργία Απόδειξης</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" @onclick="() => EditCustomer(Customer.Id)"><i class="bi bi-pencil me-2"></i>Επεξεργασία</a></li>
                    <li><hr class="dropdown-divider"></li>
                    @if (Customer.ActiveJobs > 0)
                    {
                        <li><span class="dropdown-item-text text-muted" title="@GetDeleteDisabledReason()">
                                <i class="bi bi-lock me-2"></i>@GetDeleteButtonText()
                            </span></li>
                    }
                    else
                    {
                        <li><button class="dropdown-item text-danger" @onclick="ShowDeleteConfirmation">
                                <i class="bi bi-trash me-2"></i>Διαγραφή
                            </button></li>
                    }
                </ul>
            </div>
        </div>

        <h5 class="card-title text-primary mb-2">@Customer.Name</h5>

        <div class="customer-details mb-3 flex-grow-1">
            <div class="detail-item mb-2">
                <i class="bi bi-envelope text-muted me-2"></i>
                <span class="text-muted small">@Customer.Email</span>
            </div>
            <div class="detail-item mb-2">
                <i class="bi bi-telephone text-muted me-2"></i>
                <span class="text-muted small">@Customer.Phone</span>
            </div>
        </div>

        <div class="customer-stats mb-3">
            <div class="row text-center">
                <div class="col-4">
                    <div class="stat-number text-primary fw-bold">@Customer.ActiveJobs</div>
                    <div class="stat-label text-muted small">Ενεργές Εργασίες</div>
                </div>
                <div class="col-4">
                    <div class="stat-number text-success fw-bold">@Customer.CompletedJobs</div>
                    <div class="stat-label text-muted small">Ολοκληρωμένες</div>
                </div>
                <div class="col-4">
                    <div class="stat-number text-warning fw-bold">€@Customer.TotalRevenue.ToString("N0")</div>
                    <div class="stat-label text-muted small">Έσοδα</div>
                </div>
            </div>
        </div>

        <div class="mt-auto">
            <div class="d-grid">
                <a href="/customer/@Customer.Id" class="btn btn-primary btn-sm">
                    <i class="bi bi-eye me-1"></i>
                    Προβολή Λεπτομερειών
                </a>
            </div>
        </div>
    </div>
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Πελάτη</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Είστε σίγουροι;</h5>
                        <p class="text-muted">
                            Αυτό θα διαγράψει οριστικά τον/την <strong>@Customer.Name</strong> και όλα τα σχετικά δεδομένα.
                            Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                        </p>
                        @if (Customer.ActiveJobs > 0 || Customer.CompletedJobs > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Αυτός ο πελάτης έχει @(Customer.ActiveJobs + Customer.CompletedJobs) συσχετισμένες εργασίες που θα παραμείνουν στο σύστημα.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Πελάτη")
                    </button>
                </div>
            </div>
        </div>
    </div>
}