@using Invoqs.Models

<div class="card h-100 shadow-sm job-card">
    <div class="card-body d-flex flex-column">
        <!-- Error Message Alert -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        <!-- Header with status and actions -->
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="job-type-icon">
                @if (Job.TypeIcon.StartsWith("/images/"))
                {
                    <img src="@Job.TypeIcon" alt="@Job.TypeDisplayName" class="job-type-image" />
                }
                else
                {
                    <i class="@Job.TypeIcon text-primary fs-4"></i>
                }
            </div>
            <div class="d-flex align-items-center gap-2">
                <span class="badge bg-@Job.StatusColor">
                    <i class="@Job.StatusIcon me-1"></i>
                    @Job.StatusDisplay
                </span>
                @if (Job.IsInvoiced)
                {
                    <span class="badge bg-info text-white ms-1"
                        title="Invoiced on @Job.InvoicedDate?.ToString("dd/MM/yyyy")">
                        <i class="bi bi-receipt me-1"></i>
                        Invoiced
                    </span>
                }
                <div class="dropdown">
                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <!-- Status Change Actions -->
                        @{
                            var hasStatusOptions = false;
                            
                            var canGoToActive = Job.Status == JobStatus.New || Job.Status == JobStatus.Cancelled;
                            var canGoToCompleted = Job.Status == JobStatus.Active;
                            var canGoToCancelled = Job.Status == JobStatus.New || Job.Status == JobStatus.Active;
                            var canGoToNew = Job.Status == JobStatus.Cancelled;
                            
                            hasStatusOptions = canGoToActive || canGoToCompleted || canGoToCancelled || canGoToNew;
                        }

                        @if (hasStatusOptions)
                        {
                            <li>
                                <h6 class="dropdown-header">Αλλαγή Κατάστασης</h6>
                            </li>
                            
                            @if (canGoToNew)
                            {
                                <li><button class="dropdown-item"
                                        @onclick="() => HandleStatusChange(JobStatus.New)"
                                        @onclick:preventDefault="true">
                                        <i class="bi bi-clock me-2"></i>Σήμανση ως Νέα
                                    </button></li>
                            }
                            
                            @if (canGoToActive)
                            {
                                <li><button class="dropdown-item"
                                        @onclick="() => HandleStatusChange(JobStatus.Active)"
                                        @onclick:preventDefault="true">
                                        <i class="bi bi-play-circle me-2"></i>Σήμανση ως Ενεργή
                                    </button></li>
                            }
                            
                            @if (canGoToCompleted)
                            {
                                <li><button class="dropdown-item"
                                        @onclick="() => HandleStatusChange(JobStatus.Completed)"
                                        @onclick:preventDefault="true">
                                        <i class="bi bi-check-circle me-2"></i>Σήμανση ως Ολοκληρωμένη
                                    </button></li>
                            }
                            
                            @if (canGoToCancelled)
                            {
                                <li><button class="dropdown-item text-danger"
                                        @onclick="() => HandleStatusChange(JobStatus.Cancelled)"
                                        @onclick:preventDefault="true">
                                        <i class="bi bi-x-circle me-2"></i>Σήμανση ως Ακυρωμένη
                                    </button></li>
                            }
                            
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                        }

                        <!-- Job Actions -->
                        <li><button class="dropdown-item" @onclick="() => HandleEditJob(Job.Id)"
                                @onclick:preventDefault="true">
                                <i class="bi bi-pencil me-2"></i>Επεξεργασία Εργασίας
                            </button></li>
                        @if (Job.CanBeInvoiced)
                        {
                            <li><button class="dropdown-item text-success" @onclick="HandleGenerateInvoiceClick"
                                    @onclick:preventDefault="true">
                                    <i class="bi bi-file-earmark-text me-2"></i>Δημιουργία Τιμολογίου
                                </button></li>
                        }
                        else if (Job.Status == JobStatus.Completed && Job.IsInvoiced)
                        {
                            <li><span class="dropdown-item-text text-muted">
                                    <i class="bi bi-check-circle me-2"></i>Ήδη Τιμολογημένη
                                </span></li>
                        }

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <!-- Danger Zone -->
                        @if (Job.IsInvoiced || Job.Status == JobStatus.Active || Job.Status == JobStatus.Completed)
                        {
                            <li><span class="dropdown-item-text text-muted" title="@GetDeleteDisabledReason()">
                                    <i class="bi bi-lock me-2"></i>@GetDeleteButtonText()
                                </span></li>
                        }
                        else
                        {
                            <li><button class="dropdown-item text-danger" @onclick="ShowDeleteConfirmation"
                                    @onclick:preventDefault="true">
                                    <i class="bi bi-trash me-2"></i>Διαγραφή Εργασίας
                                </button></li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Job Title and Type -->
        <h5 class="card-title text-primary mb-2">@Job.Title</h5>
        <div class="mb-3">
            <span class="badge bg-light text-dark mb-2">
                <i class="@Job.TypeIcon me-1"></i>
                @Job.TypeDisplayName
            </span>
            <div class="mt-2">
                <small class="text-muted">
                    <i class="bi bi-building me-1"></i>
                    @if (Job.CustomerIsDeleted)
                    {
                        <span class="text-decoration-line-through">@Job.CustomerName</span>
                        <span class="text-danger ms-1">(Διαγράφηκε)</span>
                    }
                    else
                    {
                        @Job.CustomerName
                    }
                </small>
            </div>

            <!-- ===== TYPE-SPECIFIC INFO BADGES ===== -->
            @if (Job.Type == JobType.SkipRental && !string.IsNullOrEmpty(Job.SkipNumber))
            {
                <div class="mt-2">
                    <small class="badge bg-secondary">
                        #@Job.SkipNumber
                    </small>
                </div>
            }
            @if (Job.Type == JobType.SandDelivery && !string.IsNullOrEmpty(Job.SandMaterialType))
            {
                <div class="mt-2">
                    <small class="badge bg-secondary">
                        @Job.SandMaterialTypeDisplay
                    </small>
                </div>
            }
            @if (Job.Type == JobType.ForkLiftService && !string.IsNullOrEmpty(Job.ForkliftSize))
            {
                <div class="mt-2">
                    <small class="badge bg-secondary">
                        @Job.ForkliftSizeDisplay
                    </small>
                </div>
            }
        </div>

        <!-- Job Details -->
        <div class="job-details mb-3 flex-grow-1">
            <div class="detail-item mb-2">
                <i class="bi bi-geo-alt text-muted me-2"></i>
                <span class="text-muted small">@Job.Address</span>
            </div>

            @if (!string.IsNullOrWhiteSpace(Job.Description))
            {
                <div class="detail-item mb-2">
                    <i class="bi bi-file-text text-muted me-2"></i>
                    <span class="text-muted small">@Job.Description</span>
                </div>
            }

            <div class="detail-item mb-2">
                <i class="bi bi-calendar text-muted me-2"></i>
                <span class="text-muted small">
                    Έναρξη: @Job.StartDate.ToString("MMM dd, yyyy")
                    @if (Job.EndDate.HasValue)
                    {
                        <br />
                        <span>Λήξη: @Job.EndDate.Value.ToString("MMM dd, yyyy")</span>
                    }
                </span>
            </div>
        </div>

        <!-- Job Stats -->
        <div class="job-stats mb-3">
            <div class="row text-center">
                <div class="col-6">
                    <div class="stat-number text-primary fw-bold">@Job.DurationDays</div>
                    <div class="stat-label text-muted small">Ημέρες</div>
                </div>
                <div class="col-6">
                    <div class="stat-number text-success fw-bold">€@Job.Price.ToString("N2")</div>
                    <div class="stat-label text-muted small">Τιμή</div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-auto">
            <div class="d-grid">
                <button class="btn btn-primary btn-sm" @onclick="() => ViewDetails(Job.Id)">
                    <i class="bi bi-eye me-1"></i>
                    Προβολή Λεπτομερειών
                </button>
            </div>
        </div>
    </div>
</div>

@* Delete Confirmation Modal *@
@if (showDeleteConfirmation)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Διαγραφή Εργασίας</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        <div class="text-center">
                            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Είστε σίγουροι;</h5>
                            <p class="text-muted">
                                Αυτό θα διαγράψει οριστικά την εργασία <strong>@Job.Title</strong> στο @Job.Address.
                                Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.
                            </p>
                            @if (Job.Status == JobStatus.Cancelled)
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Προειδοποίηση:</strong> Αυτή η εργασία έχει ακυρωθεί. 
                                    Η διαγραφή θα την αφαιρέσει οριστικά από τα αρχεία σας.
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">Ακύρωση</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        @(isDeleting ? "Διαγραφή..." : "Διαγραφή Εργασίας")
                    </button>
                </div>
            </div>
        </div>
    </div>
}